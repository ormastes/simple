# Complete Test: Implicit Variable Declarations with Naming Conventions

print("=== Implicit Declarations (No Keywords) ===\n")

print("1. Immutable variable (lowercase name):")
x = 10
print("   x = 10")
print("   x:", x)
print("   âœ… Cannot reassign (immutable by name)")

print("\n2. Mutable variable (underscore suffix):")
y_ = 20
print("   y_ = 20")
print("   y_:", y_)
y_ = 30
print("   y_ = 30")
print("   y_:", y_)
print("   âœ… Can reassign (mutable by name)")

print("\n3. Constant (ALL_CAPS):")
PI = 3.14159
print("   PI = 3.14159")
print("   PI:", PI)
print("   âœ… Cannot reassign (constant by name)")

print("\n=== Explicit Declarations (With Keywords) ===\n")

print("4. Explicit immutable (val):")
val a = 100
print("   val a = 100")
print("   a:", a)
print("   âœ… Explicitly immutable")

print("\n5. Explicit mutable (var):")
var b_ = 200
print("   var b_ = 200")
print("   b_:", b_)
b_ = 250
print("   b_ = 250")
print("   b_:", b_)
print("   âœ… Explicitly mutable")

print("\n=== Functional Updates ===\n")

print("6. Functional update on immutable:")
items = [1, 2, 3]
print("   items = [1, 2, 3]")
print("   items:", items)
items->append(4)
print("   items->append(4)")
print("   items:", items)
print("   âœ… Functional update allowed")

print("\n7. Functional update on mutable:")
data_ = [10, 20]
print("   data_ = [10, 20]")
print("   data_:", data_)
data_->append(30)
print("   data_->append(30)")
print("   data_:", data_)
print("   âœ… Functional update works on mutable too")

print("\n=== Summary ===\n")
print("âœ… Implicit declarations work without keywords")
print("âœ… Naming convention determines mutability:")
print("   - lowercase = immutable")
print("   - underscore_ = mutable")
print("   - ALL_CAPS = constant")
print("âœ… Explicit val/var keywords still supported")
print("âœ… Functional updates work on immutable variables")
