describe "Self-Protection Test":
    it "test 1":
        expect(1).to_equal(1)

    it "test 2":
        expect(2).to_equal(2)

    it "test 3":
        expect(3).to_equal(3)

    it "test 4":
        expect(4).to_equal(4)

    it "test 5":
        expect(5).to_equal(5)

    it "test 6 - should never run":
        expect(6).to_equal(6)

    it "test 7 - should never run":
        expect(7).to_equal(7)

    it "test 8 - should never run":
        expect(8).to_equal(8)
