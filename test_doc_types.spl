# Quick validation of doc_coverage types
use src.app.doc_coverage.types.mod.{DocKind, DocItem, FileCoverage, CoverageReport}

fn main():
    # Test DocItem creation
    val item = DocItem.create_function(
        "test_fn",
        "test.spl",
        10,
        5,
        "pub",
        "fn test_fn() -> i64"
    )
    print "Created DocItem: {item.name}"
    print "Kind: {item.kind_str()}"
    print "Documented: {item.is_documented()}"

    # Test FileCoverage
    val file_cov = FileCoverage.create("test.spl")
    print "File coverage: {file_cov.coverage_percent()}%"

    # Test CoverageReport
    val report = CoverageReport.create()
    print "Overall: {report.overall_percent()}%"
    print "SDoctest: {report.sdoctest_percent()}%"

    print "All type tests passed!"

main()
