use std.string.{NL, LF, CRLF, _NL, normalize_newlines}

print "=== Newline Constants Demo ==="
print ""

# Show the constants
print "LF (Unix):     '{LF}' (len={LF.len()})"
print "CR (Old Mac):  '{CR}' (len={CR.len()})"
print "CRLF (Windows): (len={CRLF.len()})"
print "_NL (Explicit): '{_NL}' (len={_NL.len()})"
print "NL (Platform):  (len={NL.len()})"
print ""

# String interpolation examples
print "=== String Interpolation ==="
val simple = "Line 1{NL}Line 2{NL}Line 3"
print simple
print ""

# Explicit LF with _NL
val explicit = "A{_NL}B{_NL}C"
print "Using _NL: {explicit}"
print ""

# Normalization example
print "=== Normalization ==="
val mixed = "Windows\r\nOld Mac\rUnix\nMixed!"
print "Before: '{mixed}'"
val normalized = normalize_newlines(mixed)
print "After:  '{normalized}'"
print ""

# Conversion example
print "=== Format Conversion ==="
val unix_text = "line1\nline2\nline3"
val to_windows = unix_text.replace(LF, CRLF)
print "Unix to Windows: length {unix_text.len()} -> {to_windows.len()}"
