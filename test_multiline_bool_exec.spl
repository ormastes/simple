# Integration Test: Multi-line Boolean Execution
#
# Tests that multi-line boolean expressions with parentheses execute correctly.

print "Testing multi-line boolean expressions with parentheses..."

# Test 1: Basic AND expression across lines
val a: bool = true
val b: bool = true
val c: bool = false

if (a and
    b):
    print "Test 1 PASS: (true and true) evaluated correctly"
else:
    print "Test 1 FAIL: Expected true"

# Test 2: Complex expression with AND and OR
val d: bool = true

if (a and
    b and
    c or
    d):
    print "Test 2 PASS: ((true and true and false) or true) evaluated correctly"
else:
    print "Test 2 FAIL: Expected true"

# Test 3: All false with OR
val e: bool = false
val f: bool = false

if (c or
    e or
    f):
    print "Test 3 FAIL: Expected false"
else:
    print "Test 3 PASS: (false or false or false) evaluated correctly"

# Test 4: Nested parentheses
if ((a and
     b) or
    (c and
     d)):
    print "Test 4 PASS: Nested parentheses evaluated correctly"
else:
    print "Test 4 FAIL: Expected true"

# Test 5: Function call with multi-line boolean
fn check_condition(x: bool, y: bool) -> bool:
    x and y

if check_condition(
    a,
    b):
    print "Test 5 PASS: Function call with multi-line args evaluated correctly"
else:
    print "Test 5 FAIL: Expected true"

# Test 6: Multi-line condition with indentation
val result: bool = (
    a and
    b and
    not c
)

if result:
    print "Test 6 PASS: Multi-line assignment with parentheses worked"
else:
    print "Test 6 FAIL: Expected true"

# Test 7: While loop with multi-line condition
var counter: i64 = 0
val max_count: i64 = 2

for iteration in 0..5:
    if (counter < max_count and
        a):
        counter = counter + 1

if counter == 2:
    print "Test 7 PASS: While loop with multi-line condition worked"
else:
    print "Test 7 FAIL: Expected counter == 2, got {counter}"

print "All tests completed!"
