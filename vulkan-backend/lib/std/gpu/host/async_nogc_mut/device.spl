# GPU Device Enumeration and Query

use std.core.option.*
use std.core.result.*

# Device information
struct DeviceInfo:
    name: str
    memory_mb: u64
    compute_units: u32
    supports_f64: bool
    shared_memory_size: u64

# Device enumeration
extern fn devices() -> Array<DeviceInfo>
extern fn default_device() -> Option<DeviceInfo>
extern fn device_count() -> u32
