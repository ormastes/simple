# Functional programming utilities
# Pure functions for composition and transformation

# Function composition
fn compose<A, B, C>(f: fn(B) -> C, g: fn(A) -> B) -> fn(A) -> C:
    \a: f(g(a))

# Identity function
fn identity<T>(x: T) -> T:
    x

# Constant function
fn const<T, U>(x: T) -> fn(U) -> T:
    \_: x

# Flip argument order
fn flip<A, B, C>(f: fn(A, B) -> C) -> fn(B, A) -> C:
    \b, a: f(a, b)

# Curry a two-argument function
fn curry<A, B, C>(f: fn(A, B) -> C) -> fn(A) -> fn(B) -> C:
    \a: \b: f(a, b)

# Uncurry a curried function
fn uncurry<A, B, C>(f: fn(A) -> fn(B) -> C) -> fn(A, B) -> C:
    \a, b: f(a)(b)
