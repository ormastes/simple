# Web Framework Module
#
# SSR-first web application framework for Simple language.
#
# ## Quick Start
#
# ```simple
# use web.*
# use ui.*
#
# async fn home(ctx: Context) -> HttpResponse:
#     let tree = ElementTree::new(ElementKind::Main)
#     tree.root_mut().with_child(Element::heading(1, "Hello"))
#     return render_to_response(&tree, "Home")
#
# pub async fn main() -> i32:
#     let app = WebApp::new()
#         .port(3000_port)
#         .get("/", home)
#     await app.run()?
#     return 0
# ```

