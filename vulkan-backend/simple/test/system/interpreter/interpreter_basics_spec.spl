# System Test: Interpreter Basics
# Tests fundamental interpreter functionality: expressions, strings, operators

use spec.*

describe "Simple Interpreter":
    context "when evaluating expressions":
        it "handles arithmetic operations":
            expect(1 + 1).to(eq(2))
            expect(10 - 3).to(eq(7))
            expect(4 * 5).to(eq(20))
            expect(15 / 3).to(eq(5))

        it "handles comparison operations":
            expect(5 > 3).to(eq(true))
            expect(2 < 10).to(eq(true))
            expect(5 == 5).to(eq(true))
            expect(3 != 4).to(eq(true))

        it "handles boolean operations":
            expect(true and true).to(eq(true))
            expect(true and false).to(eq(false))
            expect(true or false).to(eq(true))
            expect(not false).to(eq(true))

    context "when working with strings":
        it "supports string concatenation":
            val s = "Hello" + " " + "World"
            expect(s).to(eq("Hello World"))

        it "supports string interpolation":
            val name = "Alice"
            val age = 30
            val msg = f"Name: {name}, Age: {age}"
            expect(msg).to(eq("Name: Alice, Age: 30"))
