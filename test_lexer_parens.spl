# Test lexer directly
use core.lexer.{lex_init, lex_next, lex_token_kind, lex_token_text}
use core.tokens.{TOK_KW_IF, TOK_LPAREN, TOK_IDENT, TOK_AND, TOK_RPAREN, TOK_COLON, TOK_EOF}

val source: text = "if (a and b):"
lex_init(source)

print "Token 1: {lex_next()}"  # IF
print "Token 2: {lex_next()}"  # LPAREN
print "Token 3: {lex_next()}"  # a
print "Token 4: {lex_next()}"  # AND
print "Token 5: {lex_next()}"  # b
print "Token 6: {lex_next()}"  # RPAREN
print "Token 7: {lex_next()}"  # COLON
print "Token 8: {lex_next()}"  # EOF

print "Done!"
