# Lean Block Demo
# Demonstrates embedding Lean 4 code in Simple source files

# Module-level lean block with inline verification code
lean{
-- Basic arithmetic theorem
theorem add_zero_right : ∀ n : Nat, n + 0 = n := by
    intro n
    rfl

-- Commutativity of addition
theorem add_comm_example : ∀ a b : Nat, a + b = b + a := by
    intro a b
    omega
}

# Import external Lean proofs (path relative to source file)
lean import "proofs/math_lemmas.lean"

# Simple function with verification
fn factorial(n: i64) -> i64:
    if n <= 1:
        1
    else:
        n * factorial(n - 1)

fn main() -> i64:
    val result = factorial(5)
    print("factorial(5) = ")
    print(result)
    result
