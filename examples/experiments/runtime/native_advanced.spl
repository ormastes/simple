# Advanced features demo for native compilation
# Tests: for loops, arrays, match, functions, if/elif/else

fn factorial(n: i64) -> i64:
    if n <= 1:
        return 1
    return n * factorial(n - 1)

fn fibonacci(n: i64) -> i64:
    if n <= 0:
        return 0
    if n == 1:
        return 1
    var a = 0
    var b = 1
    for i in range(2, n + 1):
        val temp = b
        b = a + b
        a = temp
    return b

fn sum_range(start: i64, end_val: i64) -> i64:
    var total = 0
    for i in range(start, end_val):
        total += i
    return total

fn main():
    # Test for loop with range
    print "For loop test:"
    for i in range(0, 5):
        print "  i = {i}"

    # Test factorial
    val fact5 = factorial(5)
    print "factorial(5) = {fact5}"

    # Test fibonacci
    val fib10 = fibonacci(10)
    print "fibonacci(10) = {fib10}"

    # Test sum
    val total = sum_range(1, 11)
    print "sum(1..11) = {total}"

    # Test if/elif/else
    val x = 42
    if x > 100:
        print "big"
    elif x > 10:
        print "medium"
    else:
        print "small"

    # Test while loop with break
    var count = 0
    while count < 100:
        if count >= 5:
            break
        count += 1
    print "count after break = {count}"

    # Test compound assignment
    var acc = 0
    acc += 10
    acc -= 3
    acc *= 2
    print "acc = {acc}"

    print "done"
