# Grammar Tier Classification â€” Single Source of Truth
#
# Tiers: seed < core < full (each tier includes all lower tiers)
#   seed = C++ bootstrap compiler (seed/seed.cpp)
#   core = Simple-in-Simple compiler (src/core/)
#   full = Complete runtime (bin/simple)
#
# Format: keyword = "tier"
# Categories are [section.subsection] headers

[keywords.declarations]
fn = "seed"
val = "seed"
var = "seed"
struct = "seed"
enum = "seed"
class = "seed"
impl = "seed"
extern = "seed"
use = "seed"
export = "seed"
import = "seed"
trait = "core"
pub = "core"
static = "core"
me = "core"
type = "core"
asm = "core"
implements = "core"
mod = "full"
const = "full"
bitfield = "full"
kernel = "full"
shared = "full"
unsafe = "full"
actor = "full"
unit = "full"

[keywords.control_flow]
if = "seed"
elif = "seed"
else = "seed"
for = "seed"
while = "seed"
match = "seed"
case = "seed"
return = "seed"
break = "seed"
continue = "seed"
in = "seed"
loop = "core"
pass = "core"
pass_todo = "core"
pass_do_nothing = "core"
pass_dn = "core"
and = "core"
or = "core"
not = "core"
self = "core"
is = "core"
async = "core"
await = "core"
yield = "core"
spawn = "core"
try = "full"
catch = "full"
throw = "full"
with = "full"
finally = "full"
panic = "full"

[keywords.expressions]
true = "seed"
false = "seed"
nil = "seed"
as = "full"
xor = "full"
from = "full"
super = "full"
Some = "full"
Ok = "full"
Err = "full"
None = "full"
loss = "full"
nograd = "full"

[operators]
# Arithmetic
plus = "seed"
minus = "seed"
star = "seed"
slash = "seed"
percent = "seed"
star_star = "core"
shl = "core"
shr = "core"

# Comparison
eq = "seed"
not_eq = "seed"
lt = "seed"
gt = "seed"
lt_eq = "seed"
gt_eq = "seed"

# Assignment
assign = "seed"
plus_eq = "seed"
minus_eq = "seed"
star_eq = "seed"
slash_eq = "seed"
percent_eq = "seed"
walrus = "core"

# Logical/Bitwise
ampersand = "core"
pipe = "core"
caret = "core"
tilde = "core"

# Optional
question = "core"
question_dot = "core"
