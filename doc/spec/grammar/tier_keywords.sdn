[treesitter_aspirational]
# Keywords in highlights.scm NOT yet in any parser
keywords = "let, union, mixin, common, priv, send, receive, finally, panic, extends, where, Self, iso, mut, ref, dyn, vec, gpu, bounds, grid, block, simd, on, bind, forbid, allow, mock, aspect, call, execution, within, args, target, this, cflow, requires, ensures, invariant, out, out_err, calc, assume, forall, exists, feature, scenario, given, when, then, and_then, but, examples"
