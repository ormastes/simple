use spec.*

# Feature Test: Arithmetic Operations (BDD)
describe "Arithmetic operations":
    context "basic binary operators":
        it "adds integers":
            expect(2 + 3).to(eq(5))

        it "subtracts integers":
            expect(10 - 3).to(eq(7))

        it "multiplies integers":
            expect(4 * 5).to(eq(20))

        it "divides integers":
            expect(15 / 3).to(eq(5))

    context "operator precedence":
        it "evaluates multiplication before addition":
            expect(2 + 3 * 4).to(eq(14))
