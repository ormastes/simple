# Error handling for LMS
# Simplified version using only working Simple syntax

# Error code constants
let ERROR_PARSE = -32700
let ERROR_INVALID_REQUEST = -32600
let ERROR_METHOD_NOT_FOUND = -32601
let ERROR_INVALID_PARAMS = -32602
let ERROR_INTERNAL = -32603
let ERROR_NOT_INITIALIZED = -32002

# Get error message for a code
pub fn error_message(code: Int) -> String:
    if code == ERROR_PARSE:
        "Parse error"
    else if code == ERROR_INVALID_REQUEST:
        "Invalid request"
    else if code == ERROR_METHOD_NOT_FOUND:
        "Method not found"
    else if code == ERROR_INVALID_PARAMS:
        "Invalid params"
    else if code == ERROR_INTERNAL:
        "Internal error"
    else if code == ERROR_NOT_INITIALIZED:
        "Server not initialized"
    else:
        "Unknown error"
