# 20_units_public_api_positive.spl - Semantic types in public APIs

# Rule: avoid bare primitives in public APIs; prefer unit/newtypes/enums/Option/Result

# UserId and FilePath are unit types
# Numeric unit literal example uses `_uid`

pub fn get_user_id() -> UserId:
    return 42_uid

pub fn get_distance() -> Distance:
    return 100_km

pub fn get_duration() -> Duration:
    return 2_hr

# Test the functions
uid = get_user_id()
dist = get_distance()
dur = get_duration()

print "user_id={uid} distance={dist} duration={dur}"

main = 42
