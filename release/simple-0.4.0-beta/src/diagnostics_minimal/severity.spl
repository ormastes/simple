# Diagnostic Severity Levels
#
# Severity levels for compiler diagnostics, warnings, and messages.

# Severity level of a diagnostic
enum Severity:
    Error     # Fatal error that prevents compilation
    Warning   # Warning that doesn't prevent compilation
    Note      # Informational note
    Help      # Helpful suggestion
    Info      # General information

impl Severity:
    # Get the English name (for error codes, internal use)
    fn name() -> text:
        match self:
            Severity.Error: "error"
            Severity.Warning: "warning"
            Severity.Note: "note"
            Severity.Help: "help"
            Severity.Info: "info"

    # Get ANSI color code for terminal output
    fn color() -> text:
        match self:
            Severity.Error: "\033[1;31m"      # Bold red
            Severity.Warning: "\033[1;33m"    # Bold yellow
            Severity.Note: "\033[1;36m"       # Bold cyan
            Severity.Help: "\033[1;32m"       # Bold green
            Severity.Info: "\033[1;34m"       # Bold blue

    # Convert to string for display
    fn to_string() -> text:
        self.name()

    # Get sort order (for displaying diagnostics in priority order)
    fn priority() -> i32:
        match self:
            Severity.Error: 0     # Highest priority
            Severity.Warning: 1
            Severity.Note: 2
            Severity.Help: 3
            Severity.Info: 4      # Lowest priority

    # Check if this is an error severity
    fn is_error() -> bool:
        match self:
            Severity.Error: true
            _: false

    # Check if this is a warning severity
    fn is_warning() -> bool:
        match self:
            Severity.Warning: true
            _: false

# Public exports
export Severity
