use std.spec

describe "Matcher syntax test":
    it "test with parentheses":
        val arr = [1, 2, 3]
        expect(arr).to(include(3))
        print "With parentheses passed!"

    it "test without parentheses attempt":
        val arr = [1, 2, 3]
        val matcher = include(3)
        print "Matcher type: {matcher}"
        expect arr to matcher
