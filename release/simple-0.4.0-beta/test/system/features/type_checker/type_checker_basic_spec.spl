# Basic Type Checker Integration Tests
# Tests that the Rust type checker correctly validates code

feature "Type Checker Integration":
    scenario "Type checker validates correct code":
        given "a simple function":
            fn add(a: i64, b: i64) -> i64:
                a + b

        when "calling with correct types":
            val result = add(3, 4)

        then "should execute successfully":
            assert result == 7

    scenario "Type checker catches type errors":
        # This test verifies type checking happens at compile time
        # Type errors would be caught before runtime

        given "properly typed variables":
            val x: i64 = 42
            val y: i64 = 10

        when "performing type-safe operations":
            val sum = x + y

        then "should work correctly":
            assert sum == 52
