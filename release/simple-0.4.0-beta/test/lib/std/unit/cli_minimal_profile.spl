"""
Minimal CLI test to profile performance
"""

use spec.minimal
use std.cli

describe "CLI Profile Test":
    it "test 1 - just create parser":
        val parser = cli.simple_parser("test", "Test app")
        expect true

    it "test 2 - add one flag":
        val parser = cli.simple_parser("test", "Test app")
            .flag("verbose", "v", "Verbose")
        expect true

    it "test 3 - parse empty args":
        val parser = cli.simple_parser("test", "Test app")
            .flag("verbose", "v", "Verbose")
        val result = parser.parse([])
        expect true
