# 10_types_mutability.spl - Struct/class mutability

# Structs immutable by default
struct Point:
    x: f64
    y: f64

# Mutable struct
mut struct Cursor:
    x: f64
    y: f64

let p = Point(x: 1.0, y: 2.0)
# p.x = 9  # would be an error (immutable struct)

let c = Cursor(x: 0.0, y: 0.0)
c.x = 10.0
print "cursor=({c.x}, {c.y})"

# Classes mutable by default
class Person:
    name: str
    age: i32
    fn birthday():
        self.age = self.age + 1

let a = Person(name: "Alice", age: 30)
a.birthday()
print "alice_age={a.age}"

main = a.age
