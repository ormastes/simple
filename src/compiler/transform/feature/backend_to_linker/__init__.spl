# Transform: backend_to_linker
#
# Bridges codegen backend output â†’ linker input.
# Carries object file metadata (byte count, symbol count,
# target triple) needed to invoke the linker.
# Design: doc/research/compiler_mdsoc_design.md Section 2.2

arch {
  dimension = "transform"
  layer = "none"

  transform {
    from = "feature/codegen"
    to   = "feature/linking"
    allow_from = ["core/entity/**"]
  }

  imports {
    allow = ["core/entity/**", "shared/**"]
    deny  = ["compiler/feature/**"]
  }

  exports {
    expose = ["./entity_view/ObjectFileView"]
  }
}
