# Object code unit type shared by loader object provider and linker emitter.

struct ObjectCodeUnit:
    """Single exported symbol's code payload."""
    name: text
    bytes: [u8]
    size: i64

fn make_object_code_unit(name: text, bytes: [u8]) -> ObjectCodeUnit:
    ObjectCodeUnit(
        name: name,
        bytes: bytes,
        size: bytes.len() as i64
    )

export ObjectCodeUnit, make_object_code_unit
