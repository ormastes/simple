# Type Checking Stage Ports
#
# Input/output port contracts for the type checking pipeline stage.
# The type checker validates types and performs type inference.

struct Diagnostic:
    """A compiler diagnostic (error, warning, or info)."""
    severity: text
    message: text
    line: i64
    col: i64
    span_end_line: i64
    span_end_col: i64

struct TypeCheckInputPort:
    """Input to the type checker."""
    desugared_source: text
    module_name: text

struct TypeCheckOutputPort:
    """Typed AST context produced by type checking."""
    inferred_types: [i64]
    diagnostics: [Diagnostic]
    error_count: i64
    symbol_count: i64

export Diagnostic, TypeCheckInputPort, TypeCheckOutputPort
