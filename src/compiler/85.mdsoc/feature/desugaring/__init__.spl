# Desugaring Feature Module
#
# Pipeline stage: AST → Desugared AST (5 passes)
# Layer: app
# Dimension: feature
#
# Passes:
#   0: forwarding  (alias fn/me → delegation)
#   1: static_constants
#   2: static_methods
#   3: enum_constructors
#   4: rewriter

arch {
  dimension = "feature"
  layer = "app"

  imports {
    allow = [
      "compiler/transform/feature/parsing_to_desugaring/**",
      "core/entity/ast/**",
      "core/entity/token/**",
      "shared/**"
    ]
    deny = [
      "compiler/feature/type_checking/**",
      "compiler/feature/hir_lowering/**"
    ]
  }

  exports {
    expose = ["./app/ports"]
  }
}
