# Compilation Events Feature Module
#
# Event bus for compiler extension points.
# Adapters observe pipeline events without modifying the compiler driver.

arch {
  dimension = "feature"
  layer = "app"

  imports {
    allow = ["shared/**"]
    deny  = ["compiler/feature/lexing/**", "compiler/feature/parsing/**"]
  }

  exports {
    expose = ["./ports"]
  }
}
