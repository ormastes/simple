arch {
  dimension = "feature"
  layer = "app"

  imports {
    allow = [
      "core/entity/mir/**",
      "shared/**"
    ]
    deny = [
      "compiler/feature/hir_lowering/**",
      "compiler/feature/mir_lowering/**",
      "compiler/feature/codegen/**"
