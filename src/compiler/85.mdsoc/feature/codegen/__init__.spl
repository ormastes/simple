# Codegen Feature Module
#
# Pipeline stage: MIR â†’ Backend output
# Layer: app
# Dimension: feature

arch {
  dimension = "feature"
  layer = "app"

  uses_transform = "compiler/transform/feature/mir_to_backend"

  imports {
    allow = [
      "compiler/transform/feature/mir_to_backend/**",
      "compiler/backend_port",
      "core/entity/mir/**",
      "shared/**"
    ]
    deny = [
      "compiler/feature/mir_lowering/**",
      "compiler/feature/hir_lowering/**"
    ]
  }

  exports {
    expose = ["./app/ports"]
  }
}
