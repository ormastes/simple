# Linking feature ports
# Input: Object files to link
# Output: Linked executable or library

struct LinkerInputPort:
    """Object files and libraries ready for linking."""
    object_file_count: i64
    library_count: i64
    output_type: text
    output_path: text

struct LinkerOutputPort:
    """Result of linking."""
    output_path: text
    output_size_bytes: i64
    success: bool
    error_message: text

export LinkerInputPort, LinkerOutputPort
