# Transform: mir_to_backend
#
# Bridges MIR lowering output → codegen input.
# Reconciles: target-independent MIR → backend-specific representation.
# Design: doc/research/compiler_mdsoc_design.md Section 4.3

arch {
  dimension = "transform"
  layer = "none"

  transform {
    from = "feature/mir_lowering"
    to   = "feature/codegen"
    allow_from = ["core/entity/mir/**"]
  }

  imports {
    allow = [
      "core/entity/mir/**",
      "shared/**"
    ]
    deny = ["compiler/feature/**"]
  }

  exports {
    expose = ["./entity_view/MirView"]
  }
}
