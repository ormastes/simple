# Transform: mir_to_optimizer
#
# Bridges MIR lowering output â†’ optimizer input.
# Carries MIR function and instruction counts needed
# to configure the optimization pass pipeline.
# Design: doc/research/compiler_mdsoc_design.md Section 2.2

arch {
  dimension = "transform"
  layer = "none"

  transform {
    from = "feature/mir_lowering"
    to   = "feature/optimization"
    allow_from = ["core/entity/mir/**"]
  }

  imports {
    allow = ["core/entity/mir/**", "shared/**"]
    deny  = ["compiler/feature/**"]
  }

  exports {
    expose = ["./entity_view/MirOptView"]
  }
}
