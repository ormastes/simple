# Transform: hir_to_mir
#
# Bridges HIR lowering output → MIR lowering input.
# Reconciles: HIR structured control flow → MIR flat basic blocks.
# Design: doc/research/compiler_mdsoc_design.md Section 4.2

arch {
  dimension = "transform"
  layer = "none"

  transform {
    from = "feature/hir_lowering"
    to   = "feature/mir_lowering"
    allow_from = [
      "core/entity/hir/**",
      "core/entity/mir/**"
    ]
  }

  imports {
    allow = [
      "core/entity/hir/**",
      "core/entity/mir/**",
      "shared/**"
    ]
    deny = ["compiler/feature/**"]
  }

  exports {
    expose = ["./entity_view/HirView"]
  }
}
