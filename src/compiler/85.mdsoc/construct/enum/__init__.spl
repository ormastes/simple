# Construct Capsule: enum
#
# Groups all compiler files that handle enum declarations.
# Tier: decl (depends on expr, match)
# Dimension: construct (vertical second axis)
# Participation: shared_bind

use compiler.mdsoc.types.*

export enum_capsule_def

fn enum_capsule_def() -> ConstructCapsule:
    """Define the enum construct capsule.

    Enum handling is closely linked with match (exhaustiveness checks)
    and class_struct (enum variants as struct-like data).
    """
    var cap = ConstructCapsule.new("enum", ConstructKind.Enum, ConstructTier.Decl)

    cap.exclusive_files = []

    # Shared files
    val sb_parser_decls = SharedBinding.new("10.frontend/core/parser_decls.spl", "func", 10)
    val sb_ast = SharedBinding.new("10.frontend/core/ast.spl", "func", 10)
    val sb_hir = SharedBinding.new("20.hir/hir_definitions.spl", "func", 20)
    val sb_mir_lower = SharedBinding.new("50.mir/mir_lowering_expr.spl", "func", 50)
    val sb_mir_enum = SharedBinding.new("50.mir/mir_data.spl", "async", 50)
    val sb_interpreter = SharedBinding.new("70.backend/backend/interpreter.spl", "func", 70)

    cap.shared_bindings = [sb_parser_decls, sb_ast, sb_hir, sb_mir_lower, sb_mir_enum, sb_interpreter]

    # Depends on expr (variant expressions), match (exhaustiveness)
    cap.depends_on = ["expr", "match"]

    cap
