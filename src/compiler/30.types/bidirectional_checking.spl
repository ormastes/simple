fn test_nested_function():
    """Test nested function with return type"""
    var infer = TypeInferencer.empty()

    # fn outer() -> i64:
    #     fn inner() -> i64: 42
    #     inner()
    val inner_body = HirExpr.int_lit(42)
    val _inner_func = HirFunction.create(
        "inner",
        [],
