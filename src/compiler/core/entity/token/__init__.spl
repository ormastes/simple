# Token Entity - Token kind constants and token stream types
#
# Contents:
#   kinds.spl  - TOK_* token kind constants
#   stream.spl - CoreLexer state struct

arch {
  dimension = "entity"
  layer = "entity"
  imports {
    allow = ["core/entity/**", "shared/**"]
    deny  = ["compiler/**", "feature/**", "transform/**"]
  }
  exports {
    expose = ["./kinds", "./stream"]
  }
}

use compiler.core.entity.token.kinds.*
use compiler.core.entity.token.stream.*
