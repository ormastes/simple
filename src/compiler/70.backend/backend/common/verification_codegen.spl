# VerificationCodegen Trait - Formal Verification Export Interface
#
# Implemented by the Lean backend.
# Provides capabilities for exporting MIR to formal verification languages.

use compiler.mir_data.{MirModule, MirBody}

# ============================================================================
# VerificationCodegen Trait
# ============================================================================

trait VerificationCodegen:
    """Interface for formal verification export backends."""
    fn export_function(name: text, body: MirBody) -> text
    fn generate_proof_obligations(module: MirModule) -> [text]
    fn verification_level() -> text

# ============================================================================
# Exports
# ============================================================================

export VerificationCodegen
