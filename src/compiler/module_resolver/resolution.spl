fn path_join(base: text, segment: text) -> text:
    """Join two path segments."""
    if base.ends_with("/"):
        "{base}{segment}"
    else:
        "{base}/{segment}"

fn path_parent(path: text) -> text:
    """Get parent directory of a path."""
    val parts = path.split("/")
    if parts.len() <= 1:
        return "."
    parts[0..parts.len()-1].join("/")

fn path_exists(path: text) -> bool:
    """Check if a path exists."""
    file_exists(path)

fn is_file(path: text) -> bool:
    """Check if a path is a file (not directory)."""
    # TODO: Proper FFI function
    # For now, assume if it exists and doesn't end with /, it's a file
    file_exists(path) and not path.ends_with("/")

