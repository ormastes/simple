# Compatibility shim for compiler.blocks.registry

use compiler.blocks.blocks.registry as inner
use compiler.blocks.blocks.registry.{BlockRegistry}

fn block_registry() -> BlockRegistry:
    inner.block_registry()

fn register_block(block_def):
    inner.register_block(block_def)

fn unregister_block(kind: text) -> bool:
    inner.unregister_block(kind)

fn is_block(kind: text) -> bool:
    inner.is_block(kind)

fn get_block(kind: text):
    inner.get_block(kind)

fn reg_lookup(reg, kind):
    inner.get_block(kind)

fn list_blocks() -> [text]:
    inner.list_blocks()

fn is_block_registered(kind: text) -> bool:
    inner.is_block_registered(kind)

fn with_block(kind: text, f):
    inner.with_block(kind, f)

export BlockRegistry
export block_registry, register_block, unregister_block, is_block
export get_block, list_blocks, is_block_registered, with_block
