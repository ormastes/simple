# Trait System for Simple
#
# Implements Rust-style traits:
# - Trait definitions with method signatures
# - Impl blocks for trait implementations
# - Trait bounds on generics (T: Trait)
# - Trait objects for dynamic dispatch (dyn Trait)
# - Obligation-based constraint solving
# - Associated types (Phase 4)
#
# Split into:
# - trait_def.spl: TraitDef, MethodSignature, TraitBound, TraitBoundKind, AssocTypeDef
# - trait_impl.spl: ImplBlock, AssocTypeImpl, match_types
# - trait_solver.spl: Obligation, ObligationCause, TraitSolver
# - trait_coherence.spl: impls_overlap, type_has_params, CoherenceChecker
# - trait_validation.spl: TraitError, create_builtin_traits
# - associated_types.spl: AssocTypeProjection, AssocTypeResolver, AssocTypeError
#
# Design: doc/design/trait_system_design.md

use compiler.traits.trait_def.*
use compiler.traits.trait_impl.*
use compiler.traits.trait_solver.*
use compiler.traits.trait_coherence.{impls_overlap, type_has_params}
use compiler.traits.trait_validation.*
use compiler.traits.associated_types.*

export AssocTypeDef, TraitDef, MethodSignature
export AssocTypeImpl, ImplBlock
export TraitBound, TraitBoundKind
export Obligation, ObligationCause
export TraitSolver
export TraitError
