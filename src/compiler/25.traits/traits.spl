# Trait System for Simple
#
# Implements Rust-style traits:
# - Trait definitions with method signatures
# - Impl blocks for trait implementations
# - Trait bounds on generics (T: Trait)
# - Trait objects for dynamic dispatch (dyn Trait)
# - Obligation-based constraint solving
#
# Split into:
# - trait_def.spl: TraitDef, MethodSignature, TraitBound, TraitBoundKind
# - trait_impl.spl: ImplBlock, match_types
# - trait_solver.spl: Obligation, ObligationCause, TraitSolver
# - trait_coherence.spl: impls_overlap, type_has_params, CoherenceChecker
# - trait_validation.spl: TraitError, create_builtin_traits
#
# Design: doc/design/trait_system_design.md

use compiler.trait_def.*
use compiler.trait_impl.*
use compiler.trait_solver.*
use compiler.trait_coherence.{impls_overlap, type_has_params}
use compiler.trait_validation.*

export TraitDef, MethodSignature
export ImplBlock
export TraitBound, TraitBoundKind
export Obligation, ObligationCause
export TraitSolver
export TraitError
export create_builtin_traits
