# GZIP Types and Constants
#
# Purpose: Core type definitions and constants for GZIP compression
#
# Contains:
# - GZIP magic bytes and format constants
# - Compression method identifiers
# - Operating system type codes
# - GZIP flag definitions
# - DEFLATE algorithm constants
# - Huffman coding constants
# - Block type identifiers
# - Compression level constants

# =============================================================================
# GZIP HEADER CONSTANTS
# =============================================================================

# GZIP magic bytes
val GZIP_MAGIC1 = 0x1f
val GZIP_MAGIC2 = 0x8b

# Compression methods
val CM_DEFLATE = 8

# Operating systems
val OS_FAT = 0
val OS_UNIX = 3
val OS_NTFS = 11
val OS_UNKNOWN = 255

# GZIP flags
val FLAG_TEXT = 1
val FLAG_HCRC = 2
val FLAG_EXTRA = 4
val FLAG_NAME = 8
val FLAG_COMMENT = 16

# =============================================================================
# DEFLATE CONSTANTS
# =============================================================================

# Sliding window parameters
val WINDOW_SIZE = 32768  # 32KB sliding window
val MIN_MATCH = 3
val MAX_MATCH = 258
val MAX_DISTANCE = 32768

# =============================================================================
# HUFFMAN CODING CONSTANTS
# =============================================================================

# Huffman tree parameters
val MAX_BITS = 15
val MAX_LITERALS = 286
val MAX_DISTANCES = 30

# =============================================================================
# BLOCK TYPES
# =============================================================================

# DEFLATE block types
val BLOCK_STORED = 0
val BLOCK_FIXED = 1
val BLOCK_DYNAMIC = 2

# =============================================================================
# COMPRESSION LEVELS
# =============================================================================

# Compression level constants (0-9)
val LEVEL_NONE = 0
val LEVEL_FAST = 1
val LEVEL_DEFAULT = 6
val LEVEL_BEST = 9

export *
