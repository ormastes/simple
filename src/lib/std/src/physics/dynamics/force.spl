# Physics Dynamics - Force
#
# Force applied to rigid bodies.

export Force

import ..core as core


# ============================================================================
# Force
# ============================================================================

class Force:
    """Force applied to rigid body.

    Attributes:
        vector: Force vector
        application_point: Point where force is applied (for torque)
    """
    vector: core.Vector3
    application_point: core.Vector3

    fn __init__(vector: core.Vector3, application_point: core.Vector3?):
        """Initialize force.

        Args:
            vector: Force vector
            application_point: Point of application (default: origin)
        """
        self.vector = vector
        self.application_point = application_point ?? core.Vector3(0.0, 0.0, 0.0)
