# Minimal Tensor module for testing

pub use Tensor

class Tensor:
    """Minimal tensor class for testing."""
    handle: u64

    fn __init__(handle: u64):
        self.handle = handle

    static fn zeros(size: i32) -> Tensor:
        """Create zeros tensor."""
        return Tensor(0u64)

    static fn ones(size: i32) -> Tensor:
        """Create ones tensor."""
        return Tensor(1u64)

    fn add(other: Tensor) -> Tensor:
        """Add two tensors."""
        return Tensor(self.handle + other.handle)

    fn item() -> f64:
        """Get scalar value."""
        return self.handle as f64
