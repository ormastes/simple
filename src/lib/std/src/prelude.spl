# Prelude - Auto-imported symbols for all Simple programs
# This module is implicitly imported into every Simple source file
#
# To disable prelude: #[no_prelude] at the top of your file

mod prelude

# Core types
pub use use core.option.{Option, Some, None}
pub use use core.result.{Result, Ok, Err}
pub use use core.traits.*

# Print functions (Python-style, parentheses optional)
# Usage:
#   print "hello"          # no newline
#   println "hello"        # with newline
#   print "x =", x, "y =", y
#   eprint "error!"        # to stderr
#   eprintln "error!"      # to stderr with newline
#   dbg!(expr)             # debug print with file:line
#   input "prompt: "       # read line from stdin
pub use use host.async_nogc.io.term.{
    print,
    println,
    eprint,
    eprintln,
    dbg,
    input,
    input_or,
    input_int,
    input_float,
    confirm
}

# Common unit types
pub use use units.size.{ByteCount, KiB, MiB, GiB}
pub use use units.time.{Duration, Instant}

# Common traits that should always be available
pub use use core.traits.{
    Display,
    Debug,
    Clone,
    Copy,
    Default,
    Eq,
    Ord,
    Hash
}
