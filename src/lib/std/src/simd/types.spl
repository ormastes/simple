# SIMD Types - Vector type definitions
#
# Provides fixed-size vector types for SIMD operations.
# Types are aligned for optimal memory access.

# 2-element vector types
struct Vec2i32:
    x: i32
    y: i32

    static fn new(x: i32, y: i32) -> Vec2i32:
        return Vec2i32(x: x, y: y)

    static fn splat(v: i32) -> Vec2i32:
        return Vec2i32(x: v, y: v)

    static fn zero() -> Vec2i32:
        return Vec2i32(x: 0, y: 0)

struct Vec2f32:
    x: f32
    y: f32

    static fn new(x: f32, y: f32) -> Vec2f32:
        return Vec2f32(x: x, y: y)

    static fn splat(v: f32) -> Vec2f32:
        return Vec2f32(x: v, y: v)

    static fn zero() -> Vec2f32:
        return Vec2f32(x: 0.0, y: 0.0)

# 4-element vector types
struct Vec4i32:
    x: i32
    y: i32
    z: i32
    w: i32

    static fn new(x: i32, y: i32, z: i32, w: i32) -> Vec4i32:
        return Vec4i32(x: x, y: y, z: z, w: w)

    static fn splat(v: i32) -> Vec4i32:
        return Vec4i32(x: v, y: v, z: v, w: v)

    static fn zero() -> Vec4i32:
        return Vec4i32(x: 0, y: 0, z: 0, w: 0)

struct Vec4f32:
    x: f32
    y: f32
    z: f32
    w: f32

    static fn new(x: f32, y: f32, z: f32, w: f32) -> Vec4f32:
        return Vec4f32(x: x, y: y, z: z, w: w)

    static fn splat(v: f32) -> Vec4f32:
        return Vec4f32(x: v, y: v, z: v, w: v)

    static fn zero() -> Vec4f32:
        return Vec4f32(x: 0.0, y: 0.0, z: 0.0, w: 0.0)

# 8-element vector types
struct Vec8i32:
    data: [i32; 8]

    static fn new(data: [i32; 8]) -> Vec8i32:
        return Vec8i32(data: data)

    static fn splat(v: i32) -> Vec8i32:
        return Vec8i32(data: [v, v, v, v, v, v, v, v])

    static fn zero() -> Vec8i32:
        return Vec8i32.splat(0)

struct Vec8f32:
    data: [f32; 8]

    static fn new(data: [f32; 8]) -> Vec8f32:
        return Vec8f32(data: data)

    static fn splat(v: f32) -> Vec8f32:
        return Vec8f32(data: [v, v, v, v, v, v, v, v])

    static fn zero() -> Vec8f32:
        return Vec8f32.splat(0.0)

# 16-element vector types
struct Vec16i32:
    data: [i32; 16]

    static fn new(data: [i32; 16]) -> Vec16i32:
        return Vec16i32(data: data)

    static fn splat(v: i32) -> Vec16i32:
        val arr: [i32; 16] = [v, v, v, v, v, v, v, v, v, v, v, v, v, v, v, v]
        return Vec16i32(data: arr)

    static fn zero() -> Vec16i32:
        return Vec16i32.splat(0)

struct Vec16f32:
    data: [f32; 16]

    static fn new(data: [f32; 16]) -> Vec16f32:
        return Vec16f32(data: data)

    static fn splat(v: f32) -> Vec16f32:
        val arr: [f32; 16] = [v, v, v, v, v, v, v, v, v, v, v, v, v, v, v, v]
        return Vec16f32(data: arr)

    static fn zero() -> Vec16f32:
        return Vec16f32.splat(0.0)

export Vec2i32, Vec2f32, Vec4i32, Vec4f32, Vec8i32, Vec8f32, Vec16i32, Vec16f32
