# Simple Tracking Example

import ml.tracking

print("=" * 70)
print("TRACKING SIMPLE EXAMPLE")
print("=" * 70)

# Set offline mode
tracking.set_mode("offline")
print("\nTracking mode: offline")

# Create a run
val my_run = tracking.run(
    project="test",
    name="simple-run",
    config={"lr": 0.001},
    tags=["test"]
)

print(f"\nRun created:")
print(f"  ID: {my_run.id}")
print(f"  Name: {my_run.name}")

# Log a single metric
my_run.log({"loss": 0.5}, 0)
print("\nLogged metric: loss=0.5")

# Finish
my_run.finish()
print("Run finished!")

print("\n" + "=" * 70)
print("Example completed!")
print("=" * 70)
