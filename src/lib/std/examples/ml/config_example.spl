# Configuration System Example

import config

print("=" * 70)
print("CONFIG EXAMPLE")
print("=" * 70)

# Create base configuration
val base_config = {
    "project": "mnist-example",
    "seed": 42,
    "epochs": 10,
    "lr": 0.001
}

val base = config.from_dict(base_config)
print("\nBase config:")
print(f"  Project: {base.get('project')}")
print(f"  Epochs: {base.get('epochs')}")
print(f"  Learning rate: {base.get('lr')}")

# Create override configuration
val override_config = {
    "epochs": 20,
    "lr": 0.005
}

val override_cfg = config.from_dict(override_config)

# Merge configurations
val merged = config.merge(base, override_cfg)

print("\nMerged config:")
print(f"  Project: {merged.get('project')}")  # From base
print(f"  Epochs: {merged.get('epochs')}")    # Overridden to 20
print(f"  Learning rate: {merged.get('lr')}") # Overridden to 0.005

print("\n" + "=" * 70)
print("Example completed!")
print("=" * 70)
