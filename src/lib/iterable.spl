# Side-effect iteration facade. Arrays already have .map(), .filter(), .reduce()
# built in. This module adds each() for side-effect-only iteration and
# each_with_index() for indexed traversal.
#
# Usage:
#   each([1, 2, 3], fn(x): print(x))
#   each_with_index(["a", "b", "c"], fn(item, i): print("{i}: {item}"))

# Iterate over items for side effects only (no return value used).
fn each(items, action):
    for item in items:
        action(item)

# Iterate over items, passing each item and its 0-based index to action.
fn each_with_index(items, action):
    var i = 0
    for item in items:
        action(item, i)
        i = i + 1

export each, each_with_index
