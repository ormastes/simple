# Shared Wrapper Types for lib/
#
# Single-field newtype wrappers that give semantic meaning to primitives.
# Used with suffixed literal grammar: 42_actor_id -> ActorId(value: 42)

# --- ID Types ---
class ActorId:
    value: i64

class MessageId:
    value: i64

class ProcessId:
    value: i64

class BinaryId:
    value: i64

class RefId:
    value: i64

# --- Size/Capacity Types ---
class ByteSize:
    value: i64

class Capacity:
    value: i64

# --- Count Types ---
class Count:
    value: i64

# --- Time Types ---
class Millis:
    value: i64

class Nanos:
    value: i64

class Timestamp:
    value: i64

# --- Numeric Measure Types ---
class Reductions:
    value: i64

class RefCount:
    value: i64

class Offset:
    value: i64

class Length:
    value: i64

# --- Source Location Types ---
class LineNumber:
    value: i64

class ColumnNumber:
    value: i64

class IndentLevel:
    value: i64

# --- Network/IO Types ---
class PortNumber:
    value: i32

# --- Rate/Ratio Types ---
class HitRate:
    value: f64

# --- String Interning Types ---
class StringId:
    value: i32

# --- Sender Types ---
class SenderId:
    value: i64

# --- Boolean Semantic Types ---
class Enabled:
    value: bool

class Closed:
    value: bool

export ActorId, MessageId, ProcessId, BinaryId, RefId
export ByteSize, Capacity, Count
export Millis, Nanos, Timestamp
export Reductions, RefCount, Offset, Length
export LineNumber, ColumnNumber, IndentLevel
export PortNumber, HitRate, StringId, SenderId
export Enabled, Closed
