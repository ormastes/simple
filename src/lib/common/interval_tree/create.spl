# Interval Tree - Tree Creation and Bulk Operations

use interval_tree.types.{interval_new, interval_compare}
use interval_tree.insert.{insert}

# ============================================================================
# Bulk Tree Creation
# ============================================================================

fn from_list(intervals: list) -> any:
    # Build tree from list of intervals
    var tree = nil
    var i = 0
    val n = intervals.len()

    while i < n:
        val interval = intervals[i]
        tree = insert(tree, interval)
        i = i + 1

    tree

fn clear(tree: any) -> any:
    # Clear the entire tree
    nil

# ============================================================================
# Exports
# ============================================================================

export from_list, clear
