# bcrypt Salt Generation
import "std/bcrypt/core" as core

fn generate_salt() -> list[i64]:
    core.generate_salt()

fn generate_salt_with_cost(cost: i64) -> list[i64]:
    core.generate_salt_with_cost(cost)

fn encode_salt(salt_bytes: list[i64], cost: i64) -> text:
    core.encode_salt(salt_bytes, cost)

fn extract_salt(hash_str: text) -> list[i64]:
    core.extract_salt(hash_str)
