# Skip List Creation Operations
#
# This module provides functions for creating and initializing skip lists.

import types

# Create an empty skip list
fn sl_create() -> tuple:
    var head = types.sl_create_node(types.MIN_KEY, 0, types.MAX_LEVELS - 1)
    var nodes = [head]
    var head_idx = 0
    var current_level = 0
    var size = 0
    (nodes, head_idx, current_level, size)

# Build skip list from sorted pairs (more efficient than repeated insert)
fn sl_from_sorted_pairs(pairs: list) -> tuple:
    var result = sl_create()
    import insert
    insert.sl_insert_many(result, pairs)

# Build skip list from unsorted pairs
fn sl_from_pairs(pairs: list) -> tuple:
    var result = sl_create()
    import insert
    insert.sl_insert_many(result, pairs)

# Clone skip list
fn sl_clone(skiplist: tuple) -> tuple:
    import traverse
    var pairs = traverse.sl_to_pairs(skiplist)
    var result = sl_create()
    import insert
    insert.sl_insert_many(result, pairs)
