# Pointer Library Shared Types
# @tag:api
#
# Common types used across pointer modules (weak, unique, handle).

struct PtrState:
    valid: bool
    moved: bool
    expired: bool

fn ptr_state(valid: bool, moved: bool, expired: bool) -> PtrState:
    PtrState(valid: valid, moved: moved, expired: expired)

fn ptr_state_valid() -> PtrState:
    PtrState(valid: true, moved: false, expired: false)

fn ptr_state_moved() -> PtrState:
    PtrState(valid: false, moved: true, expired: false)

fn ptr_state_expired() -> PtrState:
    PtrState(valid: false, moved: false, expired: true)

export PtrState, ptr_state, ptr_state_valid, ptr_state_moved, ptr_state_expired
