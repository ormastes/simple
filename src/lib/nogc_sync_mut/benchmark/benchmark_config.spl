# Benchmark Configuration
#
# Configuration structs for controlling benchmark execution parameters.

export BenchmarkConfig, benchmark_config_default, benchmark_config_quick

struct BenchmarkConfig:
    warmup_iterations: i64
    measurement_iterations: i64
    sample_size: i64
    outlier_threshold: f64

impl BenchmarkConfig:
    static fn default() -> BenchmarkConfig:
        BenchmarkConfig(
            warmup_iterations: 3,
            measurement_iterations: 100,
            sample_size: 10,
            outlier_threshold: 1.5
        )

    static fn quick() -> BenchmarkConfig:
        BenchmarkConfig(
            warmup_iterations: 1,
            measurement_iterations: 20,
            sample_size: 3,
            outlier_threshold: 1.5
        )

fn benchmark_config_default() -> BenchmarkConfig:
    BenchmarkConfig(
        warmup_iterations: 3,
        measurement_iterations: 100,
        sample_size: 10,
        outlier_threshold: 1.5
    )

fn benchmark_config_quick() -> BenchmarkConfig:
    BenchmarkConfig(
        warmup_iterations: 1,
        measurement_iterations: 20,
        sample_size: 3,
        outlier_threshold: 1.5
    )
