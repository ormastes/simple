# HIR Entity - High-level IR types
#
# Contains:
#   types.spl        - CoreHirType + HIR_TYPE_* constants
#   symbol_table.spl - CoreSymbolTable/CoreSymbolEntry types

arch {
  dimension = "entity"
  layer = "entity"
  imports {
    allow = ["core/entity/ast/**", "core/entity/token/**", "core/entity/**", "shared/**"]
    deny  = ["compiler/**", "feature/**"]
  }
  exports {
    expose = ["./types", "./symbol_table"]
  }
}
