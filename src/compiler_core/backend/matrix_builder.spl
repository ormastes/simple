"""
# Backend Support Matrix Builder

Generates support matrix documentation showing which backends support which instructions.

**Phase:** 3 - Documentation Generation
**Status:** Complete
"""

use compiler.backend.capability_tracker.{
    CapabilityTracker, InstructionCategory, create_default_tracker
}

# Matrix builder
class MatrixBuilder:
    tracker: CapabilityTracker

    # Generate markdown table for all instructions
    fn generate_full_matrix() -> text:
        var output = "# Backend Instruction Support Matrix\n\n"
        output = output + "| Instruction | Category | Cranelift | LLVM | Vulkan | Interpreter |\n"
        output = output + "|-------------|----------|-----------|------|--------|-------------|\n"

        for inst in self.tracker.instructions:
            val cran = if inst.cranelift: "âœ…" else: "âŒ"
            val llvm_ = if inst.llvm: "âœ…" else: "âŒ"
            val vulk = if inst.vulkan: "âœ…" else: "âŒ"
            val interp = if inst.interpreter: "âœ…" else: "âŒ"

            val cat_name = self.category_to_string(inst.category)

            output = output + "| {inst.instruction_name} | {cat_name} | {cran} | {llvm_} | {vulk} | {interp} |\n"

        output

    # Generate summary statistics
    fn generate_summary() -> text:
        var output = "## Backend Coverage Summary\n\n"

        val cran_cov = self.tracker.get_coverage("cranelift")
        val llvm_cov = self.tracker.get_coverage("llvm")
        val vulk_cov = self.tracker.get_coverage("vulkan")
        val interp_cov = self.tracker.get_coverage("interpreter")

        output = output + "| Backend | Coverage | Status |\n"
        output = output + "|---------|----------|--------|\n"
        output = output + "| Cranelift | {cran_cov}% | {self.coverage_status(cran_cov)} |\n"
        output = output + "| LLVM | {llvm_cov}% | {self.coverage_status(llvm_cov)} |\n"
        output = output + "| Vulkan | {vulk_cov}% | {self.coverage_status(vulk_cov)} |\n"
        output = output + "| Interpreter | {interp_cov}% | {self.coverage_status(interp_cov)} |\n"

        output

    # Generate category breakdown
    fn generate_category_matrix() -> text:
        var output = "## Support by Category\n\n"

        output = output + self.generate_category_section(InstructionCategory.Constants)
        output = output + self.generate_category_section(InstructionCategory.Arithmetic)
        output = output + self.generate_category_section(InstructionCategory.ControlFlow)
        output = output + self.generate_category_section(InstructionCategory.SIMD)
        output = output + self.generate_category_section(InstructionCategory.GPU)
        output = output + self.generate_category_section(InstructionCategory.Async)

        output

    # Generate section for one category
    fn generate_category_section(cat: InstructionCategory) -> text:
        val cat_name = self.category_to_string(cat)
        var output = "### {cat_name}\n\n"

        val insts = self.tracker_get_by_category(tracker, cat)
        if insts_len(insts) == 0:
            return output + "No instructions in this category.\n\n"

        output = output + "| Instruction | Cranelift | LLVM | Vulkan | Interpreter |\n"
        output = output + "|-------------|-----------|------|--------|-------------|\n"

        for inst in insts:
            val cran = if inst.cranelift: "âœ…" else: "âŒ"
            val llvm_ = if inst.llvm: "âœ…" else: "âŒ"
            val vulk = if inst.vulkan: "âœ…" else: "âŒ"
            val interp = if inst.interpreter: "âœ…" else: "âŒ"

            output = output + "| {inst.instruction_name} | {cran} | {llvm_} | {vulk} | {interp} |\n"

        output = output + "\n"
        output

    # Helper: category to string
    fn category_to_string(cat: InstructionCategory) -> text:
        if cat == InstructionCategory.Constants:
            "Constants"
        elif cat == InstructionCategory.Arithmetic:
            "Arithmetic"
        elif cat == InstructionCategory.Bitwise:
            "Bitwise"
        elif cat == InstructionCategory.Comparison:
            "Comparison"
        elif cat == InstructionCategory.Memory:
            "Memory"
        elif cat == InstructionCategory.ControlFlow:
            "Control Flow"
        elif cat == InstructionCategory.Collections:
            "Collections"
        elif cat == InstructionCategory.SIMD:
            "SIMD"
        elif cat == InstructionCategory.GPU:
            "GPU"
        elif cat == InstructionCategory.Pointers:
            "Pointers"
        elif cat == InstructionCategory.Structs:
            "Structs"
        elif cat == InstructionCategory.Enums:
            "Enums"
        elif cat == InstructionCategory.Async:
            "Async"
        elif cat == InstructionCategory.ErrorHandling:
            "Error Handling"
        elif cat == InstructionCategory.Closures:
            "Closures"
        else:
            "Unknown"

    # Helper: coverage status
    fn coverage_status(pct: i32) -> text:
        if pct >= 90:
            "ğŸŸ¢ Excellent"
        elif pct >= 70:
            "ğŸŸ¡ Good"
        elif pct >= 50:
            "ğŸŸ  Partial"
        else:
            "ğŸ”´ Limited"

# Create builder with default tracker
fn create_matrix_builder() -> MatrixBuilder:
    MatrixBuilder(tracker: create_default_tracker())

# Generate complete documentation
fn generate_complete_docs() -> text:
    val builder = create_matrix_builder()
    var output = ""

    output = output + builder_generate_summary(builder)
    output = output + "\n---\n\n"
    output = output + builder_generate_category_matrix(builder)
    output = output + "\n---\n\n"
    output = output + builder_generate_full_matrix(builder)

    output

export MatrixBuilder, create_matrix_builder, generate_complete_docs
