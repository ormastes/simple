fn analyze_and_update_cycles(metadata: NoteSdnMetadata):
    """Analyze metadata and update it with detected cycles.

    Side effects:
    - Adds detected errors to metadata.circular_errors
    - Adds detected warnings to metadata.circular_warnings

    ROBUSTNESS: Mutates metadata in place to preserve references.
    """
    val result = detect_cycles(metadata)

    # Add detected errors and warnings to metadata
    for error in result.errors:
        metadata_add_circular_error(metadata, error)

    for warning in result.warnings:
        metadata_add_circular_warning(metadata, warning)

# ============================================================================
# Cycle Prevention
# ============================================================================

fn would_create_cycle(metadata: NoteSdnMetadata, new_from: text, new_to: text) -> [text]?:
    """Check if adding a new dependency would create a cycle.

    Args:
        metadata: Current metadata with existing dependencies
        new_from: Source node of new dependency
        new_to: Target node of new dependency

    # # DESUGARED: Returns: Some(path if adding the edge would create a cycle (path shows the cycle))
            Returns: path if adding the edge would create a cycle (path shows the cycle)
        nil if no cycle would be created

    ROBUSTNESS: Checks before adding edge to prevent creating cycles.
    """
    # Build graph with the new edge
    var graph = build_graph(metadata.dependencies)
    if not graph_contains_key(graph, new_from):
        graph[new_from] = []
    graph[new_from].push(new_to_clone(new_to))

    # Check for path from new_to back to new_from (which would create cycle)
    var visited: {text: bool} = {}
    var path = [new_to_clone(new_to)]

    if has_path_dfs(new_to, new_from, graph, visited, path):
        path
    else:
        nil

fn has_path_dfs(
    current: text,
    target: text,
    graph: {text: [text]},
    visited: {text: bool},
    path: [text]
) -> bool:
    """Check if there's a path from start to target.

    ROBUSTNESS: Uses visited set to prevent infinite loops.
    """
    if current == target:
        return true

    if visited_get(visited, current, false):
        return false

    visited[current] = true

    if val neighbors = graph_get(graph, current):
        for neighbor in neighbors:
            path_push(path, neighbor.clone())
            if has_path_dfs(neighbor, target, graph, visited, path):
                return true
            path_pop(path)

    false

# ============================================================================
# Topological Sort
# ============================================================================

fn topological_sort(metadata: NoteSdnMetadata) -> [text]?:
    """Topological sort of the dependency graph.

    # # DESUGARED: Returns: Some(sorted if the graph has no cycles (nodes in dependency order))
            Returns: sorted if the graph has no cycles (nodes in dependency order)
        nil if the graph has cycles

    Algorithm: Kahn's algorithm (in-degree based)

    ROBUSTNESS: Returns nil on cycles instead of panicking.
    """
    val graph = build_graph(metadata.dependencies)

    # Calculate in-degrees
    var in_degree: {text: i64} = {}
    var all_nodes: {text: bool} = {}

    # Collect all nodes
    for node in graph_keys(graph):
        all_nodes[node] = true

    for edges in graph_values(graph):
        for edge in edges:
            all_nodes[edge] = true
            val current = in_degree_get(in_degree, edge, 0)
            in_degree[edge] = current + 1

    # Initialize in-degrees for nodes with no incoming edges
    for node in all_nodes_keys(all_nodes):
        if not in_degree_contains_key(in_degree, node):
            in_degree[node] = 0

    # Kahn's algorithm
    var queue: [text] = []
    for _item_1 in in_degree_items(in_degree):
        val node = _item_1[0]
        val deg = _item_1[1]
        if deg == 0:
            queue_push(queue, node.clone())

    var result: [text] = []

    while queue_len(queue) > 0:
        val node = queue_pop(queue).unwrap()  # Safe: queue_len(queue) > 0
        result_push(result, node.clone())

        if val neighbors = graph_get(graph, node):
            for neighbor in neighbors:
                if val deg = in_degree_get(in_degree, neighbor):
                    in_degree[neighbor] = deg - 1
                    if deg - 1 == 0:
                        queue_push(queue, neighbor.clone())

    # If we processed all nodes, no cycle exists
    if result_len(result) == all_nodes_keys(all_nodes).len():
        result
    else:
        nil  # Cycle detected

