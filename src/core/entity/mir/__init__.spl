# MIR Entity - Machine IR types (basic blocks, instructions)
#
# Contains:
#   inst.spl  - CoreMirInst + MIR_* constants
#   block.spl - CoreBasicBlock type
#   func.spl  - CoreMirFunction type

arch {
  dimension = "entity"
  layer = "entity"
  imports {
    allow = ["core/entity/hir/**", "core/entity/**", "shared/**"]
    deny  = ["compiler/**", "feature/**"]
  }
  exports {
    expose = ["./inst", "./block", "./func"]
  }
}
