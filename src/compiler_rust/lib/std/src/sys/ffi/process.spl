# Sys FFI: Process - Process execution and control
#
# Runtime functions for subprocess management.

# --- Process execution ---
extern fn rt_process_exec(cmd: text, args: i64) -> i64
extern fn rt_process_spawn(cmd: text, args: i64) -> i64
extern fn rt_process_wait(pid: i64) -> i64
extern fn rt_process_kill(pid: i64) -> bool
extern fn rt_process_exit(code: i64)

# --- Current process ---
extern fn rt_process_pid() -> i64
extern fn rt_process_parent_pid() -> i64

# --- Shell execution ---
extern fn rt_shell(cmd: text) -> i64
