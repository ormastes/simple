# Sys FFI: Environment - Environment variables and program args
#
# Runtime functions for environment access.

# --- Environment variables ---
extern fn rt_env_get(name: text) -> text
extern fn rt_env_set(name: text, value: text)
extern fn rt_env_remove(name: text)
extern fn rt_env_has(name: text) -> bool

# --- Working directory ---
extern fn rt_env_cwd() -> text
extern fn rt_env_set_cwd(path: text) -> bool

# --- Paths ---
extern fn rt_env_home() -> text
extern fn rt_env_temp() -> text

# --- Program arguments ---
extern fn rt_get_args() -> i64
extern fn rt_get_arg_count() -> i64
