# Async FFI: Thread - OS thread management
#
# Runtime functions for thread-level concurrency.

# --- Thread operations ---
extern fn rt_thread_spawn(func: i64) -> i64
extern fn rt_thread_join(handle: i64) -> i64
extern fn rt_thread_sleep(millis: i64)
extern fn rt_thread_yield()
extern fn rt_thread_id() -> i64

# --- Mutex ---
extern fn rt_mutex_new() -> i64
extern fn rt_mutex_lock(mutex: i64)
extern fn rt_mutex_unlock(mutex: i64)
extern fn rt_mutex_try_lock(mutex: i64) -> bool
extern fn rt_mutex_free(mutex: i64)
