# Async FFI: Channel - Message passing between tasks
#
# Runtime functions for channel-based communication.

# --- Bounded channels ---
extern fn rt_channel_new(capacity: i64) -> i64
extern fn rt_channel_send(ch: i64, value: i64) -> bool
extern fn rt_channel_recv(ch: i64) -> i64
extern fn rt_channel_try_recv(ch: i64) -> i64
extern fn rt_channel_close(ch: i64)
extern fn rt_channel_len(ch: i64) -> i64
extern fn rt_channel_is_empty(ch: i64) -> bool
extern fn rt_channel_is_closed(ch: i64) -> bool
