# Ext FFI: Test - BDD testing framework runtime
#
# Runtime functions for spec/test execution.

# --- Test runner ---
extern fn rt_bdd_describe(name: text, block: i64)
extern fn rt_bdd_it(name: text, block: i64)
extern fn rt_bdd_before_each(block: i64)
extern fn rt_bdd_after_each(block: i64)
extern fn rt_bdd_before_all(block: i64)
extern fn rt_bdd_after_all(block: i64)

# --- Assertions ---
extern fn rt_bdd_expect(actual: i64) -> i64
extern fn rt_bdd_assert_eq(actual: i64, expected: i64) -> bool
extern fn rt_bdd_assert_ne(actual: i64, expected: i64) -> bool
extern fn rt_bdd_assert_true(val: bool) -> bool
