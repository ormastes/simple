# Effect Annotations
#
# Provides the Effect enum for categorizing function side effects.

mod effects

pub enum Effect:
    Pure
    Io
    Net
    Fs
    Unsafe
    Async

impl Effect:
    pub static fn from_decorator_name(name: text) -> Option<Effect>:
        match name:
            case "pure": Some(Effect.Pure)
            case "io": Some(Effect.Io)
            case "net": Some(Effect.Net)
            case "fs": Some(Effect.Fs)
            case "unsafe": Some(Effect.Unsafe)
            case "async": Some(Effect.Async)
            case _: None

    pub fn decorator_name(self) -> text:
        match self:
            case Pure: "pure"
            case Io: "io"
            case Net: "net"
            case Fs: "fs"
            case Unsafe: "unsafe"
            case Async: "async"
