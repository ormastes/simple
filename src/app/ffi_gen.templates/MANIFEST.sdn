package:
  name: simple-ffi-wrapper
  version: 0.1.0
  description: FFI wrapper library for Simple runtime
  license: MIT

contents:
  include:
    - simple_ffi.h
  src:
    - bootstrap_ffi.txt
  scripts:
    - build.sh

dependencies:
  rust:
    bdwgc-alloc: "0.6"
    glob: "0.3"
    hostname: "0.4"
    libc: "0.2"
    serde: "1.0"
    serde_json: "1.0"

build:
  type: cargo
  crate-type: [cdylib, rlib]
