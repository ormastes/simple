# Simple CLI - query command
# Delegates to Rust runtime via FFI

use app.cli_util (get_cli_args)
extern fn rt_cli_run_query(args: [str]) -> i64

fn print_help():
    print "Usage: simple query [options]"
    print "Queries code for patterns"
    print ""
    print "Run 'simple query --help' for Rust-level help."

fn main() -> i64:
    val args = get_cli_args()
    rt_cli_run_query(args)
