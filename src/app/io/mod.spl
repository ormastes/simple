fn timestamp_hour(micros: i64) -> i32:
    val seconds = micros / 1_000_000
    val hours = (seconds / 3600) % 24
    hours.to_i32()

fn timestamp_minute(micros: i64) -> i32:
    val seconds = micros / 1_000_000
    val minutes = (seconds / 60) % 60
    minutes.to_i32()

fn timestamp_second(micros: i64) -> i32:
    val seconds = micros / 1_000_000
    val secs = seconds % 60
    secs.to_i32()

