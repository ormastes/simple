# ============================================================================
# Platform detection - kept in hub (used by other hub functions)
# ============================================================================

extern fn rt_env_get(key: text) -> text

fn is_windows_platform() -> bool:
    val os_env = rt_env_get("OS")
    if os_env == nil:
        false
    else:
        os_env.lower().contains("windows")

