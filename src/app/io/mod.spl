fn rt_sleep_ms(milliseconds: i64):
    # Sleep for specified milliseconds
    val seconds = milliseconds / 1000
    val remainder = milliseconds % 1000
    if seconds > 0:
        shell("sleep {seconds}")
    if remainder > 0:
        shell("sleep 0.{remainder}")

