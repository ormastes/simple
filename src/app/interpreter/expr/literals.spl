# Literal Evaluation
#
# Integer, Float, String, Bool, Nil literals.

import ..core.{Value, InterpreterError}

export eval_literal

# Evaluate a literal expression
fn eval_literal(lit: &Literal) -> Result<Value, InterpreterError>:
    match lit:
        case Literal.Int(n):
            return Ok(Value.int(*n))

        case Literal.Float(f):
            return Ok(Value.float(*f))

        case Literal.String(s):
            return Ok(Value.string(s.clone()))

        case Literal.Bool(b):
            return Ok(Value.bool(*b))

        case Literal.Nil:
            return Ok(Value.nil())

        case Literal.Char(c):
            return Ok(Value.string(c.to_string()))

        case _:
            return Err(InterpreterError.NotImplemented("unknown literal".to_string()))
