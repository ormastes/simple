# Test: Can we import and USE compiler backend modules?
# Usage: SIMPLE_LIB=src bin/release/simple src/app/cli/test_compile_import.spl

use compiler.backend.backend_api (get_effective_backend_name)
use compiler.backend.llvm_tools (llc_available)

fn main():
    print "=== Compiler Module Import Test ==="

    val has_llc = llc_available()
    print "llc available: {has_llc}"

    val effective = get_effective_backend_name("auto", true)
    print "effective backend (auto, release): {effective}"

    print "=== ALL IMPORTS OK ==="
