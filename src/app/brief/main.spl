# Simple CLI - brief command
# Delegates to Rust runtime via FFI

use app.cli_util (get_cli_args)

extern fn rt_cli_run_brief(args: [str]) -> i64

fn print_help():
    print "Usage: simple brief [options]"
    print "Generates LLM-friendly code overview"
    print ""
    print "Run 'simple brief --help' for Rust-level help."

fn main() -> i64:
    val args = get_cli_args()
    rt_cli_run_brief(args)
