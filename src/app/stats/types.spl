# Statistics data structures

struct LineCount:
    code: i64
    blank: i64
    comment: i64
    total: i64

struct FileStats:
    total_files: i64
    app_files: i64
    lib_files: i64
    std_files: i64
    test_files: i64
    doc_files: i64

struct TestStats:
    total: i64
    passed: i64
    failed: i64
    skipped: i64
    sspec_count: i64
    sdoc_count: i64
    system_count: i64
    integration_count: i64
    unit_count: i64

struct CoverageStats:
    percent: f64
    lines_covered: i64
    lines_total: i64

struct FeatureStats:
    total: i64
    complete: i64
    in_progress: i64
    planned: i64

struct BugStats:
    total: i64
    open: i64
    critical: i64
    fixed: i64

struct ProjectStats:
    file_stats: FileStats
    line_stats: LineCount
    test_stats: TestStats
    coverage_stats: CoverageStats
    feature_stats: FeatureStats
    bug_stats: BugStats

export LineCount, FileStats, TestStats, CoverageStats, FeatureStats, BugStats, ProjectStats
