# Statistics data structures

struct LineCount:
    code: i64
    blank: i64
    comment: i64
    total: i64

struct FileStats:
    total_files: i64
    app_files: i64
    lib_files: i64
    std_files: i64
    test_files: i64
    doc_files: i64

struct TestStats:
    total: i64
    passed: i64
    failed: i64
    skipped: i64
    sspec_count: i64
    sdoc_count: i64
    system_count: i64
    integration_count: i64
    unit_count: i64

struct CoverageStats:
    percent: f64
    lines_covered: i64
    lines_total: i64

struct FeatureStats:
    total: i64
    complete: i64
    in_progress: i64
    planned: i64

struct BugStats:
    total: i64
    open: i64
    critical: i64
    fixed: i64

struct ProjectStats:
    file_stats: FileStats
    line_stats: LineCount
    test_stats: TestStats
    coverage_stats: CoverageStats
    feature_stats: FeatureStats
    bug_stats: BugStats

# Documentation coverage statistics by item kind
struct KindStats:
    kind: text
    total: i64
    documented: i64
    with_sdoctest: i64

# Documentation coverage statistics by module category
struct ModuleStats:
    module: text
    total: i64
    documented: i64
    with_sdoctest: i64

# Comprehensive documentation coverage statistics
struct DocCoverageStats:
    total_public_functions: i64
    functions_with_docs: i64
    functions_with_sdoctest: i64
    functions_without_sdoctest: i64
    coverage_percent: i64
    sdoctest_percent: i64
    missing_sdoctest: [text]
    by_kind: [[text]]
    by_module: [[text]]

# Inline comment coverage statistics
struct InlineCommentStats:
    total_items: i64
    with_inline_comment: i64
    with_docstring: i64
    with_both: i64
    with_neither: i64
    error_count: i64
    warn_count: i64
    info_count: i64

# Group comment coverage statistics
struct GroupCommentStats:
    total_groups: i64
    with_comment: i64
    missing_comment: i64
    by_pattern: [[text]]

export LineCount, FileStats, TestStats, CoverageStats, FeatureStats, BugStats, ProjectStats
export KindStats, ModuleStats, DocCoverageStats, InlineCommentStats, GroupCommentStats
