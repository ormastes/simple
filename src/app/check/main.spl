# Simple CLI - check command
# Delegates to Rust runtime via FFI

extern fn rt_cli_get_args() -> [str]
extern fn rt_cli_run_check(args: [str]) -> i64

fn print_help():
    print "Usage: simple check [options]"
    print "Type-checks source files without running"
    print ""
    print "Run 'simple check --help' for Rust-level help."

fn main() -> i64:
    val all_args = rt_cli_get_args()
    # Skip program name and script path
    var args = []
    var start_idx = 1
    if all_args.len() > 1 and all_args[1].ends_with("main.spl"):
        start_idx = 2
    var i = start_idx
    while i < all_args.len():
        args.push(all_args[i])
        i = i + 1
    rt_cli_run_check(args)
