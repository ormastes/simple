# Parser Module
#
# Complete parser for the Simple language.
# Port of rust/parser/src/ (all submodules)
#
# Architecture:
#   token.spl      - Token types (TokenKind, Span, Token, etc.)
#   ast.spl        - AST node types (Node, Expr, Pattern, Type, etc.)
#   lexer.spl      - Lexer/tokenizer with indentation tracking
#   error.spl      - Parse error types
#   core.spl       - Parser struct, main entry points, item dispatch
#
# Sub-parsers (to be implemented):
#   expressions.spl - Expression parsing (Pratt parser)
#   statements.spl  - Statement parsing
#   patterns.spl    - Pattern matching parsing
#   types.spl       - Type annotation parsing
#   definitions.spl - Struct/class/enum/trait/impl parsing
#   modules.spl     - Module system (use/import/export)

from token import {Span, Token, TokenKind, NamePattern, NumericSuffix,
                   FStringToken, TextSpan, PreLexInfo}
from ast import {Module, Node, Block, Expr, Pattern, Type,
                 FunctionDef, StructDef, ClassDef, EnumDef, TraitDef,
                 ImplBlock, Parameter, Field, Argument,
                 Visibility, Mutability, BinOp, UnaryOp}
from error import {ParseError, ParseContext}
from core import {Parser, ParserMode, DebugMode}

export Span, Token, TokenKind, NamePattern, NumericSuffix
export FStringToken, TextSpan, PreLexInfo
export Module, Node, Block, Expr, Pattern, Type
export FunctionDef, StructDef, ClassDef, EnumDef, TraitDef
export ImplBlock, Parameter, Field, Argument
export Visibility, Mutability, BinOp, UnaryOp
export ParseError, ParseContext
export Parser, ParserMode, DebugMode
