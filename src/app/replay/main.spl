# Simple CLI - replay command
# Delegates to Rust runtime via FFI

use app.cli_util (get_cli_args)
extern fn rt_cli_run_replay(args: [str]) -> i64

fn print_help():
    print "Usage: simple replay [options]"
    print "Replays recorded test sessions"
    print ""
    print "Run 'simple replay --help' for Rust-level help."

fn main() -> i64:
    val args = get_cli_args()
    rt_cli_run_replay(args)
