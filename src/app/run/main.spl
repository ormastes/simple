# Simple CLI - run command
# Delegates to Rust runtime via FFI

extern fn rt_cli_get_args() -> [str]
extern fn rt_cli_handle_run(args: [str], gc_log: bool, gc_off: bool) -> i64

fn print_help():
    print "Usage: simple run [options] <file>"
    print "Explicitly runs a Simple file"
    print ""
    print "Options:"
    print "  --gc-log    Enable GC logging"
    print "  --gc-off    Disable garbage collection"
    print ""
    print "Run 'simple run --help' for Rust-level help."

fn main() -> i64:
    val all_args = rt_cli_get_args()
    # Skip program name and script path
    var args = []
    var start_idx = 1
    if all_args.len() > 1 and all_args[1].ends_with("main.spl"):
        start_idx = 2
    var gc_log = false
    var gc_off = false
    var i = start_idx
    while i < all_args.len():
        if all_args[i] == "--gc-log":
            gc_log = true
        else if all_args[i] == "--gc-off":
            gc_off = true
        else:
            args.push(all_args[i])
        i = i + 1
    if args.len() > 0 and (args[0] == "--help" or args[0] == "-h"):
        print_help()
        return 0
    rt_cli_handle_run(args, gc_log, gc_off)
