# Simple CLI - targets command
# Delegates to Rust runtime via FFI

use app.cli_util (get_cli_args)
extern fn rt_cli_handle_targets() -> i64

fn print_help():
    print "Usage: simple targets"
    print "Lists available compilation targets"
    print ""
    print "Run 'simple targets --help' for Rust-level help."

fn main() -> i64:
    val all_args = get_cli_args()
    # Check for help flag
    var i = 0
    while i < all_args.len():
        if all_args[i] == "--help" or all_args[i] == "-h":
            print_help()
            return 0
        i = i + 1
    rt_cli_handle_targets()
