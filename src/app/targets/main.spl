# Simple CLI - targets command
# List available compilation target architectures

use lib.cli.cli_util (get_cli_args)

fn print_help():
    print "Usage: simple targets [options]"
    print ""
    print "List available compilation target architectures."
    print ""
    print "Options:"
    print "  --json       Output as JSON"
    print "  -h, --help   Show this help"

struct Target:
    name: text
    description: text
    tier: text

fn get_targets() -> [Target]:
    [
        Target(name: "x86_64-linux", description: "64-bit x86 Linux (default)", tier: "1"),
        Target(name: "aarch64-linux", description: "64-bit ARM Linux (ARM servers)", tier: "1"),
        Target(name: "x86_64-darwin", description: "64-bit x86 macOS", tier: "2"),
        Target(name: "aarch64-darwin", description: "64-bit ARM macOS (Apple Silicon)", tier: "1"),
        Target(name: "x86_64-windows", description: "64-bit x86 Windows", tier: "3"),
        Target(name: "i686-linux", description: "32-bit x86 Linux", tier: "3"),
        Target(name: "armv7-linux", description: "32-bit ARM Linux", tier: "3"),
        Target(name: "riscv64-linux", description: "64-bit RISC-V Linux", tier: "3"),
        Target(name: "riscv32-linux", description: "32-bit RISC-V Linux", tier: "3")
    ]

fn main() -> i64:
    val args = get_cli_args()

    var as_json = false

    for arg in args:
        if arg == "-h" or arg == "--help":
            print_help()
            return 0
        elif arg == "--json":
            as_json = true

    val targets = get_targets()

    if as_json:
        print "["
        var i = 0
        for t in targets:
            val comma = if i < targets.len() - 1: "," else: ""
            print "  {\"name\": \"{t.name}\", \"description\": \"{t.description}\", \"tier\": {t.tier}}{comma}"
            i = i + 1
        print "]"
        return 0

    print "Available target architectures:"
    print ""
    print "Tier 1 (fully supported):"
    for t in targets:
        if t.tier == "1":
            print "  {t.name}    {t.description}"
    print ""
    print "Tier 2 (supported, may have gaps):"
    for t in targets:
        if t.tier == "2":
            print "  {t.name}    {t.description}"
    print ""
    print "Tier 3 (experimental):"
    for t in targets:
        if t.tier == "3":
            print "  {t.name}    {t.description}"
    print ""
    print "Usage:"
    print "  simple compile app.spl --target aarch64-darwin"
    0
