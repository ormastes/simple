# Glob Module - FFI Spec
#
# Glob pattern matching for the Simple runtime.
# Generates build/rust/ffi_gen/src/glob.rs
#
# Usage: simple ffi-gen --gen-intern src/app/ffi_gen/specs/glob.spl

use app.ffi_gen.intern_codegen (InternFnSpec, InternParamSpec)

fn glob_specs() -> [InternFnSpec]:
    var specs: [InternFnSpec] = []

    # =========================================================================
    # Glob Pattern Matching
    # =========================================================================

    specs.push(InternFnSpec(
        name: "rt_glob", category: "glob",
        params: [InternParamSpec(name: "pattern", value_type: "String")],
        return_type: "Value", runtime_fn: "rt_glob",
        doc: "Match files using glob pattern, returns array of paths"
    ))

    specs
