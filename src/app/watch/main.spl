# Simple CLI - watch command
# Delegates to Rust runtime via FFI

extern fn rt_cli_get_args() -> [str]
extern fn rt_cli_watch_file(path: str) -> i64

fn print_help():
    print "Usage: simple watch <file>"
    print "Watches file for changes and auto-recompiles"
    print ""
    print "Run 'simple watch --help' for Rust-level help."

fn main() -> i64:
    val all_args = rt_cli_get_args()
    # Skip program name and script path
    var args = []
    var start_idx = 1
    if all_args.len() > 1 and all_args[1].ends_with("main.spl"):
        start_idx = 2
    var i = start_idx
    while i < all_args.len():
        args.push(all_args[i])
        i = i + 1
    if args.len() == 0:
        print "Error: missing file path"
        print_help()
        return 1
    if args[0] == "--help" or args[0] == "-h":
        print_help()
        return 0
    rt_cli_watch_file(args[0])
