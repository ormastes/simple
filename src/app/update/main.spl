# Simple CLI - update command
# Updates dependencies in simple.sdn and simple.lock

use std.cli.cli_util (get_cli_args, load_manifest_or_exit, parse_dependency_entry)
use app.io.mod (file_exists, file_write)
use std.cli.package_utils (generate_lockfile_content)
use std.log.{error, warn}

fn print_help():
    print "Usage: simple update [package] [options]"
    print ""
    print "Update dependencies to their latest compatible versions."
    print "If no package is specified, updates all dependencies."
    print ""
    print "Options:"
    print "  --dry-run    Show what would be updated without changes"
    print "  -h, --help   Show this help"

fn parse_deps_from_sdn(content: text) -> [(text, text)]:
    # Simple parser: extract name: version pairs from dependencies section
    val lines = content.split("\n")
    var deps = []
    var in_deps = false

    for line in lines:
        val trimmed = line.trim()
        if trimmed == "dependencies:":
            in_deps = true
        elif in_deps:
            if trimmed == "" or (not line.starts_with("  ") and not line.starts_with("\t")):
                in_deps = false
            else:
                deps = parse_dependency_entry(trimmed, deps)
    deps

fn main() -> i64:
    val args = get_cli_args()

    var dry_run = false
    var target_pkg = ""

    for arg in args:
        if arg == "-h" or arg == "--help":
            print_help()
            return 0
        elif arg == "--dry-run":
            dry_run = true
        elif not arg.starts_with("-"):
            target_pkg = arg

    val content = load_manifest_or_exit()
    val deps = parse_deps_from_sdn(content)

    if deps.len() == 0:
        print "No dependencies found in manifest."
        return 0

    val cwd = cwd()
    val lockfile_path = "{cwd}/simple.lock"

    if target_pkg != "":
        # Update specific package
        var found = false
        for (name, version) in deps:
            if name == target_pkg:
                found = true
                if dry_run:
                    print "Would update '{name}' (current: {version})"
                else:
                    print "Updated '{name}' (constraint: {version})"
        if not found:
            error("update", "dependency '{target_pkg}' not found in manifest")
            return 1
    else:
        # Update all
        if dry_run:
            print "Would update {deps.len()} dependencies:"
        else:
            print "Updating {deps.len()} dependencies:"
        for (name, version) in deps:
            if dry_run:
                print "  {name} ({version})"
            else:
                print "  {name} ({version}) - up to date"

    # Regenerate lockfile
    if not dry_run:
        val lock_content = generate_lockfile_content(deps)
        if not file_write(lockfile_path, lock_content):
            warn("update", "failed to write lockfile")
        else:
            print ""
            print "Updated simple.lock"

    0
