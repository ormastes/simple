# Simple CLI - todo-scan command
# Delegates to Rust runtime via FFI

use app.cli_util (get_cli_args)
extern fn rt_cli_run_todo_scan(args: [str]) -> i64

fn print_help():
    print "Usage: simple todo-scan [options]"
    print "Scans source for TODO/FIXME comments"
    print ""
    print "Run 'simple todo-scan --help' for Rust-level help."

fn main() -> i64:
    val args = get_cli_args()
    rt_cli_run_todo_scan(args)
