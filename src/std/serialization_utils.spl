# Serialization Utilities - Facade Module
# Comprehensive serialization/deserialization for Simple language
#
# This is a facade module that re-exports functionality from submodules:
# - types: Type constants (nil, bool, int, text, list, etc.)
# - serialize: Serialization functions (binary, text, collections)
# - deserialize: Deserialization functions
# - formats: SDN format and format detection
# - utilities: Pretty printing, tagging, versioning, cloning, hashing

use serialization.types
use serialization.serialize
use serialization.deserialize
use serialization.formats
use serialization.utilities

# ============================================================================
# Re-export Types
# ============================================================================

export types.{
    type_nil, type_bool, type_int, type_float, type_text,
    type_list, type_tuple, type_dict, type_custom
}

# ============================================================================
# Re-export Serialize
# ============================================================================

export serialize.{
    char_code_safe, char_from_code_safe,
    write_varint, read_varint,
    serialize_int_bytes, serialize_bool_bytes, serialize_nil_bytes, serialize_text_bytes,
    escape_string, unescape_string, quote_string, unquote_string,
    serialize_int, serialize_bool, serialize_nil, serialize_text,
    serialize_list, serialize_tuple_text, serialize_dict,
    serialize_int_list, serialize_text_list, serialize_bool_list,
    serialize_int_list_bytes, serialize_text_list_bytes
}

# ============================================================================
# Re-export Formats
# ============================================================================

export formats.{
    to_sdn_int, to_sdn_bool, to_sdn_nil, to_sdn_text,
    to_sdn_list, to_sdn_tuple, to_sdn_dict,
    is_numeric_text, detect_format, is_valid_sdn
}

# ============================================================================
# Re-export Utilities
# ============================================================================

export utilities.{
    pretty_print_indent, pretty_list, pretty_tuple, pretty_dict,
    tag_type, get_type_tag, strip_type_tag,
    define_schema, validate_field_type,
    add_version, get_version, strip_version, parse_int_safe, char_to_digit_safe,
    deep_clone_int, deep_clone_bool, deep_clone_text, deep_clone_list_int, deep_clone_list_text,
    shallow_clone_list_int, shallow_clone_list_text,
    deep_equal_int, deep_equal_bool, deep_equal_text, deep_equal_list_int, deep_equal_list_text,
    structural_hash_int, structural_hash_bool, structural_hash_text,
    structural_hash_list_int, structural_hash_list_text, combine_hashes,
    mark_compressed, is_compressed, mark_encrypted, is_encrypted,
    write_bytes, read_bytes, read_bytes_with_length,
    bytes_to_hex, int_to_hex, hex_to_bytes
}
