# Extract byte from 32-bit word (index 0-3, big-endian)
fn extract_byte(word: i64, index: i64) -> i64:
    var shift = (3 - index) * 8
    var shifted = u32_shr(word, shift)
    u32_and(shifted, 255)

# Pack 4 bytes into 32-bit word (big-endian)
fn pack_u32(b0: i64, b1: i64, b2: i64, b3: i64) -> i64:
    var w0 = u32_shl(b0, 24)
    var w1 = u32_shl(b1, 16)
    var w2 = u32_shl(b2, 8)
    var w3 = b3
    var temp1 = u32_or(w0, w1)
    var temp2 = u32_or(w2, w3)
    u32_or(temp1, temp2)

# Convert bytes to 32-bit words (big-endian)
fn bytes_to_u32_array(bytes: list[i64]) -> list[i64]:
    var words = []
    var i = 0
    while i < bytes.length():
        if i + 3 < bytes.length():
            var word = pack_u32(bytes[i], bytes[i + 1], bytes[i + 2], bytes[i + 3])
            words = words + [word]
        i = i + 4
    words

# Convert 32-bit words to bytes (big-endian)
fn u32_array_to_bytes(words: list[i64]) -> list[i64]:
    var bytes = []
    var i = 0
    while i < words.length():
        var word = words[i]
        var b0 = extract_byte(word, 0)
        var b1 = extract_byte(word, 1)
        var b2 = extract_byte(word, 2)
        var b3 = extract_byte(word, 3)
        bytes = bytes + [b0, b1, b2, b3]
        i = i + 1
    bytes

# Convert text to bytes (ASCII/UTF-8)
fn text_to_bytes(text: text) -> list[i64]:
    var bytes = []
    var i = 0
    while i < text.length():
        var char = text[i]
        # Simple ASCII conversion (would need proper UTF-8 for production)
        var byte_val = 65  # Default 'A'
        if char == "a": byte_val = 97
        if char == "b": byte_val = 98
        if char == "c": byte_val = 99
        if char == "d": byte_val = 100
        if char == "e": byte_val = 101
        # ... (simplified for demonstration)
        bytes = bytes + [byte_val]
        i = i + 1
    bytes

# Convert bytes to hex string
fn bytes_to_hex(bytes: list[i64]) -> text:
    var hex = ""
    var hex_chars = "0123456789abcdef"
    var i = 0
    while i < bytes.length():
        var byte_val = bytes[i]
        var high = byte_val / 16
        var low = byte_val % 16
        hex = hex + hex_chars[high] + hex_chars[low]
        i = i + 1
    hex

