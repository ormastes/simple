# HELPER FUNCTIONS - Bitwise Operations
# ============================================================================

# Convert 32-bit unsigned to signed for arithmetic
fn u32_to_i64(u: i64) -> i64:
    u

# Bitwise AND (32-bit)
fn u32_and(a: i64, b: i64) -> i64:
    var result = 0
    var bit = 1
    var i = 0
    while i < 32:
        var a_bit = (a / bit) % 2
        var b_bit = (b / bit) % 2
        if a_bit == 1:
            if b_bit == 1:
                result = result + bit
        bit = bit * 2
        i = i + 1
    result

# Bitwise OR (32-bit)
fn u32_or(a: i64, b: i64) -> i64:
    var result = 0
    var bit = 1
    var i = 0
    while i < 32:
        var a_bit = (a / bit) % 2
        var b_bit = (b / bit) % 2
        if a_bit == 1:
            result = result + bit
        if b_bit == 1:
            var already_set = (a_bit == 1)
            if not already_set:
                result = result + bit
        bit = bit * 2
        i = i + 1
    result

# Bitwise XOR (32-bit)
fn u32_xor(a: i64, b: i64) -> i64:
    var result = 0
    var bit = 1
    var i = 0
    while i < 32:
        var a_bit = (a / bit) % 2
        var b_bit = (b / bit) % 2
        if a_bit != b_bit:
            result = result + bit
        bit = bit * 2
        i = i + 1
    result

# Left shift (32-bit)
fn u32_shl(value: i64, shift: i64) -> i64:
    var result = value
    var i = 0
    while i < shift:
        result = result * 2
        i = i + 1
    u32_and(result, 4294967295)  # Mask to 32 bits

# Right shift (32-bit, logical)
fn u32_shr(value: i64, shift: i64) -> i64:
    var result = value
    var i = 0
    while i < shift:
        result = result / 2
        i = i + 1
    result

# Rotate left (32-bit)
fn u32_rol(value: i64, shift: i64) -> i64:
    var normalized_shift = shift % 32
    var left_part = u32_shl(value, normalized_shift)
    var right_part = u32_shr(value, 32 - normalized_shift)
    u32_or(left_part, right_part)

# Add two 32-bit numbers with overflow wrapping
fn u32_add(a: i64, b: i64) -> i64:
    var sum = a + b
    u32_and(sum, 4294967295)  # Mask to 32 bits

