# Common UI Strings and Severity Levels
# Shared constants used across all error categories

# Severity levels
val severity = {
    "ERROR": "error",
    "WARNING": "warning",
    "INFO": "info",
    "HELP": "help",
    "NOTE": "note"
}

# Common compiler error messages
val UNDEFINED_VARIABLE_MSG = "cannot find `{name}` in this scope"
val UNDEFINED_FUNCTION_MSG = "cannot find function `{name}` in this scope"
val TYPE_MISMATCH_MSG = "expected type `{expected}`, found `{found}`"
val INVALID_ASSIGNMENT_MSG = "cannot assign to `{target}`"
val INVALID_OPERATION_MSG = "cannot {operation} on type `{type}`"
val MISSING_FIELD_MSG = "missing field `{field}` in `{type}`"
val DUPLICATE_DEFINITION_MSG = "`{name}` is defined multiple times"

# Common labels
val UNDEFINED_VARIABLE_LABEL = "not found in this scope"
val TYPE_MISMATCH_LABEL = "expected `{expected}`, found `{found}`"
val INVALID_ASSIGNMENT_LABEL = "cannot assign here"
val INVALID_OPERATION_LABEL = "invalid operation"
val MISSING_FIELD_LABEL = "missing field `{field}`"
val DUPLICATE_DEFINITION_LABEL = "`{name}` redefined here"

# Common help messages
val UNDEFINED_VARIABLE_HELP = "check the variable name or import the module defining it"
val TYPE_MISMATCH_HELP = "convert the value to `{expected}` or change the expected type"
val INVALID_ASSIGNMENT_HELP = "only variables declared with `var` can be reassigned"
val MISSING_FIELD_HELP = "add the missing field or use a struct that has it"
val DUPLICATE_DEFINITION_HELP = "remove or rename one of the definitions"

# Export all constants
export severity
export UNDEFINED_VARIABLE_MSG, UNDEFINED_FUNCTION_MSG, TYPE_MISMATCH_MSG
export INVALID_ASSIGNMENT_MSG, INVALID_OPERATION_MSG, MISSING_FIELD_MSG
export DUPLICATE_DEFINITION_MSG
export UNDEFINED_VARIABLE_LABEL, TYPE_MISMATCH_LABEL, INVALID_ASSIGNMENT_LABEL
export INVALID_OPERATION_LABEL, MISSING_FIELD_LABEL, DUPLICATE_DEFINITION_LABEL
export UNDEFINED_VARIABLE_HELP, TYPE_MISMATCH_HELP, INVALID_ASSIGNMENT_HELP
export MISSING_FIELD_HELP, DUPLICATE_DEFINITION_HELP
