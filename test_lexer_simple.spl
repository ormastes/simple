use core.lexer.{lex_init, lex_next, lex_cur_kind, lex_cur_text}
use core.tokens.{tok_kind_name, TOK_EOF}

val source = "class Box:"
lex_init(source)

for i in 0..20:
    val kind = lex_next()
    val text = lex_cur_text()
    val kind_name = tok_kind_name(kind)
    print "{i}: {kind_name} '{text}'"
    if kind == TOK_EOF:
        break
