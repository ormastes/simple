# Phase 0: Plain Text Training (Korean Fluency)
# Extends base configuration

extends: "base.sdn"

training:
  epochs: 1
  max_samples: 10000
  learning_rate: 0.0002

data:
  type: "plain_text"
  path: "example/medgemma_korean/data/plain_text"
  format: "text"

output:
  lora_path: "example/medgemma_korean/models/phase0/lora_0"
  merged_path: "example/medgemma_korean/models/phase0/merged"

tags:
  - "phase0"
  - "plain_text"
  - "korean_fluency"
