# Simple Lexer Test
# Test just the lexer without full pipeline

use lib.pure.lexer (lex_source, Token, TokenKind)

fn main():
    print "Testing Pure Simple Lexer"
    print "========================="
    print ""

    test_numbers()
    test_operators()
    test_keywords()

fn test_numbers():
    print "Numbers:"
    val source = "42 123 999"
    val tokens = lex_source(source)
    print "  Source: '{source}'"
    print "  Tokens: {tokens.len()}"
    print ""

fn test_operators():
    print "Operators:"
    val source = "+ - * / =="
    val tokens = lex_source(source)
    print "  Source: '{source}'"
    print "  Tokens: {tokens.len()}"
    print ""

fn test_keywords():
    print "Keywords:"
    val source = "val var fn if else"
    val tokens = lex_source(source)
    print "  Source: '{source}'"
    print "  Tokens: {tokens.len()}"
    print ""

main()
