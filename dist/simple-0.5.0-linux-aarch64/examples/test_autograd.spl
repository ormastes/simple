use lib.pure.autograd (tensor_from_data, backward, tensor_mul_scalar)

fn main():
    print "Testing autograd imports..."
    
    val x = tensor_from_data([3.0], [1], requires_grad: true)
    val y = tensor_mul_scalar(x, 2.0)
    
    print "x = {x.value.data[0]}"
    print "y = x * 2 = {y.value.data[0]}"
    
    backward(y)
    
    if x.grad.?:
        print "dy/dx = {x.grad.?.data[0]}"
        print "Expected: 2.0"
        print "✓ Autograd working!"
    else:
        print "✗ No gradient"

main()
