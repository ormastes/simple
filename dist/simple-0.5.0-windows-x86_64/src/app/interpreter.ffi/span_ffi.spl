# Span Interop FFI
#
# Bridge between Simple Span values and Rust compiler Span types.

export rt_span_create, rt_span_start, rt_span_end, rt_span_line, rt_span_column, rt_span_free

extern fn rt_span_create(start: i64, end: i64, line: i64, column: i64) -> i64
extern fn rt_span_start(handle: i64) -> i64
extern fn rt_span_end(handle: i64) -> i64
extern fn rt_span_line(handle: i64) -> i64
extern fn rt_span_column(handle: i64) -> i64
extern fn rt_span_free(handle: i64)
