{
  "_comment": "MCP Servers Configuration",

  "mcpServers": {
    "simple-mcp": {
      "_info": "34 tools (debug + debug_log + diag)",
      "command": "bin/release/simple",
      "args": ["src/app/mcp/main.spl"],
      "env": {
        "SIMPLE_LIB": "src",
        "RUST_LOG": "error"
      }
    },

    "simple-mcp-jj": {
      "_info": "48 jj tools + 27 git compat tools + resources + prompts",
      "command": "bin/release/simple",
      "args": ["src/app/mcp_jj/main.spl"],
      "env": {
        "SIMPLE_LIB": "src",
        "RUST_LOG": "error"
      }
    },

    "simple-mcp-fileio": {
      "_info": "File I/O with protection engine",
      "command": "bin/release/simple",
      "args": ["src/app/mcp/fileio_main.spl"],
      "env": {
        "SIMPLE_LIB": "src",
        "RUST_LOG": "error"
      }
    }

  }
}
