# 01_literals_strings.spl - Numeric formats, interpolation

# Numeric literal formats with underscores
let dec = 1_000_000
let hex = 0xFF
let bin = 0b1111_0000
let oct = 0o755

# Interpolated string
print "dec={dec} hex={hex} bin={bin} oct={oct}"

# Raw string (single quotes = no interpolation)
let path = 'C:\Users\name'
print "raw_path={path}"

# Exit code based on hex value
main = hex
