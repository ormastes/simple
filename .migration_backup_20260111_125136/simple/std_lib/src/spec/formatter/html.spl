# HTML Documentation Generator for BDD Specs
# Converts describe/context/it blocks into interactive HTML documentation

use core.collections.{List, Dict}
use core.string.String

class HtmlFormatter:
    output: String
    template: String

    fn new() -> HtmlFormatter:
        return HtmlFormatter(
            output: String.empty(),
            template: default_template()
        )

    fn new_with_template(template: String) -> HtmlFormatter:
        return HtmlFormatter(
            output: String.empty(),
            template: template
        )

    fn escape_html(text: String) -> String:
        return text
            .replace("&", "&amp;")
            .replace("<", "&lt;")
            .replace(">", "&gt;")
            .replace("\"", "&quot;")
            .replace("'", "&#39;")

    fn format_describe(name: String, id: String) -> String:
        let escaped = self.escape_html(name)
        return """
        <section class="describe" id="{id}">
            <h2 class="describe-title">{escaped}</h2>
            <div class="describe-content">
        """

    fn format_context(name: String, id: String) -> String:
        let escaped = self.escape_html(name)
        return """
            <div class="context" id="{id}">
                <h3 class="context-title">{escaped}</h3>
                <div class="context-examples">
        """

    fn format_example(name: String, status: String, error: Option<String>, code: Option<String>) -> String:
        let escaped_name = self.escape_html(name)
        let status_class = match status:
            "pass" => "success"
            "fail" => "failure"
            "skip" => "skipped"
            _ => "unknown"

        let icon = match status:
            "pass" => "✅"
            "fail" => "❌"
            "skip" => "⏭️"
            _ => "❓"

        let mut result = """
                    <div class="example {status_class}">
                        <h4 class="example-title">
                            <span class="status-icon">{icon}</span>
                            {escaped_name}
                        </h4>
        """

        if let Some(err) = error:
            let escaped_err = self.escape_html(err)
            result = result + """
                        <div class="error-message">
                            <strong>Error:</strong>
                            <pre>{escaped_err}</pre>
                        </div>
            """

        if let Some(c) = code:
            let escaped_code = self.escape_html(c)
            result = result + """
                        <div class="code-block">
                            <pre><code class="language-simple">{escaped_code}</code></pre>
                        </div>
            """

        result = result + "                    </div>\n"
        return result

    fn close_context() -> String:
        return "                </div>\n            </div>\n"

    fn close_describe() -> String:
        return "            </div>\n        </section>\n"

# Default HTML template with CSS
