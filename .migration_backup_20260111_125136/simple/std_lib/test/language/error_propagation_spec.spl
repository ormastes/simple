import spec

describe "Error Propagation Operator ?":

    context "Basic Result propagation":

        it "unwraps Ok value and continues", skip: true:
            fn read_file(path: String) -> Result<String, Error>:
                if path == "valid.txt":
                    return Ok("content")
                else:
                    return Err(Error("File not found"))

            fn process(path: String) -> Result<String, Error>:
                let content = read_file(path)?
                return Ok(content.upper())

            let result = process("valid.txt")
            expect(result).to_be_ok()
            expect(result.unwrap()).to_equal("CONTENT")

        it "propagates Err early without executing rest", skip: true:
            let executed = false

            fn failing() -> Result<i64, String>:
                return Err("failed")

            fn test_early_return() -> Result<i64, String>:
                let x = failing()?
                executed = true  # Should not reach here
                return Ok(x + 1)

            let result = test_early_return()
            expect(result).to_be_err()
            expect(result.unwrap_err()).to_equal("failed")
            expect(executed).to_be_false()

    context "Option propagation":

        it "unwraps Some value and continues", skip: true:
            fn find_user(id: i64) -> Option<String>:
                if id == 1:
                    return Some("Alice")
                else:
                    return None

            fn get_username(id: i64) -> Option<String>:
                let user = find_user(id)?
                return Some(user.upper())

            let result = get_username(1)
            expect(result).to_be_some()
            expect(result.unwrap()).to_equal("ALICE")

        it "propagates None early", skip: true:
            fn find_user(id: i64) -> Option<String>:
                return None

            fn get_username(id: i64) -> Option<String>:
                let user = find_user(id)?
                return Some(user.upper())  # Should not reach

            let result = get_username(999)
            expect(result).to_be_none()

    context "Chaining multiple operations":

        it "chains multiple ? operators", skip: true:
            fn parse(s: String) -> Result<i64, String>:
                if s.is_numeric():
                    return Ok(s.to_i64())
                else:
                    return Err("Not a number")

            fn validate(n: i64) -> Result<i64, String>:
                if n > 0:
                    return Ok(n)
                else:
                    return Err("Must be positive")

            fn transform(n: i64) -> Result<i64, String>:
                return Ok(n * 2)

            fn pipeline(input: String) -> Result<i64, String>:
                let parsed = parse(input)?
                let validated = validate(parsed)?
                let transformed = transform(validated)?
                return Ok(transformed)

            let result = pipeline("42")
            expect(result).to_be_ok()
            expect(result.unwrap()).to_equal(84)

        it "stops at first error in chain", skip: true:
            fn step1() -> Result<i64, String>:
                return Ok(1)

            fn step2(x: i64) -> Result<i64, String>:
                return Err("step2 failed")

            fn step3(x: i64) -> Result<i64, String>:
                return Ok(x + 1)

            fn pipeline() -> Result<i64, String>:
                let a = step1()?
                let b = step2(a)?
                let c = step3(b)?  # Should not reach
                return Ok(c)

            let result = pipeline()
            expect(result).to_be_err()
            expect(result.unwrap_err()).to_equal("step2 failed")

