# Browser Console API
#
# Provides access to the browser's console for logging, debugging, and diagnostics.
# This module wraps the JavaScript console object and makes it available to Simple code
# compiled to WebAssembly.
#
# Example:
#   ```
#   import browser.console as console
#
#   console.log("Application started")
#   console.warn("Low memory warning")
#   console.error("Failed to load resource")
#   console.info("User logged in: ", username)
#   console.debug("Variable state: ", value)
#   ```

# Log a message to the console
#
# Outputs a message at the "log" level (standard output).
# Multiple arguments are concatenated with spaces.
#
# Example:
#   ```
#   console.log("User count:", 42)
#   # Output: "User count: 42"
#   ```
@extern("browser", "console_log")
fn log(message: str):
    pass

# Log a warning message
#
# Outputs a message at the "warn" level (typically yellow in browser console).
#
# Example:
#   ```
#   console.warn("API deprecated, use v2 instead")
#   ```
@extern("browser", "console_warn")
fn warn(message: str):
    pass

# Log an error message
#
# Outputs a message at the "error" level (typically red in browser console).
#
# Example:
#   ```
#   console.error("Failed to fetch data:", error_msg)
#   ```
@extern("browser", "console_error")
fn error(message: str):
    pass

# Log an informational message
#
# Outputs a message at the "info" level (typically blue in browser console).
#
# Example:
#   ```
#   console.info("Configuration loaded successfully")
#   ```
@extern("browser", "console_info")
fn info(message: str):
    pass

# Log a debug message
#
# Outputs a message at the "debug" level (typically gray in browser console).
# Often filtered out in production builds.
#
# Example:
#   ```
#   console.debug("Internal state:", state_value)
#   ```
@extern("browser", "console_debug")
fn debug(message: str):
    pass

# Clear the console
#
# Removes all messages from the browser console.
#
# Example:
#   ```
#   console.clear()
#   ```
@extern("browser", "console_clear")
fn clear():
    pass

# Start a console timer
#
# Begins a timer with the given label. Use time_end() to stop and log duration.
#
# Example:
#   ```
#   console.time("data-load")
#   load_data()
#   console.time_end("data-load")
#   # Output: "data-load: 125.3ms"
#   ```
@extern("browser", "console_time")
fn time(label: str):
    pass

# End a console timer and log duration
#
# Stops the timer with the given label and outputs the elapsed time.
#
# Example:
#   ```
#   console.time("render")
#   render_ui()
#   console.time_end("render")
#   ```
@extern("browser", "console_time_end")
fn time_end(label: str):
    pass

# Log a stack trace
#
# Outputs a stack trace showing the call path to this point.
#
# Example:
#   ```
#   fn deep_function():
#       console.trace("Call path:")
#   ```
@extern("browser", "console_trace")
fn trace(message: str):
    pass

# Create a console group
#
# Starts a collapsible group in the console. Use group_end() to close.
#
# Example:
#   ```
#   console.group("User Details")
#   console.log("Name:", user.name)
#   console.log("Email:", user.email)
#   console.group_end()
#   ```
@extern("browser", "console_group")
fn group(label: str):
    pass

# Create a collapsed console group
#
# Like group(), but starts collapsed.
#
# Example:
#   ```
#   console.group_collapsed("Debug Info")
#   console.log("Details here...")
#   console.group_end()
#   ```
@extern("browser", "console_group_collapsed")
fn group_collapsed(label: str):
    pass

# End a console group
#
# Closes the current console group.
@extern("browser", "console_group_end")
fn group_end():
    pass

# Log a table
#
# Displays data in a table format (if supported by browser).
#
# Example:
#   ```
#   let users = [
#       {"name": "Alice", "age": 30},
#       {"name": "Bob", "age": 25}
#   ]
#   console.table(users)
#   ```
@extern("browser", "console_table")
fn table(data: List):
    pass

# Assert a condition
#
# Logs an error message if the condition is false.
#
# Example:
#   ```
#   console.assert(x > 0, "x must be positive")
#   ```
@extern("browser", "console_assert")
fn assert(condition: bool, message: str):
    pass

# Count occurrences of a label
#
# Increments and logs a counter for the given label.
#
# Example:
#   ```
#   for i in range(10):
#       console.count("loop")
#   # Output: "loop: 1", "loop: 2", ... "loop: 10"
#   ```
@extern("browser", "console_count")
fn count(label: str):
    pass

# Reset a counter
#
# Resets the counter for the given label to zero.
#
# Example:
#   ```
#   console.count_reset("loop")
#   ```
@extern("browser", "console_count_reset")
fn count_reset(label: str):
    pass
