# Minimal JSON-RPC Transport for LMS
# Uses only Simple syntax features that currently work

# Write a simple response
pub fn write_response(id: Int, message: String):
    let response_text = "Content-Length: 50\r\n\r\n{\"jsonrpc\":\"2.0\",\"id\":" + id.to_string() + "}"
    print(response_text)

# Log debug message
pub fn log_debug(msg: String):
    print("[DEBUG] " + msg)

# Log error message
pub fn log_error(msg: String):
    print("[ERROR] " + msg)
