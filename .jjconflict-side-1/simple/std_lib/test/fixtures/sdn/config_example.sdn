# Application Configuration Example
# Demonstrates real-world config file structure

app:
    name: MyService
    version: 2.1.0
    environment: production
    debug: false

server:
    host: 0.0.0.0
    port: 8080
    workers: 4
    timeout: 30
    config:
        max_connections: 1000
        keep_alive: true
        compression: gzip

database:
    host: localhost
    port: 5432
    name: mydb
    user: admin
    pool:
        min: 5
        max: 20
        timeout: 5

cache:
    enabled: true
    backend: redis
    settings:
        host: localhost
        port: 6379
        db: 0
        ttl: 3600

features = [auth, logging, metrics, monitoring]

logging:
    level: info
    format: json
    outputs = [console, file]
    file:
        path: /var/log/myservice.log
        max_size: 100mb
        rotate: daily

monitoring:
    enabled: true
    endpoint: http://metrics.example.com
    interval: 60
    metrics = [cpu, memory, requests, errors]
