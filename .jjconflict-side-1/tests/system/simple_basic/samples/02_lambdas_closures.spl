# 02_lambdas_closures.spl - Lambda expressions and closures

# Simple lambda
add_one = \x: x + 1
print "add_one(5) = {add_one(5)}"

# Lambda with closure
multiplier = 10
scale = \x: x * multiplier
print "scale(3) = {scale(3)}"

# Multi-parameter lambda
add = \a, b: a + b
print "add(2, 3) = {add(2, 3)}"

# Exit with lambda result
main = scale(4)
