print("testing scanner")
import scanner
print("scanner imported")
let r = scanner.scan_directory("simple/app/depgraph", false)
match r:
    case Err(e):
        print("Error: {e}")
    case Ok(scan):
        print("Success!")
        print("Directory: {scan.directory}")
        print("Has init: {scan.has_init}")
        print("SPL files: {scan.spl_files.len()}")
        for f in scan.spl_files:
            print("  - {f}")
        print("Child dirs: {scan.child_dirs.len()}")
print("done")
