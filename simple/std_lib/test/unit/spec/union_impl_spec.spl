# Test file for union keyword and impl blocks on enums/unions

use std.spec.*

# Define a union type (alias for enum with data)
union Shape:
    Circle(f64)
    Rectangle(f64, f64)

describe "Union keyword":
    it "parses union as alias for enum":
        let c = Shape.Circle(5.0)
        expect c to be_truthy

    it "creates Circle variant":
        let c = Shape.Circle(2.0)
        expect c to be_truthy

    it "creates Rectangle variant":
        let r = Shape.Rectangle(3.0, 4.0)
        expect r to be_truthy
