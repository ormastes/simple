# Actor Body Execution Tests

describe "Actor Body Execution":
    it "spawns actor that returns value":
        fn worker():
            return 42

        let pid = spawn(worker)
        expect pid != nil

    it "spawns multiple actors":
        fn worker1():
            return 10

        fn worker2():
            return 20

        let pid1 = spawn(worker1)
        let pid2 = spawn(worker2)

        expect pid1 != nil
        expect pid2 != nil

describe "Actor Messaging":
    it "sends message to actor":
        fn simple_worker():
            return 0

        let pid = spawn(simple_worker)
        send(pid, 42)
        expect true
