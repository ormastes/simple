# Collections Example
# Demonstrates arrays and dictionaries in both inline and block forms

# Inline arrays (short form)
simple_array = [1, 2, 3, 4, 5]
string_array = [apple, banana, cherry]
mixed_array = [42, "hello", true, null]
empty_array = []

# Block arrays (long form)
block_array:
    first item
    second item
    third item
    fourth item

number_list:
    1
    2
    3
    4
    5

# Inline dictionaries (short form)
simple_dict = {x: 10, y: 20, z: 30}
config_dict = {enabled: true, port: 8080, host: localhost}
empty_dict = {}

# Block dictionaries (long form)
person:
    name: Alice
    age: 30
    city: NYC
    active: true

server:
    host: localhost
    port: 8080
    protocol: http
    secure: false

# Nested collections
nested_inline = {
    items: [1, 2, 3],
    config: {x: 10, y: 20},
    flags: [true, false, true]
}

nested_block:
    level1:
        level2:
            level3:
                value: deep
                number: 42

    arrays:
        numbers = [1, 2, 3]
        strings = [a, b, c]
        mixed = [1, "two", 3.0]

    dicts:
        first = {a: 1, b: 2}
        second = {x: 10, y: 20}

# Arrays of dictionaries
users = [
    {name: Alice, age: 30},
    {name: Bob, age: 25},
    {name: Carol, age: 35}
]

# Dictionaries of arrays
groups:
    admins = [alice, bob]
    users = [carol, dave, eve]
    moderators = [frank]

# Complex nesting
complex:
    data:
        items = [
            {id: 1, values: [a, b, c]},
            {id: 2, values: [d, e, f]},
            {id: 3, values: [g, h, i]}
        ]
        meta:
            count: 3
            flags = [true, true, false]
