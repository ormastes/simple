# Electron Clipboard API
# Read and write clipboard content

# External FFI declarations
extern fn electron_clipboard_read_text(): String
extern fn electron_clipboard_write_text(text: String): void
extern fn electron_clipboard_read_html(): String
extern fn electron_clipboard_write_html(html: String): void
extern fn electron_clipboard_clear(): void
extern fn electron_clipboard_has_text(): bool
extern fn electron_clipboard_has_html(): bool

# Read clipboard as plain text
pub fn read_text(): String =
    """Read clipboard contents as plain text.

    Example:
        text = clipboard.read_text()
        print("Clipboard: {text}")
    """
    electron_clipboard_read_text()

# Write plain text to clipboard
pub fn write_text(text: String):
    """Write plain text to clipboard.

    Example:
        clipboard.write_text("Hello, World!")
    """
    electron_clipboard_write_text(text)

# Read clipboard as HTML
pub fn read_html(): String =
    """Read clipboard contents as HTML."""
    electron_clipboard_read_html()

# Write HTML to clipboard
pub fn write_html(html: String):
    """Write HTML to clipboard."""
    electron_clipboard_write_html(html)

# Clear clipboard
pub fn clear():
    """Clear clipboard contents."""
    electron_clipboard_clear()

# Check if clipboard contains text
pub fn has_text(): bool =
    """Check if clipboard contains plain text."""
    electron_clipboard_has_text()

# Check if clipboard contains HTML
pub fn has_html(): bool =
    """Check if clipboard contains HTML."""
    electron_clipboard_has_html()

# Convenience: Copy text
pub fn copy(text: String):
    """Copy text to clipboard (alias for write_text)."""
    write_text(text)

# Convenience: Paste text
pub fn paste(): String =
    """Paste text from clipboard (alias for read_text)."""
    read_text()
