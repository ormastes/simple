        # TODO: Write file back
        Ok(())

    pub fn validate(self, version: String): Result[(), String> =
        """Validate version string.

        Args:
            version: Version string

        Returns:
            Ok if valid SemVer

        Example:
            match version.validate("1.2.3"):
                Ok(_):
                    print("Valid version")
                Err(err):
                    print(f"Invalid: {err}")
        """
        match SemVer.parse(version):
            Ok(_):
                Ok(())
            Err(err):
                Err(err)
