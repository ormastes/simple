# System module - Process control and standard streams
# Provides basic I/O and process control functionality

# Extern declarations for runtime FFI
extern fn rt_get_args() -> List[String]
extern fn rt_exit(code: Int) -> Void

# Standard output functions
pub fn stdout_write(s: String):
    print(s)

# Standard error functions
pub fn stderr_write(s: String):
    eprint(s)

# Get command line arguments
pub fn get_args() -> List[String]:
    return rt_get_args()

# Exit the process
pub fn exit(code: Int):
    rt_exit(code)
