# MCP Core Protocol Types
# Model Context Protocol - Generic message types for any language/tool

use core.*

# JSON-RPC 2.0 Request
pub class JsonRpcRequest:
    pub jsonrpc: String  # Always "2.0"
    pub id: i64
    pub method: String
    pub params: Dict[String, Any]
    
    pub fn new(id: i64, method: String, params: Dict[String, Any]) -> JsonRpcRequest:
        return JsonRpcRequest:
            jsonrpc: "2.0"
            id: id
            method: method
            params: params

# JSON-RPC 2.0 Response (success)
pub class JsonRpcResponse:
    pub jsonrpc: String  # Always "2.0"
    pub id: i64
    pub result: Any
    
    pub fn new(id: i64, result: Any) -> JsonRpcResponse:
        return JsonRpcResponse:
            jsonrpc: "2.0"
            id: id
            result: result

# JSON-RPC 2.0 Error Response
pub class JsonRpcError:
    pub jsonrpc: String  # Always "2.0"
    pub id: i64
    pub error: ErrorObject
    
    pub fn new(id: i64, error: ErrorObject) -> JsonRpcError:
        return JsonRpcError:
            jsonrpc: "2.0"
            id: id
            error: error

# Error object
pub class ErrorObject:
    pub code: i64
    pub message: String
    pub data: Option[Any]
    
    pub fn new(code: i64, message: String) -> ErrorObject:
        return ErrorObject:
            code: code
            message: message
            data: None

# MCP Resource - Represents a code resource (file, symbol, etc.)
pub class Resource:
    pub uri: String           # Unique identifier (file://, symbol://, etc.)
    pub name: String          # Human-readable name
    pub description: String   # Optional description
    pub mime_type: String     # MIME type (text/x-simple, text/x-rust, etc.)
    
    pub fn new(uri: String, name: String, mime_type: String) -> Resource:
        return Resource:
            uri: uri
            name: name
            description: ""
            mime_type: mime_type

# MCP Tool - Represents an executable tool/function
pub class Tool:
    pub name: String          # Tool name (e.g., "read_code", "expand_symbol")
    pub description: String   # What the tool does
    pub input_schema: Dict[String, Any]  # JSON schema for parameters
    
    pub fn new(name: String, description: String) -> Tool:
        return Tool:
            name: name
            description: description
            input_schema: {}

# MCP Prompt - Represents a prompt template
pub class Prompt:
    pub name: String
    pub description: String
    pub arguments: List[PromptArgument]
    
    pub fn new(name: String, description: String) -> Prompt:
        return Prompt:
            name: name
            description: description
            arguments: []

# Prompt argument
pub class PromptArgument:
    pub name: String
    pub description: String
    pub required: bool
    
    pub fn new(name: String, description: String, required: bool) -> PromptArgument:
        return PromptArgument:
            name: name
            description: description
            required: required

# Resource contents
pub class ResourceContents:
    pub uri: String
    pub mime_type: String
    pub text: String           # For text resources
    pub blob: Option[List[u8]] # For binary resources
    
    pub fn new(uri: String, mime_type: String, text: String) -> ResourceContents:
        return ResourceContents:
            uri: uri
            mime_type: mime_type
            text: text
            blob: None

# Tool call result
pub class ToolResult:
    pub content: List[ContentBlock]
    pub is_error: bool
    
    pub fn new(text: String) -> ToolResult:
        block = ContentBlock.text(text)
        return ToolResult:
            content: [block]
            is_error: false
    
    pub fn error(message: String) -> ToolResult:
        block = ContentBlock.text(message)
        return ToolResult:
            content: [block]
            is_error: true

# Content block (text, image, resource)
pub enum ContentBlock:
    Text(String)
    Image(ImageData)
    Resource(ResourceContents)

    pub fn text(content: String) -> ContentBlock:
        return ContentBlock.Text(content)

    pub fn to_string(self) -> String:
        """Convert content block to string."""
        match self:
            case Text(_): "text"
            case Image(_): "image"
            case Resource(_): "resource"

    pub fn description(self) -> String:
        """Get content block description."""
        match self:
            case Text(_): "Text content block"
            case Image(_): "Image content block"
            case Resource(_): "Resource content block"

    pub fn is_text(self) -> bool:
        """Check if block is Text."""
        match self:
            case Text(_): true
            case _: false

    pub fn is_image(self) -> bool:
        """Check if block is Image."""
        match self:
            case Image(_): true
            case _: false

    pub fn is_resource(self) -> bool:
        """Check if block is Resource."""
        match self:
            case Resource(_): true
            case _: false

    pub fn summary(self) -> String:
        """Get content block summary."""
        let type_name = self.to_string()
        let desc = self.description()
        return "ContentBlock: {type_name} ({desc})"

# Image data
pub class ImageData:
    pub mime_type: String
    pub data: String  # Base64 encoded
    
    pub fn new(mime_type: String, data: String) -> ImageData:
        return ImageData:
            mime_type: mime_type
            data: data

# Standard MCP methods
pub enum McpMethod:
    Initialize
    Ping
    ListResources
    ReadResource
    ListTools
    CallTool
    ListPrompts
    GetPrompt
    
    pub fn to_string(self) -> String:
        if self == McpMethod.Initialize:
            return "initialize"
        elif self == McpMethod.Ping:
            return "ping"
        elif self == McpMethod.ListResources:
            return "resources/list"
        elif self == McpMethod.ReadResource:
            return "resources/read"
        elif self == McpMethod.ListTools:
            return "tools/list"
        elif self == McpMethod.CallTool:
            return "tools/call"
        elif self == McpMethod.ListPrompts:
            return "prompts/list"
        elif self == McpMethod.GetPrompt:
            return "prompts/get"
        else:
            return "unknown"

# Server capabilities
pub class ServerCapabilities:
    pub resources: bool
    pub tools: bool
    pub prompts: bool
    
    pub fn default() -> ServerCapabilities:
        return ServerCapabilities:
            resources: true
            tools: true
            prompts: false

# Initialize result
pub class InitializeResult:
    pub protocol_version: String
    pub capabilities: ServerCapabilities
    pub server_info: ServerInfo
    
    pub fn new(name: String, version: String) -> InitializeResult:
        return InitializeResult:
            protocol_version: "2024-11-05"
            capabilities: ServerCapabilities.default()
            server_info: ServerInfo.new(name, version)

# Server info
pub class ServerInfo:
    pub name: String
    pub version: String
    
    pub fn new(name: String, version: String) -> ServerInfo:
        return ServerInfo:
            name: name
            version: version
