# Common Metrics
# ============================================================================

class Accuracy(Metric):
    """Accuracy metric for classification.

    Expects output to be (predictions, labels) tuple.

    Example:
        ```simple
        let accuracy = Accuracy()
        trainer.add_metric(accuracy, "acc")
        ```
    """
    correct: i64
    total: i64

    fn __init__(self):
        """Initialize accuracy metric."""
        self.correct = 0
        self.total = 0

    fn reset(self):
        """Reset for new epoch."""
        self.correct = 0
        self.total = 0

    fn update(self, output: any):
        """Update with batch output.

        Args:
            output: Dict with "pred" and "labels" keys
        """
        # Assuming output is dict with "pred" and "labels"
        # TODO: Implement actual accuracy computation
        pass

    fn compute(self) -> f64:
        """Compute accuracy.

        Returns:
            Accuracy value
        """
        if self.total == 0:
            return 0.0
        return self.correct.to_f64() / self.total.to_f64()


class Loss(Metric):
    """Average loss metric.

    Example:
        ```simple
        let loss_metric = Loss()
        trainer.add_metric(loss_metric, "loss")
        ```
    """
    total_loss: f64
    count: i64

    fn __init__(self):
        """Initialize loss metric."""
        self.total_loss = 0.0
        self.count = 0

    fn reset(self):
        """Reset for new epoch."""
        self.total_loss = 0.0
        self.count = 0

    fn update(self, output: any):
        """Update with batch output.

        Args:
            output: Dict with "loss" key
        """
        # Assuming output is dict with "loss" key
        if isinstance(output, dict) and "loss" in output:
            self.total_loss += output["loss"]
            self.count += 1

    fn compute(self) -> f64:
        """Compute average loss.

        Returns:
            Average loss
        """
        if self.count == 0:
            return 0.0
        return self.total_loss / self.count.to_f64()
