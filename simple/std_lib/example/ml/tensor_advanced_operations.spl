# ============================================================================
# Core Types
# ============================================================================

enum Dim:
    Literal(value: Int)
    Named(name: String, lo: Int, hi: Int)
    Var(id: Int)
    Unknown
    Broadcast

enum ShapeError:
    LiteralMismatch(expected: Int, actual: Int)
    RankMismatch(left_rank: Int, right_rank: Int)
    MatmulIncompatible(k1: Int, k2: Int)
    ReshapeMismatch(input_elems: Int, output_elems: Int)
    InferenceError(msg: String)

class TensorShape:
    dims: List<Dim>

    fn __init__(self, dims: List<Dim>):
        self.dims = dims

    fn ndim(self) -> Int:
        self.dims.len()

enum ShapeResult:
    Ok(shape: TensorShape)
    Err(error: ShapeError)

# ============================================================================
# Utilities
# ============================================================================

fn dim_to_string(d: Dim) -> String:
    match d:
        case Dim.Literal(v):
            "{v}"
        case Dim.Named(n, lo, hi):
            if lo == hi:
                "{n}={lo}"
            else:
                "{n}:{lo}..{hi}"
        case Dim.Var(id):
            "α{id}"
        case Dim.Unknown:
            "*"
        case Dim.Broadcast:
            "?"

fn shape_to_string(shape: TensorShape) -> String:
    if shape.dims.len() == 0:
        return "[]"

    let mut result = "["
    let mut first = true
    for d in shape.dims:
        if not first:
            result = result + ", "
        result = result + dim_to_string(d)
        first = false
    result + "]"

fn count_elements(shape: TensorShape) -> (Int, Int):
    """Calculate min and max element counts"""
    let mut min_elems = 1
    let mut max_elems = 1

    for d in shape.dims:
        match d:
            case Dim.Literal(v):
                min_elems = min_elems * v
                max_elems = max_elems * v
            case Dim.Named(_, lo, hi):
                min_elems = min_elems * lo
                max_elems = max_elems * hi
            case _:
                min_elems = min_elems * 1
                max_elems = max_elems * 1000

    (min_elems, max_elems)

# ============================================================================
# Reshape Operation
# ============================================================================

fn verify_reshape(input: TensorShape, output: TensorShape) -> ShapeResult:
    """Verify that reshape preserves element count"""
    let (in_min, in_max) = count_elements(input)
    let (out_min, out_max) = count_elements(output)

    # Check if ranges overlap
    if in_max < out_min or out_max < in_min:
        return ShapeResult.Err(ShapeError.ReshapeMismatch(
            input_elems: in_min,
            output_elems: out_min
        ))

    ShapeResult.Ok(shape: output)

