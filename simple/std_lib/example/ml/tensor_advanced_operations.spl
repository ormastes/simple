# ============================================================================
# Memory Profiling
# ============================================================================

class MemoryProfile:
    shape_name: String
    shape: TensorShape
    min_bytes: Int
    max_bytes: Int
    min_mb: Int
    max_mb: Int

    fn __init__(self, name: String, shape: TensorShape, elem_size: Int):
        let (min_e, max_e) = count_elements(shape)
        self.shape_name = name
        self.shape = shape
        self.min_bytes = min_e * elem_size
        self.max_bytes = max_e * elem_size
        self.min_mb = self.min_bytes / (1024 * 1024)
        self.max_mb = self.max_bytes / (1024 * 1024)

    fn to_string(self) -> String:
        let shape_str = shape_to_string(self.shape)
        if self.min_mb == self.max_mb:
            "{self.shape_name}: {shape_str} = {self.min_mb} MB"
        else:
            "{self.shape_name}: {shape_str} = {self.min_mb}-{self.max_mb} MB"

