# Test importing class through module

use physics.core

fn main():
    print("Testing module import...")

    # Try using Vector3 through core module prefix
    let v1 = core.Vector3(1.0, 2.0, 3.0)
    print("Created Vector3 instance")

    # Check if the instance was created correctly
    if v1.x == 1.0 and v1.y == 2.0 and v1.z == 3.0:
        print("✓ Constructor test passed!")
    else:
        print("✗ Constructor test failed!")
        return 1

    # Try instance method
    let v2 = core.Vector3(3.0, 4.0, 0.0)
    let mag = v2.magnitude()
    if mag == 5.0:
        print("✓ Instance method test passed!")
    else:
        print("✗ Instance method test failed!")
        return 1

    print("✓ All tests passed!")
    return 0
