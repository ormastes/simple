# Test basic macro contract syntax (no templates)

macro gen_answer() -> (
    intro my_func:
        enclosing.module.fn "get_answer"() -> Int
):
    emit my_func:
        fn get_answer() -> Int:
            return 42

# Call the macro
gen_answer!()

# Test it works
fn main():
    let result = get_answer()
    println!("Result: ", result)
    assert_eq!(result, 42)
