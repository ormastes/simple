# Test macro template substitution in intro contracts (function name generation)

# Generate a getter function with template in function name
macro make_getter(field_name: Str const) -> (
    intro getter:
        enclosing.module.fn "get_{field_name}"() -> Str
):
    emit getter:
        fn "get_{field_name}"() -> Str:
            return "{field_name} value"

# Use the macro to generate get_name function
make_getter!("name")

fn main():
    let result = get_name()
    println!("Result: ", result)
    assert_eq!(result, "name value")
    println!("Template intro test passed!")
