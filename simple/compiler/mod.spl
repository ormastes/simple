# Simple Compiler Module
#
# Self-hosting compiler written in Simple.
# Uses shared infrastructure (config, di, aop) from std_lib.
#
# Architecture:
#   Lexer -> TreeSitter (outline) -> Parser (full AST)
#   -> HIR (shared) -> Backend (DI-injected)
#   -> Interpreter | Compiler | SDN (no-op)

# Re-export core infrastructure from std_lib
pub import std_lib.config.*
pub import std_lib.di.*
pub import std_lib.aop.*

# Compiler-specific modules
pub import compiler.init.*

# Phase 2: Parsing Pipeline [DONE]
pub import compiler.lexer.*
pub import compiler.treesitter.*
pub import compiler.parser.*

# Phase 3: HIR Layer [DONE]
pub import compiler.hir.*
pub import compiler.backend.*

# Phase 3.5: Type Inference [NEW]
pub import compiler.type_infer.*

# Phase 3.6: Dimension Constraints [NEW]
pub import compiler.dim_constraints.*

# Phase 4: Method Resolution (UFCS) [DONE]
pub import compiler.resolve.*

# Phase 5: MIR and Codegen [DONE]
pub import compiler.mir.*
pub import compiler.codegen.*

# Phase 6: Bootstrap [DONE]
pub import compiler.driver.*
pub import compiler.main.*
