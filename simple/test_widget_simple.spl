# Test simple widget parse

use core.*
use ui.element.*

struct BuildContext:
    next_id: u64
    parent: Option[NodeId]

impl BuildContext:
    static fn new() -> BuildContext:
        return BuildContext { next_id: 0, parent: None }

    var fn alloc_id() -> NodeId:
        val id = NodeId::new(self.next_id)
        self.next_id = self.next_id + 1
        return id
