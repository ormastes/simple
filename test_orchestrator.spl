# Test the Test Orchestrator
# Quick test to verify the test orchestration system works

use app.build.types (TestConfig)
use app.build.test (TestOrchestrator, print_test_results, default_test_config)

fn main():
    print "Testing Simple Test Orchestrator"
    print "================================="
    print ""

    # Test 1: Run only Rust tests (quick)
    print "Test 1: Rust tests only"
    val rust_config = TestConfig(
        filter: "",
        level: "all",
        tag: "",
        fail_fast: true,
        timeout: 0,
        parallel: false,
        rust_only: true,
        doc_only: false,
        simple_only: false
    )

    val rust_results = TestOrchestrator.run(rust_config)
    print_test_results(rust_results)

    if rust_results.all_passed():
        print "\n✓ Test orchestrator is working!"
        return 0
    else:
        print "\n✗ Test orchestrator failed"
        return 1
