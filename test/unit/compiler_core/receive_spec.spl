# receive: block parser spec
# Tests that receive: block syntax parses correctly
use compiler.core.tokens.{TOK_KW_RECEIVE, TOK_KW_AFTER}
use compiler.core.ast.{STMT_RECEIVE}

describe "receive: block parsing":
    it "STMT_RECEIVE has value 19":
        expect(STMT_RECEIVE).to_equal(19)

    it "TOK_KW_RECEIVE has value 206":
        expect(TOK_KW_RECEIVE).to_equal(206)

    it "TOK_KW_AFTER has value 207":
        expect(TOK_KW_AFTER).to_equal(207)

    it "receive block with after arm parses":
        # Syntactic test - just verifying constants exist
        expect(STMT_RECEIVE > 0).to_equal(true)
