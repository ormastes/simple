"""
Arithmetic Operations Specification

Tests basic arithmetic operations including addition, subtraction,
multiplication, division, and operator precedence rules.
"""

describe "Arithmetic":
    """
    Tests for core arithmetic operations on numeric types.
    Verifies correct behavior of mathematical operators.
    """
    describe "addition":
        it "adds two numbers":
            expect 1 + 1 == 2
        it "adds multiple numbers":
            expect 1 + 2 + 3 == 6

    describe "subtraction":
        it "subtracts two numbers":
            expect 5 - 3 == 2
        it "subtracts to zero":
            expect 5 - 5 == 0

    describe "multiplication":
        it "multiplies two numbers":
            expect 3 * 4 == 12
        it "multiplies by zero":
            expect 5 * 0 == 0

    describe "division":
        it "divides evenly":
            expect 10 / 2 == 5
        it "integer division":
            expect 7 / 2 == 3

    describe "precedence":
        it "multiplication before addition":
            expect 2 + 3 * 4 == 14
        it "parentheses override precedence":
            expect (2 + 3) * 4 == 20
