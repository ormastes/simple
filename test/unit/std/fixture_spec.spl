"""
Tests for fixture-based test data patterns in SSpec.
Demonstrates using predefined values, strings, lists, and computed fixtures.
"""

describe "Fixture Tests":
    """
    Validates test fixture patterns for reusable test data.
    """

    describe "using test data":
        it "tests with fixture value":
            val fixture_value = 42
            expect fixture_value == 42

        it "tests with fixture string":
            val fixture_name = "test_user"
            expect fixture_name == "test_user"

        it "tests with fixture list":
            val fixture_list = [1, 2, 3]
            expect fixture_list[0] == 1
            expect fixture_list[1] == 2
            expect fixture_list[2] == 3

    describe "computed fixtures":
        it "uses computed test data":
            val base = 10
            val multiplier = 5
            val expected = base * multiplier
            expect expected == 50
