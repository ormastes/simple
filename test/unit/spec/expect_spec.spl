# Unit tests for BDD Expect module
# Tests Expectation, expect, to, not_to, and expect_raises
# NOTE: Using built-in expect - no imports needed

describe "BDD Expect":
    context "expect function":
        it "works with integers":
            expect 42 == 42

        it "works with strings":
            expect "hello" == "hello"

        it "works with booleans":
            expect true == true
            expect false == false

    context "positive assertions":
        it "passes when values are equal":
            expect 42 == 42

        it "passes with greater than":
            expect 10 > 5

        it "passes with less than":
            expect 5 < 10

        it "passes with true":
            expect true

    context "negative assertions":
        it "passes when values are not equal":
            expect 42 != 10

        it "passes with negated comparison":
            expect not (5 > 10)

        it "passes with false negated":
            expect not false

    context "chaining expectations":
        it "can have multiple expectations":
            val value = 42
            expect value == 42
            expect value > 40
            expect value < 50

        it "can mix positive and negative":
            val value = 42
            expect value == 42
            expect value != 10
            expect value > 40
            expect not (value > 100)

    context "complex assertions":
        it "handles nested structures":
            val name = "Alice"
            val age = 30
            expect name == "Alice"
            expect age > 25

        it "handles Option types":
            val some_value = Some(42)
            expect some_value.is_some()

        it "handles comparisons":
            val a = 10
            val b = 20
            val c = 10
            expect a == c
            expect a != b
            expect a < b
            expect b > a

    context "edge cases":
        it "handles zero values":
            expect 0 == 0
            expect 0 < 1
            expect 0 > -1

        it "handles empty strings":
            expect "" == ""
            expect "" != "hello"

        it "handles None values":
            expect Some(42).is_some()

    context "type safety":
        it "works with integers":
            expect 42 == 42
            expect 42 > 40

        it "works with strings":
            expect "hello" == "hello"
            expect "hello" != "world"

        it "works with booleans":
            expect true
            expect not false
