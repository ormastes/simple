# @pending
# Progress Timing Test

import std.spec
import spec.progress.{init_progress, reset_progress, progress, progress_step, get_elapsed_time}

describe "Progress Timing":
    it "shows actual elapsed time using progress functions":
        # Initialize timing
        init_progress()

        # Show progress with timing
        progress("Starting test")

        # Do some work
        var x = 0.0
        var i = 0
        while i < 10000:
            x = x + (i * 1.5) / (i + 1.0)
            i = i + 1

        progress("After compute loop")
        progress_step(1, 2, "First step done")
        progress_step(2, 2, "Second step done")

        val elapsed = get_elapsed_time()

        reset_progress()

        # Verify timing worked (elapsed should be positive)
        expect(elapsed > 0.0).to eq(true)
