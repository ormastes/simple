"""
# Coverage Debug Test

**Purpose:** Verify coverage instrumentation is working.
"""

use std.spec.{check}

describe "Coverage Instrumentation Test":
    it "simple if branch - true":
        val x = 10
        if x > 5:
            check(true)
        else:
            check(false)

    it "simple if branch - false":
        val x = 2
        if x > 5:
            check(false)
        else:
            check(true)

    it "match statement":
        val x = 1
        val result = match x:
            1: "one"
            2: "two"
            _: "other"
        check(result == "one")
