# Text not_empty / not_blank Spec
#
# Tests UFCS-compatible non-empty and non-blank checks for text.
# Feature: STDLIB â€” text utilities

use lib.common.text.{not_empty, not_blank}

describe "not_empty":
    it "returns false for empty string":
        expect("".not_empty).to_equal(false)
    it "returns true for non-empty string":
        expect("hello".not_empty).to_equal(true)
    it "returns true for whitespace-only string":
        expect("  ".not_empty).to_equal(true)
    it "works via function call":
        expect(not_empty("hello")).to_equal(true)

describe "not_blank":
    it "returns false for empty string":
        expect("".not_blank).to_equal(false)
    it "returns false for whitespace-only":
        expect("  ".not_blank).to_equal(false)
    it "returns true for non-blank string":
        expect("hello".not_blank).to_equal(true)
