# text_from_parts Specification
#
# Tests for the text_from_parts convenience function
#
# Note: uses inline function definition because use std.text.{...}
# does not resolve in interpreter mode (known limitation).

fn text_from_parts(parts: [text]) -> text:
    parts.join("")

# ============================================================================
# Test Group 1: Basic Functionality
# ============================================================================

describe "text_from_parts":
    it "joins parts into single string":
        val result = text_from_parts(["hello", " ", "world"])
        expect(result).to_equal("hello world")

    it "handles empty list":
        val result = text_from_parts([])
        expect(result).to_equal("")

    it "handles single part":
        val result = text_from_parts(["only"])
        expect(result).to_equal("only")

    it "joins multiple parts without separator":
        val result = text_from_parts(["a", "b", "c", "d"])
        expect(result).to_equal("abcd")

    it "handles parts with newlines":
        val result = text_from_parts(["line1\n", "line2\n", "line3"])
        expect(result).to_equal("line1\nline2\nline3")

    it "handles empty string parts":
        val result = text_from_parts(["", "hello", "", "world", ""])
        expect(result).to_equal("helloworld")
