use std.spec
use compiler.core.lexer.*
use compiler.blocks.*


describe "Lexer Initialization":
    it "creates a new lexer with initial position 0":
        val src = "fn main(): 0"
        var lex = Lexer.new(src)
        expect(lex.pos).to_equal(0)
