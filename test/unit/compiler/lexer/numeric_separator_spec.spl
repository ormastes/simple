# Numeric separator spec
#
# Tests for _ separator in numeric literals

describe "numeric separators":
    it "underscore in decimal integer":
        val n = 1_000_000
        expect(n).to_equal(1000000)

    it "underscore in smaller number":
        val n = 1_234
        expect(n).to_equal(1234)

    it "hex literal with underscore":
        val n = 0xFF_FF
        expect(n).to_equal(65535)

    it "binary literal with underscore":
        val n = 0b1111_0000
        expect(n).to_equal(240)

    it "float with underscore":
        val f = 3.141_592
        expect(f).to_equal(3.141592)

    it "multiple underscores work":
        val n = 1_000_000_000
        expect(n).to_equal(1000000000)
