# ## Overview
#
# Tests that classes with list fields can be created and populated correctly.

use std.spec


class MyResult:
    name: text
    items: [text]

    fn new(name: text) -> MyResult:
        return MyResult(name: name, items: [])

fn make_result() -> MyResult:
    var items: [text] = []
    items.push("a")
    items.push("b")

    var r = MyResult.new("test")
    r.items = items
    return r


describe "Class Basics":
    it "creates a result with name 'test'":
        val result = make_result()
        expect(result.name).to_equal("test")

    it "creates a result with 2 items":
        val result = make_result()
        expect(result.items.len()).to_equal(2)
