# Set Literal Tests
#
# Test set literal syntax: s{1, 2, 3}

use std.spec

describe "Set Literals":
    it "creates empty set":
        val empty = s{}
        check empty.len() == 0
        check empty.is_empty()

    it "creates set from integer elements":
        val nums = s{1, 2, 3}
        check nums.len() == 3
        check nums.has(1)
        check nums.has(2)
        check nums.has(3)

    it "removes duplicates automatically":
        val nums = s{1, 2, 2, 3, 3, 3}
        check nums.len() == 3
        check nums.has(1)
        check nums.has(2)
        check nums.has(3)

    it "creates set from string elements":
        val words = s{"hello", "world", "hello"}
        check words.len() == 2
        check words.has("hello")
        check words.has("world")

    it "handles trailing comma":
        val nums = s{1, 2, 3,}
        check nums.len() == 3

    it "supports single element":
        val single = s{42}
        check single.len() == 1
        check single.has(42)

    it "creates set with mixed operations":
        val a = s{1, 2, 3}
        val b = s{2, 3, 4}
        val union = a.union(b)
        check union.len() == 4
        check union.has(1)
        check union.has(2)
        check union.has(3)
        check union.has(4)

    it "supports intersection":
        val a = s{1, 2, 3}
        val b = s{2, 3, 4}
        val common = a.intersect(b)
        check common.len() == 2
        check common.has(2)
        check common.has(3)

    it "supports difference":
        val a = s{1, 2, 3}
        val b = s{2, 3, 4}
        val diff = a.diff(b)
        check diff.len() == 1
        check diff.has(1)

    it "converts to list":
        val nums = s{3, 1, 2}
        val list = nums.to_list()
        check list.len() == 3
        # Note: Set order is not guaranteed
        check list.contains(1)
        check list.contains(2)
        check list.contains(3)

    it "supports filter":
        val nums = s{1, 2, 3, 4, 5}
        val evens = nums.filter(\x: x % 2 == 0)
        check evens.len() == 2
        check evens.has(2)
        check evens.has(4)

    it "supports map":
        val nums = s{1, 2, 3}
        val doubled = nums.map(\x: x * 2)
        check doubled.len() == 3
        check doubled.has(2)
        check doubled.has(4)
        check doubled.has(6)

    it "checks subset":
        val small = s{1, 2}
        val large = s{1, 2, 3, 4}
        check small.is_subset(large)
        check not large.is_subset(small)

    it "checks disjoint":
        val a = s{1, 2, 3}
        val b = s{4, 5, 6}
        val c = s{3, 4, 5}
        check a.is_disjoint(b)
        check not a.is_disjoint(c)

    it "clones set":
        val original = s{1, 2, 3}
        val copy = original.clone()
        check copy.len() == 3
        check copy.has(1)
        check copy.has(2)
        check copy.has(3)
