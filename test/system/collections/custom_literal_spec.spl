# Custom Literal Tests
#
# Test custom collection literal syntax

use std.spec

describe "Custom Literals":
    it "distinguishes set literals from variables":
        # s{...} should be parsed as set literal, not variable 's' with block
        val set_val = s{1, 2, 3}
        check set_val.len() == 3
        check set_val.has(1)

    it "handles nested set literals":
        # Create sets and combine them
        val inner1 = s{1, 2}
        val inner2 = s{3, 4}
        val combined = inner1.union(inner2)
        check combined.len() == 4

