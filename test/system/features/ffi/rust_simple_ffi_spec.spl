extern fn rt_value_type_tag(rv)

# Array operations
extern fn rt_array_new(capacity)
extern fn rt_array_push(arr, v)
extern fn rt_array_get(arr, idx)
extern fn rt_array_set(arr, idx, v)
extern fn rt_array_pop(arr)
extern fn rt_array_clear(arr)
extern fn rt_array_len(arr)

# Dictionary operations
extern fn rt_dict_new()
extern fn rt_dict_set(dict, key, v)
extern fn rt_dict_get(dict, key)
extern fn rt_dict_len(dict)
extern fn rt_dict_clear(dict)
extern fn rt_dict_keys(dict)
extern fn rt_dict_values(dict)

# String operations
extern fn rt_string_new(s)
extern fn rt_string_concat(a, b)
extern fn rt_string_len(s)
