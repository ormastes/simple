"""
System test for print statement return behavior.

Tests that print statements correctly return the printed value,
allowing print to be used in expressions and chained operations.
"""

import std.spec

describe "Print Return":
    """
    Verifies that print statements return the value they print,
    enabling use in expressions like `val x = print("hello")`.
    """

    context "when printing values":
        it "returns the printed value":
            val result = print("test")
            expect(result).to_equal("test")
