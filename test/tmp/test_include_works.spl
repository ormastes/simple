use std.spec

describe "Does include matcher actually work?":
    it "string include works":
        expect "hello world" to include_string("world")
        print "String include works!"

    it "try array contains directly":
        val arr = [1, 2, 3]
        val has_three = arr.contains(3)
        print "Array contains 3: {has_three}"
        expect has_three to be true
