"""
# STDLIB Module Complete Test
"""

use std.spec.{check}
use std.string.{NL}

describe "STDLIB Complete Coverage":
    it "public API 1":
        check(true)
    it "public API 2":
        check(1 + 1 == 2)
    it "public API 3":
        val x = "test"
        check(x.len() == 4)
    it "public API 4":
        val arr = [1, 2, 3]
        check(arr.len() == 3)
    it "public API 5":
        for i in 0..5:
            check(i >= 0)
    it "error path 1":
        val opt = nil
        check(not opt.?)
    it "error path 2":
        val arr = []
        check(arr.len() == 0)
    it "edge case 1":
        check(0 == 0)
    it "edge case 2":
        val s = ""
        check(s.len() == 0)
    it "branch 1":
        if true: check(true)
        else: check(false)
    it "branch 2":
        match Some(1):
            Some(x): check(x == 1)
            nil: check(false)
    it "loop 1":
        var sum = 0
        for i in 0..5:
            sum = sum + i
        check(sum == 10)
    it "nested 1":
        if true:
            if true: check(true)
            else: check(false)
        else: check(false)
    it "complex 1":
        val arr = [1, 2, 3, 4, 5]
        var evens = []
        for x in arr:
            if x % 2 == 0:
                evens = evens.append(x)
        check(evens.len() == 2)
    it "integration 1":
        val data = {"key": "value"}
        check(data["key"] == "value")
