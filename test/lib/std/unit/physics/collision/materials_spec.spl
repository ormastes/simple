"""
Feature: Collision Material Properties
Category: Physics
Status: Implemented
"""

# Physics Collision Material Tests
# Tests for physics.collision.materials module

use std.spec
use physics.collision.materials.Material

describe "Material":
    """
    Tests for material properties used in collision calculations.
    Covers creation with default and custom values, and material presets
    (rubber, wood, metal, ice, concrete).
    """
    context "creation":
        it "creates with default values":
            val mat = Material()
            expect mat.friction == 0.5
            expect mat.restitution == 0.3
            expect mat.density == 1000.0

        it "creates with custom values":
            val mat = Material(friction: 0.8, restitution: 0.6, density: 2000.0)
            expect mat.friction == 0.8
            expect mat.restitution == 0.6
            expect mat.density == 2000.0

    context "presets":
        it "creates rubber material":
            val mat = Material.rubber()
            expect mat.friction == 0.9
            expect mat.restitution == 0.8
            expect mat.density == 1100.0

        it "creates wood material":
            val mat = Material.wood()
            expect mat.friction == 0.6
            expect mat.restitution == 0.4
            expect mat.density == 700.0

        it "creates metal material":
            val mat = Material.metal()
            expect mat.friction == 0.3
            expect mat.restitution == 0.5
            expect mat.density == 7800.0

        it "creates ice material":
            val mat = Material.ice()
            expect mat.friction == 0.02
            expect mat.restitution == 0.1
            expect mat.density == 920.0

        it "creates concrete material":
            val mat = Material.concrete()
            expect mat.friction == 0.7
            expect mat.restitution == 0.1
            expect mat.density == 2400.0
