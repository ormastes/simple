# Decorator Tests
# Tests for built-in decorators: @cached, @logged, @deprecated, @timeout

import std.spec
import core.decorators

describe "CachedFunction wrapper":
    it "caches function results":
        fn square(x):
            return x * x

        # Create cached version
        val wrapper = decorators.CachedFunction(square)

        # First call should miss cache
        val result1 = wrapper.__call__(5)
        expect(result1).to eq(25)

        # Second call should hit cache
        val result2 = wrapper.__call__(5)
        expect(result2).to eq(25)

        # Check cache stats
        val info = wrapper.cache_info()
        expect(info["hits"]).to eq(1)
        expect(info["misses"]).to eq(1)

    it "caches different arguments separately":
        fn add(a, b):
            return a + b

        val wrapper = decorators.CachedFunction(add)

        val result1 = wrapper.__call__(2, 3)
        expect(result1).to eq(5)

        val result2 = wrapper.__call__(4, 5)
        expect(result2).to eq(9)

        val result3 = wrapper.__call__(2, 3)
        expect(result3).to eq(5)

        val info = wrapper.cache_info()
        expect(info["hits"]).to eq(1)
        expect(info["misses"]).to eq(2)
        expect(info["size"]).to eq(2)

    it "clears cache correctly":
        fn double(x):
            return x * 2

        val wrapper = decorators.CachedFunction(double)

        wrapper.__call__(5)
        wrapper.__call__(5)

        val info1 = wrapper.cache_info()
        expect(info1["hits"]).to eq(1)

        wrapper.clear_cache()

        val info2 = wrapper.cache_info()
        expect(info2["hits"]).to eq(0)
        expect(info2["misses"]).to eq(0)
        expect(info2["size"]).to eq(0)

describe "LoggedFunction wrapper":
    it "logs function calls":
        fn multiply(x, y):
            return x * y

        val wrapper = decorators.LoggedFunction(multiply)
        val result = wrapper.__call__(3, 4)

        # Should log input and output
        # Note: output goes to stdout, we just verify it doesn't error
        expect(result).to eq(12)

    it "logs return values":
        fn get_value():
            return 42

        val wrapper = decorators.LoggedFunction(get_value)
        val result = wrapper.__call__()

        expect(result).to eq(42)

describe "DeprecatedFunction wrapper":
    it "shows warning when called":
        fn old_api(x):
            return x + 1

        val wrapper = decorators.DeprecatedFunction(old_api, "Old API")

        # First call should print warning
        val result = wrapper.__call__(5)
        expect(result).to eq(6)

    it "includes replacement message":
        fn legacy_function(x):
            return x * 2

        val wrapper = decorators.DeprecatedFunction(legacy_function, "Use new_function() instead")

        val result = wrapper.__call__(10)
        expect(result).to eq(20)
