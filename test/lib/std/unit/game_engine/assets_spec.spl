# Asset Loading Abstraction Tests
# Feature: Game Engine Asset Type System
# Category: Game Engine, Resources
# Status: Complete
#
# Tests for the asset loading abstraction including asset types
# such as Texture, Mesh, Audio, Material, Script, and Scene.

use std.spec
use game_engine.assets.AssetType

describe "AssetType":
    """
    Tests for AssetType enum variants and their categorization.
    """
    it "creates Texture asset type":
        val at = AssetType.Texture
        expect at.to_string() == "Texture"
        expect at.is_texture()

    it "creates Mesh asset type":
        val at = AssetType.Mesh
        expect at.to_string() == "Mesh"
        expect at.is_mesh()

    it "creates Audio asset type":
        val at = AssetType.Audio
        expect at.to_string() == "Audio"
        expect at.is_audio()

    it "creates Material asset type":
        val at = AssetType.Material
        expect at.to_string() == "Material"
        expect at.is_material()

    it "creates Script asset type":
        val at = AssetType.Script
        expect at.to_string() == "Script"
        expect at.is_script()

    it "creates Scene asset type":
        val at = AssetType.Scene
        expect at.to_string() == "Scene"
        expect at.is_scene()

    it "provides descriptions":
        expect "texture" in AssetType.Texture.description().to_lower()
        expect "mesh" in AssetType.Mesh.description().to_lower()

    it "identifies visual types":
        expect AssetType.Texture.is_visual()
        expect AssetType.Mesh.is_visual()
        expect AssetType.Material.is_visual()
        expect not AssetType.Audio.is_visual()
        expect not AssetType.Script.is_visual()

    it "identifies binary types":
        expect AssetType.Texture.is_binary()
        expect AssetType.Audio.is_binary()
        expect not AssetType.Script.is_binary()
