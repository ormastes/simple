describe "string suffix detection":
    """
    Validates suffix detection for memory size parsing (K, M, G).
    """

    context "validates G suffix":
        val value = "2G"

        it "ends with G":
            expect value.ends_with("G") == true

    context "validates M suffix":
        val value = "512M"

        it "ends with M":
            expect value.ends_with("M") == true

    context "validates K suffix":
        val value = "1024K"

        it "ends with K":
            expect value.ends_with("K") == true

describe "comma-separated parsing logic":
    """
    Verifies parsing of comma-separated domain whitelists and
    resource configuration values.
    """

    context "validates split on comma":
        val domains = "example.com,test.org,foo.net"
        val parts = domains.split(",")

        it "splits into 3 parts":
            expect parts.len() == 3

        it "first part is example.com":
            expect parts[0] == "example.com"

        it "second part is test.org":
            expect parts[1] == "test.org"

        it "third part is foo.net":
            expect parts[2] == "foo.net"

describe "trim whitespace logic":
    """
    Validates whitespace trimming in parsed configuration values.
    """

    context "validates trim":
        val value = "  512M  "
        val trimmed = value.trim()

        it "trims whitespace":
            expect trimmed == "512M"

