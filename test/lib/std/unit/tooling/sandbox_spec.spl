describe "sandbox module compilation":
    """
    Validates that the sandbox module compiles and provides the expected
    configuration parsing patterns for resource-limited execution.
    """

    it "compiles successfully":
        expect 1 + 1 == 2

describe "memory size parsing logic":
    """
    Verifies conversion of human-readable memory sizes to byte values
    with support for K (kilobyte), M (megabyte), and G (gigabyte) suffixes.
    """

    context "validates K suffix calculation":
        it "512K should be 512 * 1024":
            val expected = 512 * 1024
            expect expected == 524288

    context "validates M suffix calculation":
        it "256M should be 256 * 1024 * 1024":
            val expected = 256 * 1024 * 1024
            expect expected == 268435456

    context "validates G suffix calculation":
        it "2G should be 2 * 1024 * 1024 * 1024":
            val expected = 2 * 1024 * 1024 * 1024
            expect expected == 2147483648

