"""
Minimal CLI Test - Timeout Reproducer
Tests if CLI parsing hangs/timeouts.
Should complete in <500ms with std.spec.core (minimal imports).
"""

use std.cli

describe "Minimal CLI Test":
    it "parses a simple flag":
        val parser = cli.simple_parser("test", "Test app")
            .flag("verbose", "v", "Verbose output")
        val result = parser.parse(["-v"])
        expect result.ok.?
