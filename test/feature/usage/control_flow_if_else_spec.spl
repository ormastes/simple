"""
# Control Flow - If/Else Specification


**Feature IDs:** #1001
**Category:** Language
**Status:** In Progress

Tests for conditional control flow using if/else statements.
Verifies correct evaluation of conditions and execution of appropriate branches.
"""


describe "Control Flow - If/Else":
    """
    Tests for if/else conditional statements and branching behavior.
    Verifies that conditions are properly evaluated and the correct branch executes.
    """

    context "basic if statements":
        """
        ### Scenario: Basic If Condition

        Tests simple if statements with true and false conditions.
        """

        it "executes if body when condition is true":
            val x = 5
            var result = 0
            if x > 0:
                result = 10
            expect result == 10

        it "skips if body when condition is false":
            val x = -5
            var result = 0
            if x > 0:
                result = 10
            expect result == 0

    context "if-else statements":
        """
        ### Scenario: If-Else Branches

        Tests that if-else correctly selects between two branches.
        """

        it "executes if body when condition is true":
            val x = 10
            var result = ""
            if x > 5:
                result = "greater"
            else:
                result = "less"
            expect result == "greater"

        it "executes else body when condition is false":
            val x = 3
            var result = ""
            if x > 5:
                result = "greater"
            else:
                result = "less"
            expect result == "less"

    context "nested if statements":
        """
        ### Scenario: Nested Conditions

        Tests nested if-else statements with multiple levels of conditions.
        """

        it "handles nested if statements":
            val x = 10
            val y = 20
            var result = 0
            if x > 5:
                if y > 15:
                    result = 1
            expect result == 1

        it "handles nested if-else":
            val x = 3
            val y = 20
            var result = 0
            if x > 5:
                result = 1
            else:
                if y > 15:
                    result = 2
            expect result == 2

    context "if-else-if chains":
        """
        ### Scenario: Multiple Conditions

        Tests chaining multiple else-if conditions.
        """

        it "evaluates first matching condition":
            val x = 15
            var result = ""
            if x < 10:
                result = "low"
            else:
                if x < 20:
                    result = "medium"
                else:
                    result = "high"
            expect result == "medium"

        it "executes final else when no conditions match":
            val x = 100
            var result = ""
            if x < 10:
                result = "low"
            else:
                if x < 20:
                    result = "medium"
                else:
                    result = "high"
            expect result == "high"

    context "if with boolean expressions":
        """
        ### Scenario: Complex Conditions

        Tests if statements with compound boolean expressions.
        """

        it "evaluates AND conditions":
            val a = 5
            val b = 10
            var result = false
            if a > 0 and b > 0:
                result = true
            expect result == true

        it "evaluates OR conditions":
            val a = -5
            val b = 10
            var result = false
            if a > 0 or b > 0:
                result = true
            expect result == true

        it "evaluates NOT conditions":
            val x = 5
            var result = false
            if not (x < 0):
                result = true
            expect result == true
