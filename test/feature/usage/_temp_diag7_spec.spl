extern fn rt_env_get(key: text) -> text

describe "env check":
    it "env is nil when not set":
        val sys = rt_env_get("SIMPLE_SYSTEM_TEST")
        val is_nil = sys == nil
        expect(is_nil).to_equal(true)
    it "env equality check":
        val sys = rt_env_get("TOTALLY_FAKE_ENV_VAR_12345")
        val is_nil = sys == nil
        val is_empty = sys == ""
        val is_one = sys == "1"
        expect(is_nil).to_equal(true)
