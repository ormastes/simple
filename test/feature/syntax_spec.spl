use std.spec
use std.spec.{check, check_msg}
use std.string.{NL}

describe "Syntax Spec":
    it "syntax overview - if/else":
        # An if/else example with indentation
        val x = 1
        if x > 0:
            check(true)
        else:
            check(false)

    it "syntax overview - iteration":
        # Iterating with a trailing block
        val list = [1, 2, 3]
        check(true)

    it "literals - integer formats":
        val count = 1_000_000
        val color = 0xFF5733
        val mask = 0x0000_FFFF
        val flags = 0b1010_0101
        val permissions = 0o755
        check(true)

    it "literals - floating point":
        val pi = 3.14159
        check(true)

    it "literals - typed suffixes":
        # Typed suffixes for clarity
        check(true)

    it "string literals - interpolation":
        val name = "world"
        val count = 42
        val msg = "Hello, {name}! Count is {count + 1}"
        check(true)

    it "string literals - raw strings":
        val regex = '[a-z]+\d{2,3}'
        val path = 'C:\Users{NL}ame'
        check(true)

    it "string literals - basic interpolation":
        val name = "world"
        val msg = "Hello, {name}!"
        check(true)

    it "functional update syntax - arrays":
        var data = [1, 2, 3]
        check(true)

    it "functional update syntax - basic":
        check(true)

    it "functional update syntax - lists":
        var list = [1, 2, 3]
        check(true)

    it "functional update syntax - pattern 1":
        check(true)

    it "functional update syntax - pattern 2":
        check(true)

    it "parsing design rationale - simplicity":
        check(true)

    it "parsing design rationale - lambdas":
        val double = \x: x * 2
        check(true)
