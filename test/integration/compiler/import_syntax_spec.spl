# Import Syntax Verification Spec
#
# Tests that both import syntaxes work correctly for mod.spl files


# Test 1: Curly braces syntax
use app.io.{env_get, env_set, shell}

# Test 2: Parentheses syntax (different functions to avoid conflicts)
use app.io.mod (file_exists, cwd)

describe "Import Syntax for mod.spl Files":
    # Both syntaxes should work when imports are at module level.

    context "Curly braces syntax: use app.io.{...}":
        it "imports env_get with curly braces":
            val result = env_get("PATH")
            expect result.len() > 0

        it "imports env_set with curly braces":
            val result = env_set("TEST_VAR_CURLY", "test")
            expect result == true

        it "imports shell with curly braces":
            val result = shell("echo test")
            expect result.exit_code == 0

    context "Parentheses syntax: use app.io.mod (...)":
        it "imports file_exists with parentheses":
            val result = file_exists("test/integration/import_syntax_spec.spl")
            expect result == true

        it "imports cwd with parentheses":
            val result = cwd()
            expect result.len() > 0
