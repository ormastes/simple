describe "CLI Stats Command - Intensive":
    """
    ## Statistics Command Testing
    
    Test code statistics and analysis.
    """
    
    context "code metrics":
        slow_it "counts lines in files":
            val file_sizes = [
                100, 250, 500, 1000, 2000
            ]
            
            var total_lines = 0
            for size in file_sizes:
                total_lines = total_lines + size
            
            check(total_lines == 3850)
            
        slow_it "analyzes file types":
            val files = [
                "file.spl", "file.smf", "file.sdn",
                "test.spl", "doc.md", "config.sdn"
            ]
            
            var spl_count = 0
            var sdn_count = 0
            
            for file in files:
                if file.ends_with(".spl"):
                    spl_count = spl_count + 1
                elif file.ends_with(".sdn"):
                    sdn_count = sdn_count + 1
            
            check(spl_count == 2)
            check(sdn_count == 2)


describe "CLI TODO Scanner - Intensive":
    """
    ## TODO Scanner Testing
    
    Test TODO comment detection and tracking.
    """
    
    context "todo detection":
        slow_it "finds TODO comments in code":
            val code_samples = [
                "# TODO: implement this",
                "# FIXME: broken logic",
                "# NOTE: important",
                "# HACK: temporary fix"
            ]
            
            var todo_count = 0
            var fixme_count = 0
            
            for sample in code_samples:
                if sample.contains("TODO"):
                    todo_count = todo_count + 1
                elif sample.contains("FIXME"):
                    fixme_count = fixme_count + 1
            
            check(todo_count == 1)
            check(fixme_count == 1)
            
        slow_it "scans 200 code lines for TODOs":
            var lines = []
            for i in 0..200:
                if i % 20 == 0:
                    lines = lines.append("# TODO: task {i}")
                else:
                    lines = lines.append("val x = {i}")
            
            var todos = []
            for line in lines:
                if line.contains("TODO"):
                    todos = todos.append(line)
            
            check(todos.len() == 10)


describe "CLI Bug Tracking - Intensive":
    """
    ## Bug Database Testing
    
    Test bug tracking commands.
    """
    
    context "bug operations":
        slow_it "simulates adding 50 bugs":
            var bugs = []
            
            for i in 0..50:
                val bug = {
                    id: i,
                    title: "Bug {i}",
                    status: if i % 3 == 0: "open" else: "closed"
                }
                bugs = bugs.append(bug)
            
            check(bugs.len() == 50)
            
        slow_it "filters bugs by status":
            var all_bugs = []
            
            for i in 0..100:
                val status = if i % 2 == 0: "open" else: "closed"
                all_bugs = all_bugs.append(status)
            
            var open_bugs = 0
            var closed_bugs = 0
            
            for status in all_bugs:
                if status == "open":
                    open_bugs = open_bugs + 1
                else:
                    closed_bugs = closed_bugs + 1
            
            check(open_bugs == 50)
            check(closed_bugs == 50)


