fn build_bug_array_json(bugs: [(text, text, text, text)]) -> text:
    var bug_jsons = []
    for bug in bugs:
        val (id, severity, status, title) = bug
        bug_jsons = bug_jsons + [build_bug_json(id, severity, status, title)]
    jarray(bug_jsons)

