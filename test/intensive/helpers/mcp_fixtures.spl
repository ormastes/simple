# --- JSON Extraction Helpers ---

fn extract_json_string(json: text, key: text) -> text:
    # Simple extraction (not a full JSON parser)
    val key_pattern = "\"{key}\":"
    val start_idx = str_find(json, key_pattern)
    if start_idx < 0:
        return ""

    val value_start = start_idx + key_pattern.length()
    val json_rest = str_substring(json, value_start, json.length())

    # Skip whitespace
    var i = 0
    while i < json_rest.length() and (json_rest[i] == ' ' or json_rest[i] == '\t' or json_rest[i] == '\n'):
        i = i + 1

    if i >= json_rest.length():
        return ""

    # Check if value is a string (starts with ")
    if json_rest[i] == '"':
        val end_idx = str_find(str_substring(json_rest, i + 1, json_rest.length()), "\"")
        if end_idx < 0:
            return ""
        return str_substring(json_rest, i + 1, i + 1 + end_idx)

    ""

fn extract_json_number(json: text, key: text) -> i64:
    val key_pattern = "\"{key}\":"
    val start_idx = str_find(json, key_pattern)
    if start_idx < 0:
        return 0

    val value_start = start_idx + key_pattern.length()
    val json_rest = str_substring(json, value_start, json.length())

    # Skip whitespace and extract number
    var i = 0
    while i < json_rest.length() and (json_rest[i] == ' ' or json_rest[i] == '\t'):
        i = i + 1

    var num_str = ""
    while i < json_rest.length() and (json_rest[i] >= '0' and json_rest[i] <= '9'):
        num_str = num_str + json_rest[i]
        i = i + 1

    if num_str.length() > 0:
        str_to_int(num_str)
    else:
        0

fn json_contains(json: text, substring: text) -> bool:
    str_find(json, substring) >= 0

fn json_contains_key(json: text, key: text) -> bool:
    json_contains(json, "\"{key}\":")

