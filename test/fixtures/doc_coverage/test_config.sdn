doc_coverage {
    default_threshold 70

    thresholds {
        "src/std/" 90
        "src/core/" 75
        "src/lib/" 80
        "src/app/" 50
        "src/compiler/" 60
    }

    enforce true
    fail_on_below_threshold false

    exclude [
        "test/**"
        "**/deprecated/**"
        "**/*_old.spl"
    ]
}
