# JSON DSL conflicts
# ============================================================================

describe "PreLexInfo JSON DSL conflicts":
    context "nested JSON objects":
        it "tracks nested brace pairs for JSON objects":
            # Payload: {"a": {"b": 1}}
            #          0123456789012345
            val info = PreLexInfo(
                string_spans: [
                    TextSpan(start: 1, end: 4),   # "a"
                    TextSpan(start: 7, end: 10)    # "b"
                ],
                comment_spans: [],
                escape_positions: [],
                brace_pairs: [(0, 14), (6, 13)]
            )
            expect(info.brace_pairs.len()).to(eq(2))
            # Inner } at 13 is part of inner pair
            # Outer } at 14 is part of outer pair

        it "handles deeply nested objects":
            # Payload: {"a":{"b":{"c":1}}}
            val info = PreLexInfo(
                string_spans: [
                    TextSpan(start: 1, end: 4),
                    TextSpan(start: 6, end: 9),
                    TextSpan(start: 11, end: 14)
                ],
                comment_spans: [],
                escape_positions: [],
                brace_pairs: [(0, 18), (5, 17), (10, 16)]
            )
            expect(info.brace_pairs.len()).to(eq(3))

    context "} inside JSON string values":
        it "marks } inside JSON string value as protected":
            # Payload: {"key": "value}"}
            val info = PreLexInfo(
                string_spans: [
                    TextSpan(start: 1, end: 6),    # "key"
                    TextSpan(start: 8, end: 16)     # "value}"
                ],
                comment_spans: [],
                escape_positions: [],
                brace_pairs: [(0, 16)]
            )
            # The } at position 14 is inside the string value
            expect(info.is_in_string(14)).to(be_true())
            expect(info.is_protected(14)).to(be_true())

        it "handles escaped quote inside JSON string":
            # Payload: {"k": "say \"hi\""}
            val info = PreLexInfo(
                string_spans: [
                    TextSpan(start: 1, end: 4),
                    TextSpan(start: 6, end: 17)
                ],
                comment_spans: [],
                escape_positions: [10, 14],
                brace_pairs: [(0, 17)]
            )
            expect(info.escape_positions.len()).to(eq(2))

    context "empty JSON object":
        it "handles {} with just brace pair":
            val info = PreLexInfo(
                string_spans: [],
                comment_spans: [],
                escape_positions: [],
                brace_pairs: [(0, 1)]
            )
            expect(info.brace_pairs.len()).to(eq(1))

    context "JSON array with objects":
        it "handles array of objects":
            # Payload: [{"a":1},{"b":2}]
            val info = PreLexInfo(
                string_spans: [
                    TextSpan(start: 2, end: 5),
                    TextSpan(start: 9, end: 12)
                ],
                comment_spans: [],
                escape_positions: [],
                brace_pairs: [(1, 6), (8, 13)]
            )
            expect(info.brace_pairs.len()).to(eq(2))

