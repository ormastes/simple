# SQL DSL conflicts
# ============================================================================

describe "PreLexInfo SQL DSL conflicts":
    context "} inside single-quoted SQL string":
        it "marks } as protected in SQL string literal":
            # Payload: SELECT * FROM t WHERE col = '}'
            #          0         1         2         3
            val info = PreLexInfo(
                string_spans: [TextSpan(start: 28, end: 31)],
                comment_spans: [],
                escape_positions: [],
                brace_pairs: []
            )
            expect(info.is_in_string(29)).to(be_true())
            expect(info.is_protected(29)).to(be_true())

    context "} inside -- SQL comment":
        it "marks } as protected in SQL line comment":
            # Payload: SELECT * -- filter }\nFROM t
            val info = PreLexInfo(
                string_spans: [],
                comment_spans: [TextSpan(start: 9, end: 21)],
                escape_positions: [],
                brace_pairs: []
            )
            expect(info.is_in_comment(19)).to(be_true())
            expect(info.is_protected(19)).to(be_true())
            # Position on next line is not in comment
            expect(info.is_in_comment(22)).to(be_false())

    context "} inside /* */ SQL block comment":
        it "marks } as protected in block comment":
            # Payload: SELECT /* } */ FROM t
            val info = PreLexInfo(
                string_spans: [],
                comment_spans: [TextSpan(start: 7, end: 14)],
                escape_positions: [],
                brace_pairs: []
            )
            expect(info.is_in_comment(10)).to(be_true())
            expect(info.is_protected(10)).to(be_true())

    context "multiple SQL strings with }":
        it "handles multiple string literals each containing }":
            # Payload: SELECT '}' || '}' FROM t
            val info = PreLexInfo(
                string_spans: [
                    TextSpan(start: 7, end: 10),
                    TextSpan(start: 14, end: 17)
                ],
                comment_spans: [],
                escape_positions: [],
                brace_pairs: []
            )
            expect(info.is_in_string(8)).to(be_true())
            expect(info.is_in_string(15)).to(be_true())
            expect(info.is_in_string(11)).to(be_false())

# ============================================================================
# Regex DSL conflicts
# ============================================================================

describe "PreLexInfo Regex DSL conflicts":
    context "quantifier braces {n}":
        it "tracks balanced quantifier braces as brace pairs":
            # Payload: \d{3}
            # The {3} is a quantifier — balanced braces tracked as pair
            val info = PreLexInfo(
                string_spans: [],
                comment_spans: [],
                escape_positions: [0],
                brace_pairs: [(2, 4)]
            )
            # The } at position 4 is part of a balanced pair
            expect(info.brace_pairs.len()).to(eq(1))
            expect(info.brace_pairs[0]).to(eq((2, 4)))

        it "tracks range quantifier {n,m}":
            # Payload: [a-z]{2,5}
            val info = PreLexInfo(
                string_spans: [],
                comment_spans: [],
                escape_positions: [],
                brace_pairs: [(5, 9)]
            )
            expect(info.brace_pairs.len()).to(eq(1))

    context "} inside character class":
        it "} in character class is not in string or comment":
            # Payload: [}]
            # Character classes are not strings or comments in pre-lex sense
            # The regex handler itself understands character classes
            val info = PreLexInfo(
                string_spans: [],
                comment_spans: [],
                escape_positions: [],
                brace_pairs: []
            )
            # Bare } not protected by pre-lex — regex handler deals with it
            expect(info.is_protected(1)).to(be_false())

    context "escaped brace in regex":
        it "marks escaped } as protected":
            # Payload: match \}
            val info = PreLexInfo(
                string_spans: [],
                comment_spans: [],
                escape_positions: [6],
                brace_pairs: []
            )
            expect(info.is_escaped(7)).to(be_true())
            expect(info.is_protected(7)).to(be_true())

