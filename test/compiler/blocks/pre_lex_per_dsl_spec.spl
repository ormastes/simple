# ============================================================================
# Cross-DSL protection predicate exhaustive tests
# ============================================================================

describe "PreLexInfo protection predicates across DSLs":
    it "is_protected covers string, comment, and escape":
        val info = PreLexInfo(
            string_spans: [TextSpan(start: 0, end: 5)],
            comment_spans: [TextSpan(start: 10, end: 15)],
            escape_positions: [20],
            brace_pairs: []
        )
        # In string → protected
        expect(info.is_protected(3)).to(be_true())
        # In comment → protected
        expect(info.is_protected(12)).to(be_true())
        # After escape → protected
        expect(info.is_protected(21)).to(be_true())
        # None of the above → not protected
        expect(info.is_protected(7)).to(be_false())
        expect(info.is_protected(17)).to(be_false())
        expect(info.is_protected(25)).to(be_false())

    it "position at span boundary (start inclusive, end exclusive)":
        val info = PreLexInfo(
            string_spans: [TextSpan(start: 5, end: 10)],
            comment_spans: [],
            escape_positions: [],
            brace_pairs: []
        )
        # start is inclusive
        expect(info.is_in_string(5)).to(be_true())
        # end is exclusive
        expect(info.is_in_string(10)).to(be_false())
        # one before end
        expect(info.is_in_string(9)).to(be_true())

    it "empty PreLexInfo protects nothing":
        val info = PreLexInfo(
            string_spans: [],
            comment_spans: [],
            escape_positions: [],
            brace_pairs: []
        )
        expect(info.is_protected(0)).to(be_false())
        expect(info.is_protected(100)).to(be_false())
        expect(info.is_protected(999)).to(be_false())

    it "overlapping string and comment spans both protect":
        # Edge case: same region marked as both string and comment
        val info = PreLexInfo(
            string_spans: [TextSpan(start: 5, end: 15)],
            comment_spans: [TextSpan(start: 10, end: 20)],
            escape_positions: [],
            brace_pairs: []
        )
        # In string only
        expect(info.is_in_string(7)).to(be_true())
        expect(info.is_in_comment(7)).to(be_false())
        # In both
        expect(info.is_in_string(12)).to(be_true())
        expect(info.is_in_comment(12)).to(be_true())
        expect(info.is_protected(12)).to(be_true())
        # In comment only
        expect(info.is_in_string(17)).to(be_false())
        expect(info.is_in_comment(17)).to(be_true())

    it "multiple escape positions":
        val info = PreLexInfo(
            string_spans: [],
            comment_spans: [],
            escape_positions: [0, 5, 10, 15],
            brace_pairs: []
        )
        expect(info.is_escaped(1)).to(be_true())
        expect(info.is_escaped(6)).to(be_true())
        expect(info.is_escaped(11)).to(be_true())
        expect(info.is_escaped(16)).to(be_true())
        # Not after any escape
        expect(info.is_escaped(3)).to(be_false())
        expect(info.is_escaped(8)).to(be_false())

    it "consecutive escapes protect alternating positions":
        # Payload: \\\} — escape at 0 protects 1, escape at 2 protects 3
        val info = PreLexInfo(
            string_spans: [],
            comment_spans: [],
            escape_positions: [0, 2],
            brace_pairs: []
        )
        expect(info.is_escaped(1)).to(be_true())
        expect(info.is_escaped(3)).to(be_true())
        expect(info.is_escaped(2)).to(be_false())
