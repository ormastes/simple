describe "String operations":
    it "concatenates strings":
        val s1 = "Hello"
        val s2 = "World"
        val combined = s1 + " " + s2
        expect combined == "Hello World"

    it "gets string length":
        val s = "hello"
        expect s.len() == 5

    it "checks string emptiness":
        val empty = ""
        val non_empty = "text"
        expect empty.is_empty()
        expect not non_empty.is_empty()

    it "splits strings":
        val s = "a,b,c"
        val parts = s.split(",")
        expect parts.len() == 3
        expect parts[0] == "a"

    it "joins strings":
        val parts = ["a", "b", "c"]
        val joined = parts.join(",")
        expect joined == "a,b,c"

    it "trims whitespace":
        val s = "  hello  "
        expect s.trim() == "hello"

    it "converts case":
        val s = "Hello"
        expect s.upper() == "HELLO"
        expect s.lower() == "hello"

    it "checks prefixes and suffixes":
        val s = "hello.txt"
        expect s.starts_with("hello")
        expect s.ends_with(".txt")

    it "finds substrings":
        val s = "hello world"
        val pos = s.index_of("world")
        match pos:
            case Some(idx):
                expect idx == 6
            case None:
                expect false
