describe "MMIO Register Access":
    it "reads MMIO register":
        val code = """
        fn mmio_read(addr: u64) -> u32:
            var value: u32
            unsafe:
                asm volatile(
                    "ldr {val}, [{addr}]",
                    val = out(reg) value,
                    addr = in(reg) addr
                )
            value
        """
        assert code.contains("ldr")

    it "writes MMIO register":
        val code = """
        fn mmio_write(addr: u64, value: u32):
            unsafe:
                asm volatile(
                    "str {val}, [{addr}]",
                    addr = in(reg) addr,
                    val = in(reg) value
                )
        """
        assert code.contains("str")

    it "atomic MMIO update":
        val code = """
        fn mmio_set_bits(addr: u64, mask: u32):
            unsafe:
                asm volatile(
                    "ldr r0, [{addr}]",
                    "orr r0, r0, {mask}",
                    "str r0, [{addr}]",
                    addr = in(reg) addr,
                    mask = in(reg) mask,
                    out("r0") _
                )
        """
        assert code.contains("orr")

describe "Spinlock Implementation":
    it "implements test-and-set spinlock":
        val code = """
        fn spinlock_acquire(lock: *mut u32):
            unsafe:
                asm(
                    "1:",
                    "mov eax, 1",
                    "xchg eax, [{lock}]",
                    "test eax, eax",
                    "jnz 1b",
                    lock = in(reg) lock,
                    out("eax") _
                )
        """
        assert code.contains("xchg")
        assert code.contains("test")

    it "implements spinlock release":
        val code = """
        fn spinlock_release(lock: *mut u32):
            unsafe:
                asm volatile(
                    "mov dword ptr [{lock}], 0",
                    lock = in(reg) lock
                )
        """
        assert code.contains("mov dword ptr")

