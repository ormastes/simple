describe "ARM Bare-Metal Operations":
    it "implements ARM semihosting call":
        val code = """
        fn arm_semihost(op: u32, params: u64) -> i64:
            var result: i64
            unsafe:
                asm volatile(
                    "mov r0, {op}",
                    "mov r1, {params}",
                    "bkpt #0xAB",
                    "mov {result}, r0",
                    op = in(reg) op,
                    params = in(reg) params,
                    result = lateout(reg) result,
                    clobber_abi("C")
                )
            result
        """
        assert code.contains("bkpt #0xAB")
        assert code.contains("mov r0")

    it "implements ARM WFI (wait for interrupt)":
        val code = """
