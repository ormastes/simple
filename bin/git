#!/bin/bash
# Git wrapper that prevents accidental git usage
echo "❌ ERROR: This project uses Jujutsu (jj), not git!"
echo ""
echo "Common command mappings:"
echo "  git status       →  jj status"
echo "  git commit       →  jj describe"
echo "  git log          →  jj log"
echo "  git push         →  jj git push"
echo "  git diff         →  jj diff"
echo ""
echo "See CLAUDE.md for full jj command reference"
exit 1
