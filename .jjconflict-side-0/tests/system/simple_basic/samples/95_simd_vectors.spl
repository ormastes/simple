# 95_simd_vectors.spl - SIMD vector types and ops

# SIMD vector type definition
type f32x4 = vec[4, f32]

let a: f32x4 = vec[1.0, 2.0, 3.0, 4.0]
let b: f32x4 = vec[5.0, 6.0, 7.0, 8.0]

# Lane-wise operations
let sum = a + b
let diff = b - a
let prod = a * b

print "sum[0]={sum[0]} sum_all={sum.sum()}"
print "diff[0]={diff[0]}"
print "prod[0]={prod[0]}"

# Comparisons and reductions
all_positive = (a > 0.0).all()
any_negative = (a < 0.0).any()

print "all_positive={all_positive}"
print "any_negative={any_negative}"

# Horizontal operations
total = a.sum()
max_val = a.max()
min_val = a.min()

print "total={total} max={max_val} min={min_val}"

main = 0
