describe("QueryMatch"):
    it("iterates through matches"):
        let parser = TreeSitterParser.new("simple").unwrap()
        let source = "let x = 1 + 2"
        let tree = parser.parse(source).unwrap()

        let query = Query.new("simple", "").unwrap()
        let mut cursor = QueryCursor.new(query, tree)

        # Iterate with next_match
        let mut count = 0
        loop:
            match cursor.next_match():
                case Some(match):
                    count = count + 1
                case None:
                    break

        expect(count).to_be_greater_than(0)

    it("resets cursor"):
        let parser = TreeSitterParser.new("simple").unwrap()
        let source = "let x = 42"
        let tree = parser.parse(source).unwrap()

        let query = Query.new("simple", "").unwrap()
        let mut cursor = QueryCursor.new(query, tree)

        # Consume all matches
        loop:
            match cursor.next_match():
                case Some(_): continue
                case None: break

        # Should be at end
        expect(cursor.next_match().is_none()).to_be(true)

        # Reset and iterate again
        cursor.reset()
        expect(cursor.next_match().is_some()).to_be(true)

