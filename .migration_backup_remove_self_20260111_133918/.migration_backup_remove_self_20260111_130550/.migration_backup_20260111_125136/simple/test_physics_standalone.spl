# Standalone physics test without imports
# Define Vector3 locally to test static methods

class Vector3:
    x: float
    y: float
    z: float

    fn __init__(x: float, y: float, z: float):
        self.x = x
        self.y = y
        self.z = z

    @staticmethod
    fn zero() -> Vector3:
        return Vector3(0.0, 0.0, 0.0)

    @staticmethod
    fn one() -> Vector3:
        return Vector3(1.0, 1.0, 1.0)

    fn magnitude() -> float:
        return (self.x * self.x + self.y * self.y + self.z * self.z) ** 0.5

    fn dot(other: Vector3) -> float:
        return self.x * other.x + self.y * other.y + self.z * other.z

fn main():
    print("=== Physics Vector3 Test ===")

    # Test 1: Constructor
    let v1 = Vector3(1.0, 2.0, 3.0)
    print("Test 1: Constructor")
    if v1.x == 1.0:
        print("  ✓ x component correct")
    else:
        print("  ✗ FAILED")
        return 1

    # Test 2: Static method - zero
    let v2 = Vector3::zero()
    print("Test 2: Static method Vector3::zero()")
    if v2.x == 0.0 and v2.y == 0.0 and v2.z == 0.0:
        print("  ✓ zero() works")
    else:
        print("  ✗ FAILED")
        return 1

    # Test 3: Static method - one
    let v3 = Vector3::one()
    print("Test 3: Static method Vector3::one()")
    if v3.x == 1.0 and v3.y == 1.0 and v3.z == 1.0:
        print("  ✓ one() works")
    else:
        print("  ✗ FAILED")
        return 1

    # Test 4: Instance method - magnitude
    let v4 = Vector3(3.0, 4.0, 0.0)
    let mag = v4.magnitude()
    print("Test 4: Instance method magnitude()")
    if mag == 5.0:
        print("  ✓ magnitude() works")
    else:
        print("  ✗ FAILED - got " + mag)
        return 1

    # Test 5: Instance method - dot product
    let v5 = Vector3(1.0, 0.0, 0.0)
    let v6 = Vector3(0.0, 1.0, 0.0)
    let dot_result = v5.dot(v6)
    print("Test 5: Dot product")
    if dot_result == 0.0:
        print("  ✓ dot() works")
    else:
        print("  ✗ FAILED")
        return 1

    print("\n=== ALL TESTS PASSED ===")
    return 0
