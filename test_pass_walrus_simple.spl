# Simplified test for pass variants and walrus operator
# Focus on statement-level usage

# Pass variants - as statements
fn test_pass_statements():
    pass
    pass_todo
    pass_do_nothing
    pass_dn
    print "pass_statements: OK"

# Pass variants - with messages as statements
fn test_pass_messages():
    pass("temporary placeholder")
    pass_todo("not implemented yet")
    pass_do_nothing("intentional stub")
    pass_dn("plugin extension point")
    print "pass_messages: OK"

# Walrus operator - basic types
fn test_walrus_basic():
    x := 42
    print "x = "
    print x
    name := "Alice"
    print "name = "
    print name
    print "walrus_basic: OK"

# Walrus operator - expressions
fn test_walrus_expressions():
    sum := 10 + 20 + 30
    print "sum = "
    print sum
    doubled := sum * 2
    print "doubled = "
    print doubled
    print "walrus_expressions: OK"

# Combined in control flow
fn test_control_flow():
    var count = 0
    for i in 3:
        local := i + 1
        count = count + local
    print "count = "
    print count
    print "control_flow: OK"

# Main runner
fn main():
    print "=== Pass & Walrus Tests ==="
    test_pass_statements()
    test_pass_messages()
    test_walrus_basic()
    test_walrus_expressions()
    test_control_flow()
    print "=== All Tests Passed ==="

main()
