# Test Phase 5: Self Return Type - Simple Version

struct Counter:
    value: i32

impl Counter:
    fn new(v: i32) -> Counter:
        return Counter(value: v)

    # Method with self return type
    fn increment() -> self:
        return Counter(value: self.value + 1)

    fn double() -> self:
        return Counter(value: self.value * 2)

    fn get_value() -> i32:
        return self.value

print("=== Test 1: Self return type parsing ===")
print("✅ Parser accepted 'fn increment() -> self' syntax")
print("✅ Parser accepted 'fn double() -> self' syntax")

print("\n=== Test 2: Create and use methods ===")
let c = Counter.new(5)
print("Initial value:", c.get_value())

let c2 = c.increment()
print("After increment:", c2.get_value())

let c3 = c2.double()
print("After double:", c3.get_value())

print("\n=== Self return type tests completed! ===")
