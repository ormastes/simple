# Simple regex test - just literal matching
import std.core.regex

print("Test 1: Literal pattern")
val pattern1 = regex.compile("hello")
val result1 = pattern1.search("hello world")
if result1.is_some():
    val m = result1.unwrap()
    print("SUCCESS: Found match - start={m.start}, end={m.end}, text='{m.text}'")
else:
    print("FAIL: No match found")

print("\nTest 2: No match")
val pattern2 = regex.compile("xyz")
val result2 = pattern2.search("hello world")
if result2.is_none():
    print("SUCCESS: Correctly returned None")
else:
    print("FAIL: Should not have matched")

print("\nDone!")
