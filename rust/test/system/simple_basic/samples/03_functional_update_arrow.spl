# 03_functional_update_arrow.spl - -> functional update sugar

# `target->method(...)` means: target = target.method(...)

class Bag:
    items: [i64]

    fn append(x: i64) -> Bag:
        self.items.push(x)
        return self

    fn sort() -> Bag:
        self.items.sort()
        return self

var b = Bag(items: [])
b->append(3)->append(1)->append(2)->sort()

print "bag={b.items}"

main = b.items.len()
