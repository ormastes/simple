# 41_match_exhaustive.spl - Pattern matching and exhaustiveness

enum Color:
    Red
    Green
    Blue

fn color_name(c: Color) -> str:
    match c:
        case Red:   return "red"
        case Green: return "green"
        case Blue:  return "blue"

print color_name(Color.Red)

# Match with guards returning values
val x = -5
val msg = match x:
    case n if n < 0: 1
    case n: 2

# Match returning value
val result = match x:
    case n if n < 0: 1
    case _: 0

main = result
