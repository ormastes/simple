# Error handling for LMS
# Simplified version using only working Simple syntax

# Error code constants
val ERROR_PARSE = -32700
val ERROR_INVALID_REQUEST = -32600
val ERROR_METHOD_NOT_FOUND = -32601
val ERROR_INVALID_PARAMS = -32602
val ERROR_INTERNAL = -32603
val ERROR_NOT_INITIALIZED = -32002

# Get error message for a code
pub fn error_message(code: i32) -> text:
    if code == ERROR_PARSE:
        "Parse error"
    else if code == ERROR_INVALID_REQUEST:
        "Invalid request"
    else if code == ERROR_METHOD_NOT_FOUND:
        "Method not found"
    else if code == ERROR_INVALID_PARAMS:
        "Invalid params"
    else if code == ERROR_INTERNAL:
        "Internal error"
    else if code == ERROR_NOT_INITIALIZED:
        "Server not initialized"
    else:
        "Unknown error"
