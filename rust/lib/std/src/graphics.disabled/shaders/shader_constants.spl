# Shader Constants - Shared constants for all shader modules
#
# Centralized location for mathematical and rendering constants
# used across PBR, IBL, and other shader implementations.

# Mathematical constants
pub const PI: f32 = 3.14159265359
pub const TWO_PI: f32 = 6.28318530718
pub const HALF_PI: f32 = 1.57079632679
pub const INV_PI: f32 = 0.31830988618

# Rendering constants
pub const EPSILON: f32 = 0.0001
pub const GAMMA: f32 = 2.2
pub const INV_GAMMA: f32 = 0.45454545455  # 1.0 / 2.2
