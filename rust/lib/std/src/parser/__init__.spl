# Parser Module
# Provides Parser, CommonMistake, and error recovery tools

mod parser
mod treesitter
mod error_recovery

# Error hint returned by parser
pub struct ErrorHint:
    message: text

pub struct Parser:
    source: text
    hints: Vec<ErrorHint>

impl Parser:
    pub static fn new(source: text) -> Parser:
        return Parser(source: source, hints: [])

    pub me parse():
        pass

    pub fn error_hints(self) -> Vec<ErrorHint>:
        return self.hints

