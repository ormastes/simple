# ============================================================================
# Material - Physical Material Properties for Collision Response
# ============================================================================

export Material

class Material:
    """Physical material properties for collision response.

    Attributes:
        friction: Coefficient of friction (0 = frictionless, 1 = high friction)
        restitution: Coefficient of restitution/bounciness (0 = no bounce, 1 = perfectly elastic)
        density: Material density (kg/m³)
    """
    friction: f64
    restitution: f64
    density: f64
    fn __init__(friction: f64?,
        restitution: f64?,
        density: f64?
    ):
        """Initialize material.

        Args:
            friction: Coefficient of friction (default: 0.5)
            restitution: Coefficient of restitution (default: 0.3)
            density: Density in kg/m³ (default: 1000.0)
        """
        self.friction = friction ?? 0.5
        self.restitution = restitution ?? 0.3
        self.density = density ?? 1000.0

    static fn rubber() -> Material:
        """Rubber material preset.

        Returns:
            Rubber material (high friction, high restitution)
        """
        return Material(friction=0.9, restitution=0.8, density=1100.0)

    static fn wood() -> Material:
        """Wood material preset.

        Returns:
            Wood material (medium friction, low restitution)
        """
        return Material(friction=0.6, restitution=0.4, density=700.0)

    static fn metal() -> Material:
        """Metal material preset.

        Returns:
            Metal material (low friction, medium restitution)
        """
        return Material(friction=0.3, restitution=0.5, density=7800.0)

    static fn ice() -> Material:
        """Ice material preset.

        Returns:
            Ice material (very low friction, low restitution)
        """
        return Material(friction=0.02, restitution=0.1, density=920.0)

    static fn concrete() -> Material:
        """Concrete material preset.

        Returns:
            Concrete material (medium friction, very low restitution)
        """
        return Material(friction=0.7, restitution=0.1, density=2400.0)
