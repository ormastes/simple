# Math Traits - Common interfaces for math types
#
# Provides VecLike and TensorConvertible traits for all math types.

export VecLike, TensorConvertible

# VecLike trait
# Common interface for vector types
pub trait VecLike:
    fn magnitude() -> f64
    fn normalize() -> Self
    fn dot(other: Self) -> f64
    fn lerp(other: Self, t: f64) -> Self
    fn is_zero() -> bool
    fn is_near_zero(epsilon: f64) -> bool
    fn is_finite() -> bool


