# Network Module - Unified async networking API (GC Mutable Variant)
# Re-exports common networking implementations
#
# Features:
# - TCP server and client (monoio-based)
# - UDP socket
# - HTTP client
# - FTP client
# - Monoio async runtime (thread-per-core, io_uring)
# - Context manager support (with...as syntax)
# - Both string convenience API and semantic types
# - GC-managed buffers (no manual cleanup needed!)
#
# Quick Start:
#   use host.async_gc_mut.net as net
#
#   # Simple string API
#   val listener = await net.TcpListener.bind("127.0.0.1:8080")?
#
#   # Type-safe semantic API
#   val addr = SocketAddr.new(IpAddr.v4(127, 0, 0, 1), Port(8080))
#   val listener = await net.TcpListener.bind_addr(addr)?

# Re-export everything from common net module
export host.common.net.*
