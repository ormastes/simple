# Test: Implicit Variable Declarations with Naming Conventions

print("=== Test 1: Implicit immutable declaration ===")
count = 10                    # First assignment - declares immutable variable
print("count:", count)
# count = 15                  # ❌ Would error: cannot reassign immutable

print("\n=== Test 2: Implicit mutable declaration ===")
count_ = 20                   # First assignment - declares mutable variable
print("count_:", count_)
count_ = 25                   # ✅ Reassignment allowed (mutable)
print("count_ after update:", count_)

print("\n=== Test 3: Implicit constant declaration ===")
MAX_SIZE = 100                # First assignment - declares constant
print("MAX_SIZE:", MAX_SIZE)
# MAX_SIZE = 200              # ❌ Would error: cannot reassign constant

print("\n=== Test 4: Explicit val keyword ===")
val explicit = 30             # Explicitly immutable
print("explicit:", explicit)
# explicit = 40               # ❌ Would error: cannot reassign

print("\n=== Test 5: Explicit var keyword ===")
var mutable = 50              # Explicitly mutable
print("mutable:", mutable)
mutable = 60                  # ✅ Reassignment allowed
print("mutable after update:", mutable)

print("\n=== Test 6: Functional updates on implicit immutable ===")
numbers = [1, 2, 3]           # Implicit immutable array
print("numbers:", numbers)
numbers->append(4)->append(5) # ✅ Functional update allowed
print("numbers after update:", numbers)

print("\n=== All implicit declaration tests passed! ===")
