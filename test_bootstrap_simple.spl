# Test Bootstrap Module (Simplified)

use app.build.bootstrap_simple (Bootstrap, default_bootstrap_config)

fn main():
    print "Testing Bootstrap Pipeline (Simplified)"
    print "========================================"
    print ""

    val config = default_bootstrap_config()
    print "Config:"
    print "  profile: {config.profile}"
    print "  verify: {config.verify}"
    print "  ✓ Config created"

    print "\nRunning quick bootstrap..."
    val result = Bootstrap.quick()

    print "\nResult:"
    print "  Stage1 success: {result.stage1.success}"
    print "  Stage2 success: {result.stage2.success}"
    print "  Stage3 success: {result.stage3.success}"
    print "  Verified: {result.verified}"
    print "  Overall success: {result.overall_success}"

    if result.overall_success:
        print "\n✓ Bootstrap module structure working!"
        return 0
    else:
        return 1
