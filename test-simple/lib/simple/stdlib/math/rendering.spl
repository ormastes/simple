# Math Rendering - Format helpers for math expression output
#
# Provides convenience functions for rendering math expressions
# to different output formats (LaTeX, MathML, Unicode text, Lean4).

import math.backend (RenderFormat)

# ============================================================================
# Rendering Helpers
# ============================================================================

fn render_all(expr) -> Dict<text, text>:
    """Render a math expression to all available formats.

    Returns a dictionary mapping format name to rendered string.
    """
    {
        "latex": expr.to_latex(),
        "mathml": expr.to_mathml(),
        "text": expr.to_text(),
        "lean": expr.to_lean()
    }

fn render_as(expr, format: RenderFormat) -> text:
    """Render a math expression to a specific format."""
    match format:
        case LaTeX: expr.to_latex()
        case MathML: expr.to_mathml()
        case Text: expr.to_text()
        case Lean: expr.to_lean()

# ============================================================================
# Exports
# ============================================================================

export render_all, render_as
