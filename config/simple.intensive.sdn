test_config:
  name: "Intensive Testing Suite"
  directories: ["test/intensive"]
  timeout: 3600
  parallel: true
  coverage: true

intensive_config:
  database_stress:
    max_rows: 100000
    max_concurrent: 10
    duration_seconds: 60

  mcp_stress:
    max_requests: 10000
    concurrent_connections: 5
    timeout_ms: 5000

  performance_targets:
    database_insert_rate: 10000  # rows/sec
    database_query_time: 100     # ms
    mcp_response_time: 200       # ms
