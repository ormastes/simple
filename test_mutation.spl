# Test that mutation works with auto-assignment

# Test 1: push on var binding
var arr = [1, 2, 3]
print("Before push:", arr)
arr.push(4)
print("After push:", arr)
# Expected: [1, 2, 3, 4]

# Test 2: pop on var binding
var arr2 = [1, 2, 3]
print("Before pop:", arr2)
val popped = arr2.pop()
print("After pop:", arr2)
print("Popped value:", popped)
# Expected: arr2 = [1, 2], popped = 3

# Test 3: Multiple operations
var arr3 = [1, 2]
arr3.push(3)
arr3.push(4)
arr3.pop()
print("After multiple ops:", arr3)
# Expected: [1, 2, 3]

print("\nâœ“ All mutation tests completed!")
