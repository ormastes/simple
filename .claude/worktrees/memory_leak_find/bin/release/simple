#!/usr/bin/env bash
set -euo pipefail
SELF_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
TAG_FILE="$SELF_DIR/downloaded/current_tag"
if [ ! -f "$TAG_FILE" ]; then
  echo "Missing current_tag file for downloaded release" >&2
  exit 1
fi
TAG="$(cat "$TAG_FILE")"
BIN="$SELF_DIR/downloaded/$TAG/simple.bin"
LIBDIR="$SELF_DIR/downloaded/$TAG/lib"
export LD_LIBRARY_PATH="$LIBDIR:${LD_LIBRARY_PATH:-}"
exec "$BIN" "$@"
