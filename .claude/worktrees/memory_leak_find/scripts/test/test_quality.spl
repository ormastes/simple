# Test Quality Tools
# Validation test for quality module structure

use app.build.quality (
    Lint,
    Format,
    Check,
    LintConfig,
    FormatConfig,
    CheckConfig,
    default_lint_config,
    default_format_config,
    default_check_config,
    print_quality_result
)

fn main():
    print "Testing Simple Quality Tools"
    print "============================"
    print ""

    # Test 1: Create default configurations
    print "Test 1: Default configurations"
    val lint_config = default_lint_config()
    print "  lint_config.workspace: {lint_config.workspace}"
    print "  lint_config.auto_fix: {lint_config.auto_fix}"

    val format_config = default_format_config()
    print "  format_config.workspace: {format_config.workspace}"
    print "  format_config.check_only: {format_config.check_only}"

    val check_config = default_check_config()
    print "  check_config.run_lint: {check_config.run_lint}"
    print "  check_config.run_format: {check_config.run_format}"
    print "  ✓ Default configs created"

    # Test 2: Configuration customization
    print "\nTest 2: Configuration customization"
    var custom_lint = default_lint_config()
    custom_lint.auto_fix = true
    custom_lint.fail_on_warnings = true
    print "  custom_lint.auto_fix: {custom_lint.auto_fix}"
    print "  custom_lint.fail_on_warnings: {custom_lint.fail_on_warnings}"
    print "  ✓ Config customization working"

    # Test 3: Check configuration
    print "\nTest 3: Check configuration"
    var check = CheckConfig(
        run_lint: true,
        run_format: true,
        run_tests: false,
        auto_fix: false,
        fail_fast: true
    )
    print "  check.run_lint: {check.run_lint}"
    print "  check.fail_fast: {check.fail_fast}"
    print "  ✓ CheckConfig structure working"

    print "\n✓ Quality tools structure validated!"
    print "\nTo run actual quality checks:"
    print "  - Lint.quick() for quick lint check"
    print "  - Format.check() to check formatting"
    print "  - Check.quick() for lint + format"
    print "  - Check.full() for lint + format + test"

    return 0
