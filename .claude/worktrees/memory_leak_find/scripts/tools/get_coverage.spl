# Coverage Data Retrieval Script
#
# Run this after tests with SIMPLE_COVERAGE=1 to get coverage data

use std.tooling.coverage as cov

# Check if coverage is enabled
if cov.is_coverage_enabled():
    print "Coverage is enabled!"

    # Get coverage data in SDN format
    val coverage_sdn = cov.get_coverage_sdn()
    print coverage_sdn

    # Save to file
    cov.save_coverage_data(quiet: false)
    print "\nCoverage data saved to .coverage/coverage.sdn"
else:
    print "Coverage is NOT enabled. Run with SIMPLE_COVERAGE=1"
