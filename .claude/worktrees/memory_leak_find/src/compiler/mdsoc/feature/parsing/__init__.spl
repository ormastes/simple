# Parsing Feature Module
#
# Pipeline stage: Token stream â†’ AST
# Layer: app (stage logic)
# Dimension: feature

arch {
  dimension = "feature"
  layer = "app"

  imports {
    allow = [
      "compiler/transform/feature/lexing_to_parsing/**",
      "core/entity/token/**",
      "core/entity/ast/**",
      "shared/**"
    ]
    deny = [
      "compiler/feature/desugaring/**",
      "compiler/feature/type_checking/**"
    ]
  }

  exports {
    expose = ["./app/ports"]
  }
}
