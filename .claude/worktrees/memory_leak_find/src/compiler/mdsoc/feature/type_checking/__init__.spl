# Type Checking Feature Module
#
# Pipeline stage: Desugared AST â†’ Typed AST
# Layer: app
# Dimension: feature

arch {
  dimension = "feature"
  layer = "app"

  imports {
    allow = [
      "compiler/transform/feature/desugaring_to_typing/**",
      "core/entity/ast/**",
      "core/entity/hir/**",
      "core/entity/types/**",
      "shared/**"
    ]
    deny = [
      "compiler/feature/hir_lowering/**",
      "compiler/feature/mir_lowering/**"
    ]
  }

  exports {
    expose = ["./app/ports"]
  }
}
