# Transform: typing_to_hir
#
# Bridges type checking output → HIR lowering input.
# Reconciles: typed AST (source-oriented) → HIR context (type-resolved).
# Design: doc/research/compiler_mdsoc_design.md Section 4.1

arch {
  dimension = "transform"
  layer = "none"

  transform {
    from = "feature/type_checking"
    to   = "feature/hir_lowering"
    allow_from = [
      "core/entity/ast/**",
      "core/entity/types/**",
      "core/entity/hir/**"
    ]
  }

  imports {
    allow = [
      "core/entity/ast/**",
      "core/entity/types/**",
      "core/entity/hir/**",
      "shared/**"
    ]
    deny = ["compiler/feature/**"]
  }

  exports {
    expose = ["./entity_view/TypedAstView"]
  }
}
