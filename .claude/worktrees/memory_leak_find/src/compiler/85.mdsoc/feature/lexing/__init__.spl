# Lexing Feature Module
#
# Pipeline stage: Source text â†’ Token stream
# Layer: app (stage logic)
# Dimension: feature

arch {
  dimension = "feature"
  layer = "app"

  imports {
    allow = [
      "core/entity/token/**",
      "shared/**"
    ]
    deny = [
      "compiler/feature/parsing/**",
      "compiler/feature/desugaring/**",
      "core/entity/ast/**"
    ]
  }

  exports {
    expose = ["./app/ports"]
  }
}
