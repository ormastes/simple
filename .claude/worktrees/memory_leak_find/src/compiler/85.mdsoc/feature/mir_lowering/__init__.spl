# MIR Lowering Feature Module
#
# Pipeline stage: HIR â†’ MIR (basic blocks)
# Layer: app
# Dimension: feature

arch {
  dimension = "feature"
  layer = "app"

  uses_transform = "compiler/transform/feature/hir_to_mir"

  imports {
    allow = [
      "compiler/transform/feature/hir_to_mir/**",
      "core/entity/mir/**",
      "core/entity/hir/**",
      "shared/**"
    ]
    deny = [
      "compiler/feature/hir_lowering/**",
      "compiler/feature/codegen/**"
    ]
  }

  exports {
    expose = ["./app/ports"]
  }
}
