# Linking Feature Module
#
# Pipeline stage: Object files â†’ Linked executable or library
# Layer: app
# Dimension: feature

arch {
  dimension = "feature"
  layer = "app"

  imports {
    allow = [
      "shared/**"
    ]
    deny = [
      "compiler/feature/codegen/**",
      "compiler/feature/optimization/**",
      "compiler/backend/**"
    ]
  }

  exports {
    expose = ["./app/ports"]
  }
}
