# Module Loading Feature Module
#
# Responsible for: module path resolution, source reading, export tracking.
# Ports allow swapping file system access with in-memory mocks for tests.
#
# Design: doc/report/compiler_mdsoc_impl_plan.md Phase 5

arch {
  dimension = "feature"
  layer = "app"

  imports {
    allow = [
      "compiler/adapters/**",
      "core/entity/token/**",
      "shared/**"
    ]
    deny = [
      "compiler/feature/lexing/**",
      "compiler/feature/parsing/**"
    ]
  }

  exports {
    expose = ["./app/ports"]
  }
}
