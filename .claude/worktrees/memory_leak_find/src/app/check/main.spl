# Simple CLI - check command
# Uses new type inference system

use app.cli.check (run_check)
use app.io.mod (cli_get_args)

fn get_cli_args() -> [str]:
    val all_args = cli_get_args()
    var args = []
    var start_idx = 1
    if all_args.len() > 1 and all_args[1].ends_with("main.spl"):
        start_idx = 2
    var i = start_idx
    while i < all_args.len():
        args.push(all_args[i])
        i = i + 1
    args

fn main() -> i64:
    val args = get_cli_args()
    run_check(args)
