# Registry Types
# Core data structures for the GHCR-based package registry

# Package metadata from the index
struct PackageInfo:
    name: text
    description: text
    homepage: text
    license: text
    repository: text

# A single published version
struct VersionEntry:
    version: text
    checksum: text
    oci_ref: text
    yanked: bool
    published_at: text

# Dependency of a specific version
struct VersionDependency:
    version: text
    name: text
    constraint: text

# Full index entry for a package
struct IndexEntry:
    package: PackageInfo
    versions: [VersionEntry]
    dependencies: [VersionDependency]

# Registry credentials
struct Credentials:
    token: text
    token_type: text

# Result of a publish operation
struct PublishResult:
    success: bool
    message: text
    oci_ref: text
    checksum: text

# Search result item
struct SearchResult:
    name: text
    description: text
    latest_version: text

# Registry configuration
struct RegistryConfig:
    registry_url: text
    index_url: text
    cache_dir: text
    credentials_path: text
