# Fraction Simplification Functions

fn gcd(a: i64, b: i64) -> i64:
    val abs_a = if a < 0: -a else: a
    val abs_b = if b < 0: -b else: b

    var x = abs_a
    var y = abs_b

    loop:
        if y == 0:
            break

        val temp = y
        y = x % y
        x = temp

    return x

fn lcm(a: i64, b: i64) -> i64:
    if a == 0 or b == 0:
        return 0

    val abs_a = if a < 0: -a else: a
    val abs_b = if b < 0: -b else: b
    val g = gcd(abs_a, abs_b)

    return (abs_a / g) * abs_b

fn reduce(frac: (i64, i64)) -> (i64, i64):
    val num = frac.0
    val den = frac.1

    if num == 0:
        return (0, 1)

    val g = gcd(num, den)
    return (num / g, den / g)

fn simplify(frac: (i64, i64)) -> (i64, i64):
    return reduce(frac)
