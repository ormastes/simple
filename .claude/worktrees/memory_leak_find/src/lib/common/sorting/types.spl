# Sorting - Type Definitions and Comparators

# ============================================================================
# Comparator Functions
# ============================================================================

fn ascending_comparator(a: i64, b: i64) -> i64:
    if a < b:
        -1
    else if a > b:
        1
    else:
        0

fn descending_comparator(a: i64, b: i64) -> i64:
    if a > b:
        -1
    else if a < b:
        1
    else:
        0

fn abs_comparator(a: i64, b: i64) -> i64:
    val abs_a = if a < 0: -a else: a
    val abs_b = if b < 0: -b else: b
    if abs_a < abs_b:
        -1
    else if abs_a > abs_b:
        1
    else:
        0

# ============================================================================
# Exports
# ============================================================================

export ascending_comparator, descending_comparator, abs_comparator
