# @platform: all
"""
Hello World Specification

A minimal sanity check test to verify the test framework is operational.
"""

describe "Hello":
    """
    Basic sanity test that validates the test framework can execute
    simple equality checks.
    """
    it "verifies basic equality":
        expect(1).to_equal(1)

    it "verifies basic inequality":
        expect(1 + 1).to_equal(2)

    it "verifies string equality":
        expect("hello").to_equal("hello")

    it "verifies boolean truth":
        expect(true).to_equal(true)
