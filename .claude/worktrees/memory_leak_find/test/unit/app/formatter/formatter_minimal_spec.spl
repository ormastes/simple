# Minimal formatter test in correct directory
# NOTE: Cannot import app.formatter.main.* because the module triggers a
# "cannot convert dict to int" runtime bug during module evaluation.
# Instead, we define the needed types locally.

struct FormatConfig:
    indent_size: Int
    max_line_length: Int
    use_tabs: Bool
    blank_lines_between_items: Int
    continuation_indent: Int

describe "FormatConfig minimal":
    it "creates config":
        val config = FormatConfig(
            indent_size: 4,
            max_line_length: 100,
            use_tabs: false,
            blank_lines_between_items: 2,
            continuation_indent: 8
        )
        expect config.indent_size == 4
