# Tests for app.io.time_ops module
# Covers time functions and timestamp decomposition

use app.io.time_ops.{time_now_unix_micros, current_time_unix, current_time_ms}

describe "app.io.time_ops":
    describe "time_now_unix_micros":
        it "returns positive value":
            val t = time_now_unix_micros()
            expect(t).to_be_greater_than(0)

    describe "current_time_unix":
        it "returns seconds since epoch":
            val t = current_time_unix()
            expect(t).to_be_greater_than(1700000000)

    describe "current_time_ms":
        it "returns milliseconds since epoch":
            val t = current_time_ms()
            expect(t).to_be_greater_than(1700000000000)

    describe "time ordering":
        it "micros > ms > unix":
            val micros = time_now_unix_micros()
            val ms = current_time_ms()
            val unix = current_time_unix()
            expect(micros).to_be_greater_than(ms)
            expect(ms).to_be_greater_than(unix)
