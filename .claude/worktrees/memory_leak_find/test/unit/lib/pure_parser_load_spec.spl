# Test if pure parser loads

use std.parser.parser (parse_expr)
use std.parser.lexer (lex_source)

describe "Pure Parser Loading":
    it "can import parser module":
        expect(true).to_equal(true)

    it "can call lex_source":
        val tokens = lex_source("1 + 2")
        expect(tokens.len() > 0).to_equal(true)

    it "can parse simple expression":
        val result = parse_expr("1 + 2")
        match result:
            case Ok(_):
                expect(true).to_equal(true)
            case Err(e):
                print "Parse error: {e.message}"
                expect(true).to_equal(false)
